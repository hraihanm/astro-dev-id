      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-slate-100 bg-white">
      <div class="px-4 py-3 space-y-1">
        <a href="/courses" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
          <Icon name="book-stack" class="w-4 h-4" />
          <span>Kursus</span>
        </a>
        <a href="/quizzes" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
          <Icon name="pencil" class="w-4 h-4" />
          <span>Kuis Latihan</span>
        </a>
        {user && (
          <a href="/dashboard" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
            <Icon name="bar-chart" class="w-4 h-4" />
            <span>Dashboard</span>
          </a>
        )}
      </div>
    </div>
  </header>
  
  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Quiz queue dropdown
    const qqBtn = document.getElementById('quiz-queue-btn');
    const qqPanel = document.getElementById('quiz-queue-panel');
    const qqList = document.getElementById('quiz-queue-list');
    const qqCount = document.getElementById('quiz-queue-count');
    const QUEUE_PREFIX = 'quiz_queue_';
    const QUEUE_MAX_RECENTS = 5;
    const QUEUE_EXPIRE_MS = 14 * 24 * 60 * 60 * 1000; // 14 days for released history

    function qqFormatTime(totalSeconds) {
      const n = Math.max(0, Math.floor(totalSeconds));
      const h = Math.floor(n / 3600).toString().padStart(2, '0');
      const m = Math.floor((n % 3600) / 60).toString().padStart(2, '0');
      const s = (n % 60).toString().padStart(2, '0');
      return `${h}:${m}:${s}`;
    }

    function extractAttemptIdFromUrl(url) {
      if (!url) return null;
      const match = url.match(/\/review\/(\d+)/);
      return match ? parseInt(match[1]) : null;
    }

    function qqRead() {
      const items = [];
      if (typeof localStorage === 'undefined') return items;
      Object.keys(localStorage).forEach((k) => {
        if (!k.startsWith(QUEUE_PREFIX)) return;
        try {
          const data = JSON.parse(localStorage.getItem(k));
          if (!data || !data.quizId) return;
          // Recover attemptId from url if missing
          if (!data.attemptId && data.url) {
            const recovered = extractAttemptIdFromUrl(data.url);
            if (recovered) {
              data.attemptId = recovered;
              localStorage.setItem(k, JSON.stringify(data));
            }
          }
          const remaining = data.remainingTime != null ? data.remainingTime : 0;
          const pendingResult = data.status === 'pending_result';
          const released = data.status === 'released';
          const savedAt = data.savedAt || Date.now();
          if (released && Date.now() - savedAt > QUEUE_EXPIRE_MS) {
            localStorage.removeItem(k);
            return;
          }
          if (remaining <= 0 && !pendingResult && !released) {
            localStorage.removeItem(k);
            return;
          }
          items.push(data);
        } catch (e) {
          // ignore malformed entries
        }
      });
      return items.sort((a, b) => {
        const aPending = a.status === 'pending_result';
        const bPending = b.status === 'pending_result';
        const aReleased = a.status === 'released';
        const bReleased = b.status === 'released';
        // Active first (with remainingTime), then pending, then released recents
        if (!aPending && !aReleased && (bPending || bReleased)) return -1;
        if (!bPending && !bReleased && (aPending || aReleased)) return 1;
        if (aPending !== bPending) return aPending ? -1 : 1; // pending before released
        if (aReleased && bReleased) {
          return (b.completedAt || b.savedAt || 0) - (a.completedAt || a.savedAt || 0);
        }
        return (a.remainingTime || 0) - (b.remainingTime || 0);
      });
    }

    function qqRender() {
      const items = qqRead();
      if (!qqList || !qqCount) return;
      qqCount.classList.toggle('hidden', items.length === 0);
      if (items.length) qqCount.textContent = items.length;
      if (!items.length) {
        qqList.innerHTML = `<p class="text-slate-500 text-sm">Tidak ada kuis aktif.</p>`;
        return;
      }
      const limited = items.slice(0, QUEUE_MAX_RECENTS);
      qqList.innerHTML = limited.map((item) => {
        const typeLabel = item.quizType === 'exam' ? 'Try Out (Exam)' : 'Latihan';
        const deadline = item.availableUntil
          ? `<span class="text-[11px] text-amber-600">Tutup: ${new Date(item.availableUntil).toLocaleString('id-ID')}</span>`
          : '';
        const isPending = item.status === 'pending_result';
        const isReleased = item.status === 'released';
        const badge = isPending
          ? `<span class="px-2 py-1 rounded-md text-[11px] font-semibold bg-amber-50 text-amber-700 border border-amber-100">Menunggu hasil</span>`
          : isReleased
            ? `<span class="px-2 py-1 rounded-md text-[11px] font-semibold bg-emerald-50 text-emerald-700 border border-emerald-100">${item.percentage != null ? `${item.percentage}%` : 'Selesai'}</span>`
            : `<span class="px-2 py-1 rounded-md text-[11px] font-semibold bg-blue-50 text-blue-700 border border-blue-100">${qqFormatTime(item.remainingTime || 0)}</span>`;
        const footer = isPending
          ? 'Menunggu rilis skor'
          : isReleased
            ? 'Skor sudah dirilis'
            : 'Sedang berlangsung';
        const targetUrl = (() => {
          // Pending/released must go to review when possible
          if (isPending || isReleased) {
            if (item.attemptId) return `/quizzes/${item.quizId}/review/${item.attemptId}`;
            if (item.url && item.url.includes('/review/')) return item.url;
            return '/quizzes/history';
          }
          // Active or unknown status
          if (item.url) return item.url;
          return `/quizzes/${item.quizId}`;
        })();
        return `
          <div class="border border-slate-100 rounded-lg px-3 py-2.5 hover:border-blue-200 hover:shadow-sm transition">
            <div class="flex items-start justify-between gap-2">
              <div class="space-y-0.5">
                <p class="text-sm font-semibold text-slate-900 line-clamp-2">${item.title || 'Kuis'}</p>
                <p class="text-xs text-slate-500">${typeLabel}</p>
                ${deadline}
              </div>
              ${badge}
            </div>
            <div class="mt-2 flex items-center justify-between text-xs text-slate-500">
              <span>${footer}</span>
              <a href="${targetUrl}" class="inline-flex items-center gap-1 text-[11px] font-semibold text-blue-600 hover:text-blue-700">
                ${isReleased ? 'Lihat hasil' : (isPending ? 'Lihat status' : 'Lanjutkan')}
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        `;
      }).join('');
    }

    qqBtn?.addEventListener('click', () => {
      if (!qqPanel) return;
      qqPanel.classList.toggle('hidden');
    });

    document.addEventListener('click', (e) => {
      if (!qqPanel || !qqBtn) return;
      if (!qqPanel.contains(e.target) && !qqBtn.contains(e.target)) {
        qqPanel.classList.add('hidden');
      }
    });

    setInterval(() => {
      const items = qqRead();
      items.forEach((item) => {
        const isPending = item.status === 'pending_result';
        if (!isPending) {
          item.remainingTime = Math.max(0, (item.remainingTime || 0) - 1);
          localStorage.setItem(`${QUEUE_PREFIX}${item.quizId}`, JSON.stringify(item));
        }
      });
      qqRender();
    }, 1000);

    qqRender();
  </script>
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
    <slot />
  </main>

  <footer class="bg-white border-t border-slate-200 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <!-- Brand -->
        <div class="col-span-2 md:col-span-1">
          <a href="/" class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center text-white font-bold text-lg shadow-sm">
              A
            </div>
            <span class="text-lg font-bold text-slate-900">{siteContent.nav.myLearningPortal}</span>
          </a>
          <p class="text-sm text-slate-500 leading-relaxed">
            Platform pembelajaran komprehensif untuk persiapan Olimpiade Astronomi.
          </p>
        </div>
        
        <!-- Links -->
        <div>
          <h4 class="font-semibold text-slate-900 mb-3 text-sm">Belajar</h4>
          <ul class="space-y-2">
            <li><a href="/courses" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Kursus</a></li>
            <li><a href="/quizzes" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Kuis Latihan</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-semibold text-slate-900 mb-3 text-sm">Akun</h4>
          <ul class="space-y-2">
            <li><a href="/dashboard" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Dashboard</a></li>
            <li><a href="/profile" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Profil</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-semibold text-slate-900 mb-3 text-sm">Lainnya</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Tentang Kami</a></li>
            <li><a href="#" class="text-sm text-slate-500 hover:text-blue-600 transition-colors">Kontak</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-slate-100 mt-8 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-slate-500">
          &copy; {new Date().getFullYear()} {siteContent.nav.myLearningPortal}. All rights reserved.
        </p>
        <div class="flex items-center gap-4">
          <a href="#" class="text-slate-400 hover:text-slate-600 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
          </a>
          <a href="#" class="text-slate-400 hover:text-slate-600 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
