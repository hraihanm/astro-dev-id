                  {user.role === 'admin' && (
                    <a href="/admin" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50">
                      <Icon name="settings-sliders" class="w-4 h-4 text-slate-500" />
                      {siteContent.nav.admin}
                    </a>
                  )}
                  <a href="/profile" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50">
                    <Icon name="user" class="w-4 h-4 text-slate-500" />
                    {siteContent.nav.profile}
                  </a>
                  <hr class="my-2 border-slate-100" />
                  <form action="/api/auth/signout" method="POST">
                    <button type="submit" class="flex items-center gap-3 w-full px-4 py-2.5 text-sm text-red-600 hover:bg-red-50">
                      <Icon name="logout" class="w-4 h-4 text-red-500" />
                      {siteContent.nav.signOut}
                    </button>
                  </form>
                </div>
              </div>
            </div>
          ) : (
            <div class="flex items-center gap-2">
              <a href="/auth/signin" class="text-slate-600 font-medium text-sm hover:text-blue-600 px-3 py-2 rounded-lg hover:bg-slate-50 transition-colors">
                {siteContent.nav.signIn}
