    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-slate-100 bg-white">
      <div class="px-4 py-3 space-y-1">
        <a href="/courses" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
          <Icon name="book-stack" class="w-4 h-4" />
          <span>Kursus</span>
        </a>
        <a href="/quizzes" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
          <Icon name="pencil" class="w-4 h-4" />
          <span>Kuis Latihan</span>
        </a>
        {user && (
          <a href="/dashboard" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 rounded-lg">
            <Icon name="bar-chart" class="w-4 h-4" />
            <span>Dashboard</span>
          </a>
        )}
      </div>
    </div>
  </header>
  
  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Quiz queue dropdown
    const qqBtn = document.getElementById('quiz-queue-btn');
    const qqPanel = document.getElementById('quiz-queue-panel');
    const qqList = document.getElementById('quiz-queue-list');
    const qqCount = document.getElementById('quiz-queue-count');
    const QUEUE_PREFIX = 'quiz_queue_';
    const QUEUE_MAX_RECENTS = 5;
    const QUEUE_EXPIRE_MS = 14 * 24 * 60 * 60 * 1000; // 14 days for released history

    // Type definitions
    interface QuizQueueItem {
      quizId: string | number;
      title?: string;
      quizType?: string;
      status: 'active' | 'pending_result' | 'released';
      remainingTime?: number;
      completedAt?: number;
      savedAt?: number;
      attemptId?: number;
      url?: string;
      availableUntil?: string;
      percentage?: number;
      scoreReleasedAt?: number;
      seen?: boolean;
      timerEndAt?: number;
      _key?: string;
    }

    interface WindowExtensions {
      qqMarkAsViewed?: (quizId: string | number) => boolean;
      qqRemoveByKey?: (key: string) => boolean;
      qqRender?: () => void;
      qqCheckAllPending?: () => Promise<void>;
      qqValidateAllItems?: () => Promise<boolean>;
      lastQueueCheck?: number;
    }

    declare global {
      interface Window extends WindowExtensions {}
    }

    function qqFormatTime(totalSeconds: number): string {
      const n = Math.max(0, Math.floor(totalSeconds));
      const h = Math.floor(n / 3600).toString().padStart(2, '0');
      const m = Math.floor((n % 3600) / 60).toString().padStart(2, '0');
      const s = (n % 60).toString().padStart(2, '0');
      return `${h}:${m}:${s}`;
    }

    function extractAttemptIdFromUrl(url: string): number | null {
      if (!url) return null;
      const match = url.match(/\/review\/(\d+)/);
      return match ? parseInt(match[1]) : null;
    }

    async function qqCheckReleasedStatus(item: QuizQueueItem): Promise<boolean> {
      // Only check if status is pending_result and we have an attemptId
      if (item.status !== 'pending_result' || !item.attemptId) {
        return false;
      }
      
      try {
        const response = await fetch(`/api/quiz/attempt-status?attemptId=${item.attemptId}`);
        if (response.status === 404) {
          // Attempt not found - it was deleted, remove from queue
          const key = item._key || `${QUEUE_PREFIX}${item.quizId}`;
          localStorage.removeItem(key);
          return true; // Return true to indicate we made a change (removed invalid entry)
        }
        if (response.ok) {
          const data = await response.json();
          if (data.isReleased) {
            // Update the entry to released status
            const key = item._key || `${QUEUE_PREFIX}${item.quizId}`;
            const updatedEntry = {
              ...item,
              status: 'released',
              percentage: data.percentage ?? null,
              scoreReleasedAt: data.scoreReleasedAt,
              seen: false, // Mark as not seen yet
              savedAt: Date.now()
            };
            const { _key, ...dataToSave } = updatedEntry;
            localStorage.setItem(key, JSON.stringify(dataToSave));
            return true;
          }
        }
      } catch (e) {
        console.warn('Failed to check attempt status:', e);
      }
      return false;
    }
    
    async function qqValidateItem(item: QuizQueueItem): Promise<boolean> {
      // Returns true if item is valid, false if it should be removed
      // For items with attemptId (pending/released), check if attempt exists
      if (item.attemptId) {
        try {
          const response = await fetch(`/api/quiz/attempt-status?attemptId=${item.attemptId}`);
          if (response.status === 404) {
            // Attempt not found - remove it
            return false;
          }
          // If response is ok, attempt exists
          return response.ok;
        } catch (e) {
          // On error, assume it's still valid (don't remove on network errors)
          return true;
        }
      }
      
      // For active quizzes without attemptId, we could check quiz existence
      // but that's more expensive. For now, we'll validate on click.
      // Active quizzes are validated when user clicks on them.
      return true;
    }
    
    async function qqValidateAllItems(): Promise<boolean> {
      // Validate all items and remove invalid ones
      const items = qqRead();
      if (items.length === 0) return false;
      
      // Only validate items with attemptId (pending/released)
      // Active quizzes are validated on click
      const itemsToValidate = items.filter(item => item.attemptId);
      if (itemsToValidate.length === 0) return false;
      
      const validations = itemsToValidate.map(async (item) => {
        const isValid = await qqValidateItem(item);
        if (!isValid) {
          const key = item._key || `${QUEUE_PREFIX}${item.quizId}`;
          localStorage.removeItem(key);
          return true; // Item was removed
        }
        return false; // Item is valid
      });
      
      const results = await Promise.all(validations);
      return results.some(r => r); // Return true if any items were removed
    }
    
    async function qqCheckAllPending() {
      const items = qqRead();
      const pendingItems = items.filter(item => item.status === 'pending_result' && item.attemptId);
      
      if (pendingItems.length === 0) return;
      
      // Check all pending items in parallel
      const checks = pendingItems.map(item => qqCheckReleasedStatus(item));
      const results = await Promise.all(checks);
      
      // If any were updated or removed, re-render
      if (results.some(r => r)) {
        qqRender();
      }
    }
    
    function qqMarkAsViewed(quizId: string | number): boolean {
      // Find and remove all entries for this quiz (backup removal)
      let removed = false;
      Object.keys(localStorage).forEach(k => {
        if (k.startsWith(QUEUE_PREFIX)) {
          try {
            const data = JSON.parse(localStorage.getItem(k) || '{}');
            if (data && String(data.quizId) === String(quizId)) {
              localStorage.removeItem(k);
              removed = true;
            }
          } catch (e) {
            // Ignore parse errors
          }
        }
      });
      if (removed && window.qqRender) {
        window.qqRender();
      }
      return removed;
    }
    
    function qqRemoveByKey(key: string): boolean {
      if (key && localStorage.getItem(key)) {
        localStorage.removeItem(key);
        // Force immediate UI update synchronously
        qqRender();
        // Also trigger storage event for other tabs
        window.dispatchEvent(new Event('storage'));
        return true;
      }
      return false;
    }

    function qqRead(): QuizQueueItem[] {
      const items: QuizQueueItem[] = [];
      if (typeof localStorage === 'undefined') return items;
      
      // Track seen quiz IDs to prevent duplicates
      const seenQuizIds = new Set();
      
      // First, clean up any invalid or expired entries
      Object.keys(localStorage).forEach((k) => {
        if (!k.startsWith(QUEUE_PREFIX)) return;
        try {
          const data = JSON.parse(localStorage.getItem(k) || '{}');
          if (!data.quizId) {
            localStorage.removeItem(k);
            return;
          }
          
          // Recover attemptId from url if missing
          if (!data.attemptId && data.url) {
            const recovered = extractAttemptIdFromUrl(data.url);
            if (recovered) {
              data.attemptId = recovered;
              localStorage.setItem(k, JSON.stringify(data));
            }
          }
          
          const remaining = data.remainingTime != null ? data.remainingTime : 0;
          const pendingResult = data.status === 'pending_result';
          const released = data.status === 'released';
          const savedAt = data.savedAt || Date.now();
          
          // Remove if entry is too old
          if (Date.now() - savedAt > QUEUE_EXPIRE_MS) {
            localStorage.removeItem(k);
            return;
          }
          
          // Determine quiz state
          // It is active if:
          // 1. Explicitly marked as active, OR
          // 2. Has remaining time and is not completed/pending/released
          const isActive = data.status === 'active' || 
                          (remaining > 0 && !data.completedAt && !pendingResult && !released);
          
          // If it's not active, pending, or recently released, skip it
          if (!isActive && !pendingResult && !released) {
            localStorage.removeItem(k);
            return;
          }
          
          // Remove released entries that have been seen (user has viewed the result)
          if (released && data.seen === true) {
            localStorage.removeItem(k);
            return;
          }
          
          // Check if we already have this quiz in our items
          const existingIndex = items.findIndex((item: QuizQueueItem) => String(item.quizId) === String(data.quizId));
          
          if (existingIndex === -1) {
            // New quiz, add it
            items.push({ ...data, _key: k });
          } else {
            // Existing quiz, update if this one is more relevant
            const existing = items[existingIndex];
            const existingRemaining = existing.remainingTime || 0;
            const existingIsActive = existingRemaining > 0 && !existing.completedAt && 
                                  existing.status !== 'pending_result' && 
                                  existing.status !== 'released';
            
            // Determine which one to keep
            // We keep the NEW one if:
            // 1. New is active and old is not
            // 2. Both are active (or both inactive), and new is more recent
            const shouldReplace = (isActive && !existingIsActive) || 
                                 ((isActive === existingIsActive) && savedAt > (existing.savedAt || 0));

            if (shouldReplace) {
              // Remove the old entry from storage
              if (existing._key) localStorage.removeItem(existing._key);
              // Replace with new
              items[existingIndex] = { ...data, _key: k };
            } else {
              // Remove the new (duplicate/stale) entry from storage
              localStorage.removeItem(k);
            }
          }
          
          // Mark this quiz ID as seen
          seenQuizIds.add(data.quizId);
        } catch (e) {
          // If we can't parse the data, remove the invalid entry
          localStorage.removeItem(k);
          return;
        }
      });
      
      // Sort items: active first, then pending, then released (newest first)
      return items.sort((a: QuizQueueItem, b: QuizQueueItem): number => {
        const aRemaining = a.remainingTime || 0;
        const bRemaining = b.remainingTime || 0;
        
        const aIsActive = aRemaining > 0 && !a.completedAt && 
                         a.status !== 'pending_result' && a.status !== 'released';
        const bIsActive = bRemaining > 0 && !b.completedAt && 
                         b.status !== 'pending_result' && b.status !== 'released';
        
        // Active quizzes first
        if (aIsActive && !bIsActive) return -1;
        if (!aIsActive && bIsActive) return 1;
        
        // Then pending results
        if (a.status === 'pending_result' && b.status !== 'pending_result') return -1;
        if (a.status !== 'pending_result' && b.status === 'pending_result') return 1;
        
        // Then released results (newest first)
        if (a.status === 'released' && b.status === 'released') {
          return (b.completedAt || b.savedAt || 0) - (a.completedAt || a.savedAt || 0);
        }
        
        // For active quizzes, sort by remaining time (ascending)
        if (aIsActive && bIsActive) {
          return aRemaining - bRemaining;
        }
        
        // Default: sort by savedAt (newest first)
        return (b.savedAt || 0) - (a.savedAt || 0);
      });
    }

    function qqRender() {
      const items = qqRead();
      if (!qqList || !qqCount) return;
      qqCount.classList.toggle('hidden', items.length === 0);
      if (items.length) qqCount.textContent = String(items.length);
      
      // Empty state
      if (!items.length) {
        qqList.innerHTML = `<p data-qq-placeholder="true" class="text-slate-500 text-sm">Tidak ada kuis aktif.</p>`;
        return;
      }
      
      // Remove placeholder without clearing hovered nodes
      qqList.querySelector('[data-qq-placeholder]')?.remove();
      
      const limited = items.slice(0, QUEUE_MAX_RECENTS);
      const existingNodes = new Map(
        Array.from(qqList.querySelectorAll('[data-queue-key]')).map((el) => [
          el.getAttribute('data-queue-key') || '',
          el as HTMLElement,
        ]),
      );
      const usedKeys = new Set<string>();
      
      limited.forEach((item) => {
        const typeLabel = item.quizType === 'exam' ? 'Try Out (Exam)' : 'Latihan';
        const deadlineText = item.availableUntil
          ? `Tutup: ${new Date(item.availableUntil).toLocaleString('id-ID')}`
          : '';
        const remaining = item.remainingTime || 0;
        const isPending = item.status === 'pending_result';
        const isReleased = item.status === 'released';
        const isActive = remaining > 0 && !item.completedAt && !isReleased && !isPending;
        const isSeen = item.seen === true;
        
        const badgeText = isActive
          ? qqFormatTime(remaining)
          : isPending
            ? 'Menunggu'
            : 'Selesai';
        const badgeClass = [
          'qq-badge',
          'px-2',
          'py-1',
          'rounded-md',
          'text-[11px]',
          'font-semibold',
          isActive
            ? 'bg-blue-50 text-blue-700 border border-blue-100'
            : isPending
              ? 'bg-amber-50 text-amber-700 border border-amber-100'
              : 'bg-emerald-50 text-emerald-700 border border-emerald-100',
        ].join(' ');
        
        const footerText = isPending
          ? 'Menunggu rilis skor'
          : isReleased
            ? (isSeen ? 'Skor sudah dirilis' : 'Skor sudah dirilis â€¢ Baru')
            : isActive
              ? 'Sedang berlangsung'
              : 'Belum dimulai';
        
        const targetUrl = (() => {
          if (isPending || isReleased) {
            if (item.attemptId) return `/quizzes/${item.quizId}/review/${item.attemptId}`;
            if (item.url && item.url.includes('/review/')) return item.url;
            return '/quizzes/history';
          }
          if (item.url) return item.url;
          return `/quizzes/${item.quizId}`;
        })();
        
        const itemKey = item._key || `${QUEUE_PREFIX}${item.quizId}`;
        const attemptId = item.attemptId || null;
        const itemStatus = item.status || '';
        
        const onClickHandlerAttr = `(async (e) => { 
          e.preventDefault(); 
          const key = '${itemKey.replace(/'/g, "\\'")}'; 
          const attemptId = ${attemptId ? `'${attemptId}'` : 'null'}; 
          const itemStatus = '${itemStatus.replace(/'/g, "\\'")}'; 
          
          if (attemptId) {
            try {
              const response = await fetch('/api/quiz/attempt-status?attemptId=' + attemptId);
              if (response.status === 404) {
                if (window.qqRemoveByKey) { window.qqRemoveByKey(key); }
                alert('Kuis atau hasil kuis ini sudah tidak tersedia.');
                return;
              }
            } catch (err) {
              console.warn('Failed to validate attempt:', err);
            }
          }
          
          if (itemStatus === 'released' && window.qqRemoveByKey) { 
            window.qqRemoveByKey(key); 
          }
          
          setTimeout(() => { window.location.href='${targetUrl.replace(/'/g, "\\'")}'; }, 150); 
        })(event)`;
        
        const linkLabel = isReleased ? 'Lihat hasil' : (isPending ? 'Lihat status' : 'Lanjutkan');
        const linkColorClass = isReleased && !isSeen
          ? 'text-emerald-600 hover:text-emerald-700'
          : 'text-blue-600 hover:text-blue-700';
        
        usedKeys.add(itemKey);
        let node = existingNodes.get(itemKey);
        
        const template = `
          <div class="flex items-start justify-between gap-2">
            <div class="space-y-0.5">
              <p class="qq-title text-sm font-semibold text-slate-900 line-clamp-2">${item.title || 'Kuis'}</p>
              <p class="qq-type text-xs text-slate-500">${typeLabel}</p>
              <span class="qq-deadline text-[11px] text-amber-600 ${deadlineText ? '' : 'hidden'}">${deadlineText}</span>
            </div>
            <span class="${badgeClass}">${badgeText}</span>
          </div>
          <div class="mt-2 flex items-center justify-between text-xs text-slate-500">
            <span class="qq-footer">${footerText}</span>
            <a href="${targetUrl}" onclick="${onClickHandlerAttr}" class="qq-link inline-flex items-center gap-1 text-[11px] font-semibold ${linkColorClass}">
              ${linkLabel}
              <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        `;
        
        // If node is missing or legacy (no structured children), recreate once
        if (!node || !node.querySelector('.qq-title')) {
          node = document.createElement('div');
          node.setAttribute('data-queue-key', itemKey);
          node.className = 'border border-slate-100 rounded-lg px-3 py-2.5 hover:border-blue-200 hover:shadow-sm transition';
          node.innerHTML = template;
          qqList.appendChild(node);
          return;
        }
        
        // Update in place to preserve hover state
        node.className = 'border border-slate-100 rounded-lg px-3 py-2.5 hover:border-blue-200 hover:shadow-sm transition';
        
        const titleEl = node.querySelector('.qq-title');
        if (titleEl) titleEl.textContent = item.title || 'Kuis';
        
        const typeEl = node.querySelector('.qq-type');
        if (typeEl) typeEl.textContent = typeLabel;
        
        const deadlineEl = node.querySelector('.qq-deadline') as HTMLElement | null;
        if (deadlineEl) {
          if (deadlineText) {
            deadlineEl.textContent = deadlineText;
            deadlineEl.classList.remove('hidden');
          } else {
            deadlineEl.textContent = '';
            deadlineEl.classList.add('hidden');
          }
        }
        
        const badgeEl = node.querySelector('.qq-badge') as HTMLElement | null;
        if (badgeEl) {
          badgeEl.textContent = badgeText;
          badgeEl.className = badgeClass;
        }
        
        const footerEl = node.querySelector('.qq-footer');
        if (footerEl) footerEl.textContent = footerText;
        
        const linkEl = node.querySelector('.qq-link') as HTMLAnchorElement | null;
        if (linkEl) {
          linkEl.textContent = linkLabel;
          linkEl.setAttribute('href', targetUrl);
          linkEl.setAttribute('onclick', onClickHandlerAttr);
          linkEl.className = `qq-link inline-flex items-center gap-1 text-[11px] font-semibold ${linkColorClass}`;
        }
        
        // Re-append to maintain ordering without replacing the node
        qqList.appendChild(node);
      });
      
      // Remove stale nodes not in the latest list
      existingNodes.forEach((node, key) => {
        if (!usedKeys.has(key)) node.remove();
      });
    }

    qqBtn?.addEventListener('click', async () => {
      if (!qqPanel) return;
      const wasHidden = qqPanel.classList.contains('hidden');
      qqPanel.classList.toggle('hidden');
      
      // When opening the panel, validate all items and check for released scores
      if (wasHidden) {
        // First validate all items (removes deleted quizzes/attempts)
        const hadRemovals = await qqValidateAllItems();
        // Then check for released scores
        await qqCheckAllPending();
        // Re-render if anything changed
        if (hadRemovals) {
          qqRender();
        }
