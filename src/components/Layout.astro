    });

    document.addEventListener('click', (e) => {
      if (!qqPanel || !qqBtn) return;
      if (!qqPanel.contains(e.target as Node) && !qqBtn.contains(e.target as Node)) {
        qqPanel.classList.add('hidden');
      }
    });

    // Duplicate setInterval removed. Logic is handled in initializeQuizQueue.

    // Make functions available globally
    window.qqMarkAsViewed = qqMarkAsViewed;
    window.qqRemoveByKey = qqRemoveByKey;
    window.qqRender = qqRender;
    window.qqCheckAllPending = qqCheckAllPending;
    window.qqValidateAllItems = qqValidateAllItems;
    
    let queueInterval: NodeJS.Timeout | undefined; // Track interval to prevent duplicates

    // Clean up any invalid entries on load
    function initializeQuizQueue() {
      // Clear existing interval if any (prevents fast timer bug)
      if (queueInterval) clearInterval(queueInterval);

      // First clean up any duplicates or invalid entries
      qqRead();
      
      // Validate all items and check for released scores on initialization
      qqValidateAllItems().then((hadRemovals) => {
        return qqCheckAllPending().then(() => {
          // Re-render if anything changed
          if (hadRemovals) {
            qqRender();
          } else {
            // Always render to show initial state
            qqRender();
          }
        });
      });
      
      // Set up periodic refresh
      queueInterval = setInterval(() => {
        const items = qqRead();
        let needsRerender = false;
        
        items.forEach((item) => {
          const isPending = item.status === 'pending_result';
          const isReleased = item.status === 'released';
          
          if (!isPending && !isReleased) {
            let newRemaining = item.remainingTime || 0;

            // DRIFT FIX: Use timerEndAt timestamp if available for perfect sync
            if (item.timerEndAt) {
              const secondsLeft = Math.floor((item.timerEndAt - Date.now()) / 1000);
              newRemaining = Math.max(0, secondsLeft);
            } else if (newRemaining > 0) {
              // Legacy fallback: decrement manually
              newRemaining = Math.max(0, newRemaining - 1);
            }

            // Update if changed or if we need to sync active status
            if (newRemaining !== item.remainingTime) {
              item.remainingTime = newRemaining;
              const key = item._key || `${QUEUE_PREFIX}${item.quizId}`;
              try {
                const { _key, ...dataToSave } = item; // Don't save internal _key
                localStorage.setItem(key, JSON.stringify(dataToSave));
              } catch (e) {
                console.error('Error updating quiz time:', e);
              }
            }
          }
        });
        
        // Check for released scores and validate items periodically (every 30 seconds)
        const now = Date.now();
        const lastCheck = window.lastQueueCheck || 0;
        if (now - lastCheck >= 30000) {
          window.lastQueueCheck = now;
          // First validate all items (removes deleted quizzes/attempts)
          qqValidateAllItems().then((hadRemovals) => {
            // Then check for released scores
            return qqCheckAllPending().then(() => {
              // Re-render if anything changed
              if (hadRemovals) {
                qqRender();
              }
            });
          });
        } else {
          qqRender();
        }
      }, 1000);
    }
    
    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeQuizQueue);
    } else {
      initializeQuizQueue();
    }
    
    // Listen for storage changes to update the UI when results are viewed in other tabs
    window.addEventListener('storage', (e) => {
      if (e.key && e.key.startsWith(QUEUE_PREFIX)) {
        qqRead();
        qqRender();
      }
    });
    
    // Also clean up on page visibility changes
    document.addEventListener('visibilitychange', () => {
      if (!document.hidden) {
        qqRead();
        qqRender();
      }
    });
  </script>
  
