---
export interface Props {
  title: string;
  description: string;
  slug: string;
  chaptersCount: number;
  quizzesCount: number;
}

const { title, description, slug, chaptersCount, quizzesCount } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <div class="p-6">
    <div class="flex items-center mb-4">
      <div class="h-12 w-12 bg-blue-500 rounded-lg flex items-center justify-center">
        <span class="text-white text-xl font-bold">C</span>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
        <p class="text-sm text-gray-500">{chaptersCount} chapters</p>
      </div>
    </div>
    
    <p class="text-gray-600 mb-4 line-clamp-3">{description}</p>
    
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4 text-sm text-gray-500">
        <span>{chaptersCount} chapters</span>
        <span>{quizzesCount} quizzes</span>
      </div>
      <a 
        href={`/courses/${slug}`}
        class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors"
      >
        Start Course
      </a>
    </div>
  </div>
</div>

