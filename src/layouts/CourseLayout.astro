---
import Layout from '../components/Layout.astro';
import { siteContent } from '../data/siteContent';

export interface Props {
  title: string;
  course: {
    title: string;
    slug: string;
    chapters: {
      id: number;
      title: string;
      order: number;
    }[];
  };
  currentChapterOrder?: number;
}

const { title, course, currentChapterOrder } = Astro.props;
---

<Layout title={title}>
  <div class="flex min-h-screen bg-white">
    <!-- Sidebar -->
    <aside class="hidden lg:block w-80 flex-shrink-0 border-r border-gray-200 bg-white h-[calc(100vh-4rem)] sticky top-16 overflow-y-auto">
      <div class="p-6">
        <div class="mb-6">
          <a href={`/courses/${course.slug}`} class="text-xs font-bold text-gray-500 uppercase tracking-wider hover:text-blue-600 mb-1 block">
            {course.title}
          </a>
          <h2 class="text-xl font-bold text-gray-900">{siteContent.courses.courseContents}</h2>
        </div>

        <nav class="space-y-1">
          {course.chapters.map((chapter) => {
            const isActive = currentChapterOrder === chapter.order;
            return (
              <a
                href={`/courses/${course.slug}/chapter/${chapter.order}`}
                class={`group flex items-center px-3 py-3 text-sm font-medium rounded-md transition-colors ${
                  isActive
                    ? 'bg-blue-50 text-blue-700'
                    : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900'
                }`}
              >
                <span
                  class={`flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full text-xs border mr-3 ${
                    isActive
                      ? 'border-blue-200 bg-blue-100 text-blue-600'
                      : 'border-gray-200 bg-gray-50 text-gray-500 group-hover:border-gray-300'
                  }`}
                >
                  {chapter.order}
                </span>
                <span class="flex-1 leading-snug">{chapter.title}</span>
                {isActive && (
                  <span class="ml-2 w-1.5 h-1.5 bg-blue-600 rounded-full self-center"></span>
                )}
              </a>
            );
          })}
        </nav>

        <div class="mt-8">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">{siteContent.courses.assessments}</h3>
          <nav class="space-y-1">
            <a
              href={`/courses/${course.slug}/quizzes`}
              class="group flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-md hover:bg-gray-50 hover:text-gray-900 transition-colors"
            >
              <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full text-xs border border-gray-200 bg-green-50 text-green-600 mr-3 group-hover:border-green-200">
                Q
              </span>
              <span class="flex-1">{siteContent.courses.quizzes}</span>
            </a>
          </nav>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 min-w-0 overflow-y-auto">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>
  </div>
</Layout>

<style>
  /* Custom scrollbar for sidebar */
  aside::-webkit-scrollbar {
    width: 6px;
  }
  aside::-webkit-scrollbar-track {
    background: transparent;
  }
  aside::-webkit-scrollbar-thumb {
    background-color: #e5e7eb;
    border-radius: 3px;
  }
  aside::-webkit-scrollbar-thumb:hover {
    background-color: #d1d5db;
  }
</style>
