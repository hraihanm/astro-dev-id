---
import Layout from '../../../components/Layout.astro';
const { token } = Astro.params;
---

<Layout title="Buat kata sandi baru">
  <div class="min-h-screen flex items-center justify-center bg-white px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center">
        <h1 class="text-2xl font-bold text-slate-900">Buat kata sandi baru</h1>
        <p class="text-slate-500 mt-2">Masukkan kata sandi baru untuk akun Anda.</p>
      </div>

      <div id="success" class="hidden rounded-xl bg-green-50 border border-green-200 p-4 text-green-800">
        Kata sandi berhasil diubah. Anda bisa masuk sekarang.
      </div>
      <div id="error" class="hidden rounded-xl bg-red-50 border border-red-200 p-4 text-red-700">
        Token tidak valid atau telah kedaluwarsa.
      </div>

      <form id="reset-form" class="space-y-6">
        <div>
          <label for="password" class="block text-sm font-medium text-slate-700 mb-2">Kata sandi baru</label>
          <input
            id="password"
            name="password"
            type="password"
            required
            minlength="8"
            class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            placeholder="••••••••"
          />
        </div>
        <button
          type="submit"
          id="submit"
          class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-all focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Simpan kata sandi
        </button>
      </form>

      <p class="text-center text-sm text-slate-600">
        Kembali ke <a href="/auth/signin" class="text-blue-600 font-semibold">halaman masuk</a>
      </p>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('reset-form') as HTMLFormElement | null;
  const success = document.getElementById('success');
  const error = document.getElementById('error');
  const submit = document.getElementById('submit') as HTMLButtonElement | null;
  const token = "${token}";

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    success?.classList.add('hidden');
    error?.classList.add('hidden');
    if (submit) {
      submit.disabled = true;
      submit.textContent = 'Memproses...';
    }

    const password = (document.getElementById('password') as HTMLInputElement).value;

    try {
      const res = await fetch('/api/auth/password/reset', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ token, password })
      });

      if (res.ok) {
        success?.classList.remove('hidden');
        form.classList.add('hidden');
      } else {
        error?.classList.remove('hidden');
      }
    } catch {
      error?.classList.remove('hidden');
    } finally {
      if (submit) {
        submit.disabled = false;
        submit.textContent = 'Simpan kata sandi';
      }
    }
  });
</script>
