---
export const prerender = false;

import Layout from '../../../components/Layout.astro';
import Icon from '../../../components/icons/Icon.astro';
import { requireAdmin } from '../../../lib/auth-guard';

const user = await requireAdmin(Astro.cookies);
if (!user) {
  return Astro.redirect('/');
}
---

<Layout title="Buat Kuis Baru">
  <div class="min-h-screen bg-slate-50">
    <!-- Header -->
    <div class="bg-white border-b border-slate-200 sticky top-0 z-10">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href="/admin/quizzes" class="text-slate-500 hover:text-slate-700 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <div>
              <h1 class="text-lg font-bold text-slate-900">Buat Kuis Baru</h1>
              <p class="text-sm text-slate-500">Buat kuis baru dan tambahkan soal di editor</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Import Option -->
      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm mb-6">
        <div class="px-5 py-4 border-b border-slate-100 bg-slate-50 flex items-center justify-between">
          <h3 class="font-bold text-slate-900 flex items-center gap-2">
            <svg class="w-4 h-4" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" role="img">
              <path d="M4 20h4l10.5-10.5a2.828 2.828 0 10-4-4L4 16v4z" stroke-linecap="round" stroke-linejoin="round" fill="none"></path>
              <path d="M13.5 6.5l4 4" stroke-linecap="round" stroke-linejoin="round" fill="none"></path>
            </svg>
            <span>Impor dari Markdown</span>
          </h3>
        </div>
        <div class="p-5">
          <details class="group">
            <summary class="flex items-center justify-between cursor-pointer text-sm font-medium text-blue-600 hover:text-blue-700 mb-4">
              <span>+ Impor Kuis dari File Markdown</span>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="mt-4 space-y-3">
              <form id="quiz-import-form" class="space-y-3">
                <div>
                  <input
                    type="text"
                    name="title"
                    id="import-quiz-title"
                    required
                    class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Judul Kuis"
                  />
                </div>
                
                <div class="grid grid-cols-2 gap-2">
                  <input
                    type="number"
                    name="timeLimit"
                    id="import-time-limit"
                    min="1"
                    class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Waktu (menit)"
                  />
                  <input
                    type="number"
                    name="maxAttempts"
                    id="import-max-attempts"
                    min="1"
                    class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Maks Percobaan"
                  />
                </div>
                
                <div>
                  <input
                    type="file"
                    id="import-quiz-file"
                    name="file"
                    accept=".md,.txt"
                    required
                    class="w-full text-sm text-slate-500 file:mr-2 file:py-2 file:px-3 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                  />
                </div>
                
                <button
                  type="submit"
                  id="quiz-import-btn"
                  class="w-full py-2 px-4 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50"
                >
                  Impor
                </button>
            </form>
              
              <div id="import-status" class="hidden text-sm"></div>
          </div>
          </details>
        </div>
      </div>
      
      <!-- Create Form -->
      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm">
        <div class="px-5 py-4 border-b border-slate-100 bg-slate-50">
          <h3 class="font-bold text-slate-900 flex items-center gap-2">
            <svg class="w-4 h-4" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" role="img">
              <path d="M12 4v16m8-8H4" stroke-linecap="round" stroke-linejoin="round" fill="none"></path>
            </svg>
            <span>Buat Kuis Baru</span>
          </h3>
        </div>
        
        <form id="quiz-form" class="p-5 space-y-5">
            <div>
            <label for="title" class="block text-sm font-medium text-slate-700 mb-1.5">
                Judul Kuis *
              </label>
              <input
                type="text"
                name="title"
                id="title"
                required
              class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Misalnya: Kuis Latihan Matematika"
              />
            </div>

            <div>
            <label for="description" class="block text-sm font-medium text-slate-700 mb-1.5">
                Deskripsi
              </label>
              <textarea
                name="description"
                id="description"
                rows="3"
              class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
              placeholder="Deskripsi singkat tentang kuis ini..."
              ></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
              <label for="quizScope" class="block text-sm font-medium text-slate-700 mb-1.5">
                  Keterkaitan Kuis
                </label>
                <select
                  id="quizScope"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                >
                  <option value="standalone">Mandiri</option>
                  <option value="course">Terhubung ke Kursus</option>
                  <option value="chapter">Terhubung ke Bab</option>
                </select>
              <p class="text-xs text-slate-500 mt-1">Pilih apakah kuis berdiri sendiri atau terkait kursus/bab.</p>
              </div>
            <div id="course-select-wrapper" class="hidden">
              <label for="courseSelect" class="block text-sm font-medium text-slate-700 mb-1.5">
                Kursus
                </label>
                <select
                  id="courseSelect"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                >
                  <option value="">Pilih kursus</option>
                </select>
              </div>
              <div id="chapter-select-wrapper" class="hidden">
              <label for="chapterSelect" class="block text-sm font-medium text-slate-700 mb-1.5">
                Bab
                </label>
                <select
                  id="chapterSelect"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                >
                  <option value="">Pilih bab</option>
                </select>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
              <label for="timeLimit" class="block text-sm font-medium text-slate-700 mb-1.5">
                  Batas Waktu (menit)
                </label>
                <input
                  type="number"
                  name="timeLimit"
                  id="timeLimit"
                  min="1"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="30"
                />
              </div>

              <div>
              <label for="maxAttempts" class="block text-sm font-medium text-slate-700 mb-1.5">
                  Maksimal Percobaan
                </label>
                <input
                  type="number"
                  name="maxAttempts"
                  id="maxAttempts"
                  min="1"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="3"
                />
          </div>
        </div>

          <div class="flex justify-end gap-3 pt-4 border-t border-slate-200">
            <a href="/admin/quizzes" class="px-6 py-2.5 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors">
              Batal
            </a>
            <button
              type="submit"
              class="px-6 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
            >
              Buat Kuis & Lanjut ke Editor
            </button>
          </div>
        </form>
        </div>
    </div>
        </div>
</Layout>

    <script>
      const quizForm = document.getElementById('quiz-form');
      const quizScopeSelect = document.getElementById('quizScope');
      const courseSelect = document.getElementById('courseSelect');
      const chapterSelect = document.getElementById('chapterSelect');
  const courseWrapper = document.getElementById('course-select-wrapper');
      const chapterWrapper = document.getElementById('chapter-select-wrapper');
      let coursesData = [];
      let coursesLoaded = false;

      async function loadCourses() {
        if (coursesLoaded) return;
        try {
          const res = await fetch('/api/admin/courses?includeChapters=true');
          if (!res.ok) return;
          const data = await res.json();
          coursesData = data?.courses || [];
          renderCourseOptions();
        } catch (err) {
          console.error('Gagal memuat kursus', err);
        } finally {
          coursesLoaded = true;
        }
      }

      function renderCourseOptions() {
    if (!courseSelect) return;
    courseSelect.innerHTML = '<option value="">Pilih kursus</option>';
        coursesData.forEach((course) => {
          const option = document.createElement('option');
          option.value = course.id;
          option.textContent = course.title;
      courseSelect.appendChild(option);
        });
      }

  function renderChapterOptions(courseId) {
    if (!chapterSelect) return;
    chapterSelect.innerHTML = '<option value="">Pilih bab</option>';
        const course = coursesData.find((c) => String(c.id) === String(courseId));
        const chapters = course?.chapters || [];
        chapters.forEach((ch) => {
          const option = document.createElement('option');
          option.value = ch.id;
          option.textContent = `${ch.order}. ${ch.title}`;
      chapterSelect.appendChild(option);
        });
      }

      quizScopeSelect?.addEventListener('change', () => {
        const scope = quizScopeSelect.value;
        if (scope === 'standalone') {
      courseWrapper?.classList.add('hidden');
          chapterWrapper?.classList.add('hidden');
          courseSelect && (courseSelect.value = '');
          chapterSelect && (chapterSelect.value = '');
        } else if (scope === 'course') {
      courseWrapper?.classList.remove('hidden');
          chapterWrapper?.classList.add('hidden');
          chapterSelect && (chapterSelect.value = '');
          loadCourses();
        } else if (scope === 'chapter') {
      courseWrapper?.classList.remove('hidden');
          chapterWrapper?.classList.remove('hidden');
          loadCourses();
        }
      });

      courseSelect?.addEventListener('change', () => {
        if (quizScopeSelect?.value === 'chapter') {
      renderChapterOptions(courseSelect.value);
        }
      });

  // Form submit - create quiz and redirect to editor
      quizForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const title = (document.getElementById('title') as HTMLInputElement)?.value;
        const description = (document.getElementById('description') as HTMLTextAreaElement)?.value;
        const timeLimit = (document.getElementById('timeLimit') as HTMLInputElement)?.value;
        const maxAttempts = (document.getElementById('maxAttempts') as HTMLInputElement)?.value;
        const scope = quizScopeSelect?.value || 'standalone';
        let courseId = null;
        let chapterId = null;

        if (scope === 'course' || scope === 'chapter') {
          courseId = courseSelect?.value ? parseInt(courseSelect.value) : null;
          if (!courseId) {
            alert('Pilih kursus untuk kuis ini.');
            return;
          }
        }

        if (scope === 'chapter') {
          chapterId = chapterSelect?.value ? parseInt(chapterSelect.value) : null;
          if (!chapterId) {
            alert('Pilih bab untuk kuis bab.');
            return;
          }
        }

        if (!title) {
      alert('Judul kuis wajib diisi');
          return;
        }

    const submitBtn = quizForm.querySelector('button[type="submit"]') as HTMLButtonElement;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Membuat...';

        try {
          const response = await fetch('/api/admin/quiz/create', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              title,
          description: description || undefined,
              timeLimit: timeLimit ? parseInt(timeLimit) : undefined,
              maxAttempts: maxAttempts ? parseInt(maxAttempts) : undefined,
          questions: [], // Empty - questions will be added in editor
              courseId,
              chapterId
            })
          });

          const result = await response.json();

          if (response.ok) {
        // Redirect to editor
        const quizId = result.id || result.quiz?.id;
        if (quizId) {
          window.location.href = `/admin/quizzes/${quizId}/edit`;
        } else {
          alert('Kuis berhasil dibuat, tetapi ID tidak ditemukan. Silakan refresh halaman.');
            window.location.href = '/admin/quizzes';
        }
          } else {
        alert('Error: ' + (result.error || 'Gagal membuat kuis'));
        submitBtn.disabled = false;
        submitBtn.textContent = 'Buat Kuis & Lanjut ke Editor';
          }
        } catch (error) {
      alert('Terjadi kesalahan saat membuat kuis');
      console.error(error);
          submitBtn.disabled = false;
      submitBtn.textContent = 'Buat Kuis & Lanjut ke Editor';
        }
      });
      
  // Handle quiz import
  document.getElementById('quiz-import-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const form = e.target as HTMLFormElement;
    const statusDiv = document.getElementById('import-status');
    const submitBtn = document.getElementById('quiz-import-btn') as HTMLButtonElement;
        
    const title = (form.querySelector('#import-quiz-title') as HTMLInputElement)?.value;
    const file = (form.querySelector('#import-quiz-file') as HTMLInputElement)?.files?.[0];
        
        if (!title || !file) {
          if (statusDiv) {
        statusDiv.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
        statusDiv.textContent = 'Harap isi judul dan pilih file';
            statusDiv.classList.remove('hidden');
          }
          return;
        }
        
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengimpor...';
    statusDiv!.className = 'p-3 bg-blue-50 text-blue-700 text-sm rounded-lg';
    statusDiv!.textContent = 'Mengimpor...';
        statusDiv!.classList.remove('hidden');
        
        const formData = new FormData(form);
        
        try {
      const response = await fetch('/api/admin/quiz/import-standalone', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (response.ok) {
        statusDiv!.className = 'p-3 bg-emerald-50 text-emerald-700 text-sm rounded-lg';
        statusDiv!.textContent = `âœ“ Berhasil mengimpor ${result.questionCount || result.questions?.length || 0} soal`;
            form.reset();
            setTimeout(() => {
              window.location.href = '/admin/quizzes';
            }, 1500);
          } else {
        statusDiv!.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
        statusDiv!.textContent = 'Gagal: ' + (result.error || 'Kesalahan tidak dikenal');
          }
        } catch (error) {
      statusDiv!.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
      statusDiv!.textContent = 'Gagal mengimpor kuis';
        } finally {
          submitBtn.disabled = false;
      submitBtn.textContent = 'Impor';
        }
      });
    </script>
