---
export const prerender = false;

import Layout from '../../../components/Layout.astro';
import { getAllQuizzes } from '../../../lib/quizzes';
import { prisma } from '../../../lib/db';

const allQuizzes = await getAllQuizzes();
const standaloneQuizzes = allQuizzes.filter(q => q.courseId === null);
const courseQuizzes = allQuizzes.filter(q => q.courseId !== null);

// Get pending submissions count for all quizzes
const pendingCounts: Record<number, number> = {};

const quizIds = allQuizzes.map(q => q.id);
if (quizIds.length > 0) {
  const pendingAttempts = await prisma.quizAttempt.groupBy({
    by: ['quizId'],
    where: {
      quizId: { in: quizIds },
      scoreReleasedAt: null
    },
    _count: {
      id: true
    }
  });
  
  pendingAttempts.forEach(item => {
    pendingCounts[item.quizId] = item._count.id;
  });
}
