              `).join('') : '<p class="text-sm text-gray-500 py-4 text-center">No blanks defined yet. Click "+ Add Blank" to start.</p>'}
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Solution Explanation (Optional)
            </label>
            <textarea
              class="solution-text w-full px-4 py-3 border border-gray-300 rounded-md text-sm resize-y"
              rows="2"
            >${escapeHtml(question.metadata?.solution || '')}</textarea>
          </div>
        </div>
      `;
    }

    function updatePreview(questionDiv, question) {
      const previewContent = questionDiv.querySelector('.preview-content');
      if (!previewContent) return;

      const questionText = questionDiv.querySelector('.question-text')?.value || '';
      const questionHtml = processLatex(questionText || 'No question entered yet');

      if (question.type === 'multiple-choice' || question.type === 'complex-multiple-choice') {
        const options = [];
        questionDiv.querySelectorAll('.option-text').forEach(input => {
          const val = input.value.trim();
          if (val) options.push(val);
        });

        const correctAnswers = [];
        questionDiv.querySelectorAll('.correct-answer-check:checked').forEach(input => {
          correctAnswers.push(parseInt(input.value));
        });

        const optionsHtml = options.map((opt, idx) => {
          const isCorrect = correctAnswers.includes(idx + 1);
          const optionHtml = processLatex(opt);
          return `
            <div class="preview-option ${isCorrect ? 'correct' : ''}">
              <div class="preview-option-bullet"></div>
              <div class="preview-option-content">${optionHtml}</div>
            </div>
          `;
        }).join('');

        previewContent.innerHTML = `
          <div class="preview-question">${questionHtml}</div>
          ${optionsHtml || '<p class="text-sm text-gray-500 italic">No options added yet</p>'}
        `;
      }

      // Render LaTeX
      requestAnimationFrame(() => renderLatex(previewContent));
    }

    function renderQuestion(question, index) {
      const questionDiv = document.createElement('div');
      questionDiv.className = 'question-card';
      questionDiv.dataset.questionId = question.id;
      questionDiv.dataset.index = index;
      questionDiv.draggable = true;

      let editorHtml = '';
      switch (question.type) {
        case 'complex-multiple-choice':
        case 'multiple-choice':
          editorHtml = renderMultipleChoiceEditor(question, questionDiv);
          break;
        case 'essay':
          editorHtml = renderEssayEditor(question);
          break;
        case 'fill-in-the-blank':
          editorHtml = renderFillInBlankEditor(question);
          break;
      }

      const typeLabels = {
        'multiple-choice': 'Multiple Choice',
        'complex-multiple-choice': 'Complex Multiple Choice',
        'essay': 'Essay',
        'fill-in-the-blank': 'Fill in the Blank'
      };

      questionDiv.innerHTML = `
        <div class="flex items-center bg-gray-50 px-4 py-3 border-b border-gray-200">
          <div class="drag-handle" title="Drag to reorder">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
