      // Add blank
      const addBlankBtn = editor.querySelector('.add-blank-btn');
      if (addBlankBtn) {
        addBlankBtn.addEventListener('click', () => {
          const container = editor.querySelector('.blanks-container');
          const blankCount = container.querySelectorAll('.blank-group').length;
          
          const newBlank = document.createElement('div');
          newBlank.className = 'blank-group border border-gray-200 rounded-lg p-4 bg-gray-50';
          newBlank.innerHTML = `
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">Isian {${blankCount}}</span>
              <button type="button" class="delete-blank-btn text-red-600 hover:text-red-800 text-xs font-medium">Hapus</button>
            </div>
            <input type="text" class="blank-answers w-full px-4 py-2 border border-gray-300 rounded-md text-base mb-2" placeholder="Jawaban benar (pisahkan dengan koma)" required />
            <label class="flex items-center space-x-2">
              <input type="checkbox" class="blank-case-sensitive w-4 h-4" />
              <span class="text-xs text-gray-600">Case sensitive</span>
            </label>
          `;

          newBlank.querySelector('.delete-blank-btn')?.addEventListener('click', () => {
            newBlank.remove();
          });

          if (container.querySelector('p')) {
            container.innerHTML = '';
          }
          container.appendChild(newBlank);
        });
      }

      // Delete blank
      editor.querySelectorAll('.delete-blank-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          btn.closest('.blank-group')?.remove();
        });
      });
    }

    function updatePreview(question) {
      const previewContent = questionEditor.querySelector('.preview-content');
      if (!previewContent) return;

      const editor = questionEditor.querySelector('.question-edit-form');
      const questionText = editor.querySelector('.question-text')?.value || '';
      const questionHtml = renderMarkdown(questionText || 'No question entered');

      if (question.type === 'multiple-choice' || question.type === 'complex-multiple-choice') {
        const options = [];
        editor.querySelectorAll('.option-text').forEach(input => {
          const val = input.value.trim();
          if (val) options.push(val);
        });

        const correctAnswers = [];
        editor.querySelectorAll('.correct-answer-check:checked').forEach(input => {
          correctAnswers.push(parseInt(input.value));
        });

        const solutionText = editor.querySelector('.solution-text')?.value || '';
        const solutionHtml = solutionText ? renderMarkdown(solutionText) : '';

        const optionsHtml = options.map((opt, idx) => {
          const isCorrect = correctAnswers.includes(idx + 1);
          const optionHtml = renderMarkdown(opt);
          const optionLetter = String.fromCharCode(65 + idx); // A, B, C, D...
          return `
            <div class="preview-option ${isCorrect ? 'correct' : ''}">
              <span class="option-letter">${optionLetter}</span>
              <div class="preview-option-content">${optionHtml}</div>
            </div>
          `;
        }).join('');

        previewContent.innerHTML = `
          <div class="preview-section">
            <div class="preview-section-title">ðŸ“ Pertanyaan</div>
            <div class="preview-question">${questionHtml}</div>
          </div>
          
          <div class="preview-section">
            <div class="preview-section-title">âœ“ Pilihan Jawaban</div>
            ${optionsHtml || '<p class="text-sm text-gray-500 italic">No options yet</p>'}
          </div>
          
          ${solutionHtml ? `
            <div class="preview-section preview-solution">
              <div class="preview-section-title">ðŸ’¡ Pembahasan</div>
              <div class="preview-solution-content">${solutionHtml}</div>
            </div>
          ` : ''}
        `;
      }

      requestAnimationFrame(() => renderLatex(previewContent));
    }

    // Add question
    addQuestionBtn?.addEventListener('click', () => {
      const selectedType = questionTypeSelect.value;
      
      // Save current question first
      if (questionsData.length > 0) {
        saveCurrentQuestion();
      }

      const newQuestion = {
        id: ++questionCounter,
        type: selectedType,
        question: '',
        images: [],
        metadata: {}
      };

      if (selectedType === 'multiple-choice' || selectedType === 'complex-multiple-choice') {
        newQuestion.options = ['', ''];
        if (selectedType === 'complex-multiple-choice') {
          newQuestion.correctAnswers = [1];
        } else {
          newQuestion.correctAnswer = 1;
        }
      } else if (selectedType === 'essay') {
        newQuestion.maxWords = undefined;
        newQuestion.allowFileUpload = false;
        newQuestion.rubric = '';
      } else if (selectedType === 'fill-in-the-blank') {
        newQuestion.questionTemplate = '';
        newQuestion.blanks = [];
      }

      questionsData.push(newQuestion);
      currentQuestionIndex = questionsData.length - 1;
      
      renderQuestionGrid();
      renderCurrentQuestion();
    });

    // Delete current question
    deleteCurrentBtn?.addEventListener('click', () => {
      if (questionsData.length === 0) return;
      
      if (!confirm('Hapus soal ini?')) return;

      questionsData.splice(currentQuestionIndex, 1);
      
      if (currentQuestionIndex >= questionsData.length) {
        currentQuestionIndex = Math.max(0, questionsData.length - 1);
      }
      
      renderQuestionGrid();
      renderCurrentQuestion();
    });

    // Save quiz (shared function)
    async function saveQuiz() {
      clearSaveError();

      // Save current question first
      if (questionsData.length > 0) {
        saveCurrentQuestion();
      }

      if (questionsData.length === 0) {
        showSaveError('Tambahkan minimal satu soal terlebih dahulu.');
        return;
      }

      const quizType = document.getElementById('quizType')?.value || 'exercise';
      const attemptLimitValue = document.getElementById('attemptLimit')?.value;
      const attemptLimit = attemptLimitValue ? parseInt(attemptLimitValue) : null;
      const availableFromInput = document.getElementById('availableFrom');
      const availableUntilInput = document.getElementById('availableUntil');
      const openDurationInput = document.getElementById('openDuration');
      const availableFromVal = availableFromInput && availableFromInput instanceof HTMLInputElement ? availableFromInput.value : null;
      const availableUntilVal = availableUntilInput && availableUntilInput instanceof HTMLInputElement ? availableUntilInput.value : null;
      const openDurationVal = openDurationInput && openDurationInput instanceof HTMLInputElement ? openDurationInput.value : null;
      const scoreReleaseMode = document.getElementById('scoreReleaseMode')?.value || 'immediate';
      const scope = quizScopeSelect?.value || 'standalone';

      let courseId = null;
      let chapterId = null;

      if (scope === 'course' || scope === 'chapter') {
        courseId = courseSelect?.value ? parseInt(courseSelect.value) : null;
        if (!courseId) {
          showSaveError('Pilih kursus untuk kuis ini.');
          return;
        }
      }

      if (scope === 'chapter') {
        chapterId = chapterSelect?.value ? parseInt(chapterSelect.value) : null;
        if (!chapterId) {
          showSaveError('Pilih bab untuk kuis bab.');
          return;
        }
      }

      const formData = {
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        notes: document.getElementById('notes')?.value || '',
        timeLimit: parseInt(document.getElementById('timeLimit').value) || undefined,
        quizType: quizType,
        attemptLimit: attemptLimit,
        availableFrom: availableFromVal ? new Date(availableFromVal).toISOString() : null,
        availableUntil: availableUntilVal ? new Date(availableUntilVal).toISOString() : null,
        openDurationSeconds: openDurationVal ? parseInt(openDurationVal) * 60 : null,
        scoreReleaseMode: scoreReleaseMode,
        visibility: document.getElementById('visibility')?.value || 'PUBLIC',
        questions: questionsData,
        courseId,
        chapterId
      };

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/update`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (response.ok) {
          clearStorage(); // Clear localStorage after successful save
          alert('Kuis berhasil disimpan!');
        } else {
          showSaveError(result.error || 'Gagal menyimpan kuis.', result.details);
        }
      } catch (error) {
        console.error('Error:', error);
        showSaveError('Terjadi kesalahan saat menyimpan.', [String(error)]);
      }
    }

    // Attach save handlers
    saveQuizBtn?.addEventListener('click', saveQuiz);
    saveQuizSidebarBtn?.addEventListener('click', saveQuiz);

    // Delete quiz
    deleteQuizBtn?.addEventListener('click', async () => {
      if (!confirm('Hapus kuis ini? Tindakan ini tidak dapat dibatalkan.')) return;

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/delete`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (response.ok) {
          alert('Kuis berhasil dihapus!');
          window.location.href = '/admin/quizzes';
        } else {
          alert('Error: ' + (result.error || 'Gagal menghapus'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan');
      }
    });

    // Initialize
    renderQuestionGrid();
    renderCurrentQuestion();
    
    // Show unsaved indicator if there are stored changes
    if (stored?.hasUnsavedChanges) {
      updateUnsavedIndicator(true);
    }
    
    // Auto-save on input changes (debounced)
    let saveTimeout = null;
    questionEditor.addEventListener('input', () => {
      if (saveTimeout) clearTimeout(saveTimeout);
      saveTimeout = setTimeout(() => {
        saveCurrentQuestion();
      }, 1000); // Save 1 second after last input
    });
  </script>
</Layout>
