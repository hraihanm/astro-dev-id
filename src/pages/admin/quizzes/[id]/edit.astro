        question.allowFileUpload = editor.querySelector('.essay-allow-upload')?.checked || false;
        question.rubric = editor.querySelector('.essay-rubric')?.value || '';
      } else if (question.type === 'fill-in-the-blank') {
        question.questionTemplate = editor.querySelector('.question-template')?.value || '';
        question.question = question.questionTemplate;
        question.metadata.solution = editor.querySelector('.solution-text')?.value || '';
        
        const blanks = [];
        editor.querySelectorAll('.blank-group').forEach((blankGroup, idx) => {
          // Get math mode setting for this specific blank
          const inputModeSelect = blankGroup.querySelector('.blank-input-mode');
          const isMathMode = inputModeSelect?.value === 'math';
          let answersInput = '';
          
          if (isMathMode) {
            // Get value from MathLive field
            const mathField = blankGroup.querySelector('math-field');
            if (mathField) {
              // Try different formats to get the value
              try {
                // MathLive 0.108.2 supports 'latex' format
                if (mathField.getValue && typeof mathField.getValue === 'function') {
                  try {
                    const latexValue = mathField.getValue('latex') || '';
                    answersInput = latexValue || '';
                  } catch (e) {
                    // If 'latex' format fails, try without format parameter
                    try {
                      answersInput = mathField.getValue() || '';
                    } catch (e2) {
                      // Fallback to value property
                      answersInput = mathField.value || '';
                    }
                  }
                } else if (mathField.value) {
                  answersInput = mathField.value || '';
                } else {
                  // Last resort: get text content
                  answersInput = mathField.textContent || mathField.innerText || '';
                }
              } catch (e) {
                console.warn('Error getting MathLive value:', e);
                // Fallback: try to get the inner text
                answersInput = mathField.textContent || mathField.innerText || '';
              }
            }
          } else {
            // Get value from text input
            const textInput = blankGroup.querySelector('.blank-answers.text-input');
            answersInput = textInput?.value || '';
          }
          
          const caseSensitive = blankGroup.querySelector('.blank-case-sensitive')?.checked || false;
          const toleranceInput = blankGroup.querySelector('.blank-tolerance');
          // Convert percentage to decimal (e.g., 1% = 0.01)
          const tolerancePercent = toleranceInput ? parseFloat(toleranceInput.value) : 1;
          const tolerance = tolerancePercent / 100; // Store as decimal (1% = 0.01)
          const algebraModeSelect = blankGroup.querySelector('.blank-algebra-mode');
          const algebraMode = algebraModeSelect ? (algebraModeSelect.value === 'algebra') : true; // Default to algebra mode
          
          // Store both natural and LaTeX versions
          const answers = answersInput.split(',').map(a => a.trim()).filter(a => a);
          const latexAnswers = answers.map(a => {
            if (isMathMode && typeof window !== 'undefined' && window.MathLive) {
              const mathField = blankGroup.querySelector('math-field');
              if (mathField) {
                try {
                  if (mathField.getValue) {
                    const latex = mathField.getValue('latex') || '';
                    return latex || convertMathToLatex(a);
                  }
                } catch (e) {
                  console.warn('Error getting LaTeX from MathLive:', e);
                }
              }
            }
            return convertMathToLatex(a);
          });

          if (answers.length > 0) {
            blanks.push({
              index: idx,
              correctAnswers: answers, // Store natural form for matching
              latexAnswers: latexAnswers, // Store LaTeX form for display
              caseSensitive: caseSensitive,
              tolerance: isNaN(tolerance) ? 0.0001 : tolerance,
              mathMode: isMathMode, // Store math mode per blank
              algebraMode: algebraMode // Store algebra mode (true = algebra, false = value)
            });
          }
        });
        question.blanks = blanks;
      }
      
      // Auto-save to localStorage
      if (autoSave) {
        saveToStorage();
      }
    }

