    // Convert natural math expression to LaTeX (Perseus-style)
    function convertMathToLatex(input) {
      if (!input || typeof input !== 'string') return '';
      
      let result = input.trim();
      
      // Handle dot notation: 2.5 -> 2.5 (keep decimal points)
      // But replace * with \cdot for multiplication
      // Pattern: number or ) or variable followed by * followed by number or ( or variable
      // Don't replace if it's part of ** (which might be exponentiation in some contexts)
      result = result.replace(/(\d+|[a-zA-Z\)])\s*\*\s*(\d+|[a-zA-Z\(])/g, (match, p1, p2) => {
        // Don't replace if it's ** (double asterisk)
        if (match.includes('**')) return match;
        return p1 + '\\cdot' + p2;
      });
      
      // Handle ^ for exponents - convert to ^{...}
      // Pattern: ^ followed by number or expression in parentheses
      // Handle simple cases: 10^5 -> 10^{5}
      result = result.replace(/\^(\d+)/g, '^{$1}');
      // Handle parentheses: 10^(2+3) -> 10^{2+3}
      result = result.replace(/\^\(([^)]+)\)/g, '^{$1}');
      // Handle variables: x^2 -> x^{2}
      result = result.replace(/([a-zA-Z])\^(\d+)/g, '$1^{$2}');
      
      // Handle fractions: a/b -> \frac{a}{b}
      // But be careful - only convert if it looks like a fraction (not URLs, dates, etc.)
      // Pattern: number or variable / number or variable, but not if preceded by : or other context
      result = result.replace(/(\d+|[a-zA-Z]+)\s*\/\s*(\d+|[a-zA-Z]+)/g, (match, num, den) => {
        // Don't convert if it's part of a date or time (e.g., 12/31/2024)
        if (/\d+\/\d+\/\d+/.test(match)) return match;
        return '\\frac{' + num + '}{' + den + '}';
      });
      
      // Handle sqrt: sqrt(x) -> \sqrt{x}
      result = result.replace(/sqrt\s*\(([^)]+)\)/gi, '\\sqrt{$1}');
      
      // Handle common functions (sin, cos, tan, log, ln, exp)
      result = result.replace(/\b(sin|cos|tan|log|ln|exp)\s*\(/gi, '\\$1(');
      
      // Handle pi, e (Euler's number)
      result = result.replace(/\bpi\b/gi, '\\pi');
      result = result.replace(/\be\b/g, (match, offset, str) => {
        // Only replace if it's not part of a number (like 2e5)
        const before = str[offset - 1];
        const after = str[offset + 1];
        if ((before && /[\d.]/.test(before)) || (after && /[\d.]/.test(after))) {
          return match; // Keep as is if part of scientific notation
        }
        return 'e'; // Could be \mathrm{e} but e is fine
      });
      
      return result;
    }

