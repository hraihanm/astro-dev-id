          newQuestionIds.clear();
          deletedQuestionIds.clear();
          questionsReordered = false;
          
          console.log('[Delta Save] About to show success toast');
          showToast('Kuis berhasil disimpan!', 'success');
        } else {
          console.log('[Delta Save] Response NOT OK, showing error');
          showSaveError(result.error || 'Gagal menyimpan kuis.', result.details);
        }
      } catch (error) {
        console.error('[Delta Save] Catch error:', error);
        showSaveError('Terjadi kesalahan saat menyimpan.', [String(error)]);
      }
    }

    // Attach save handlers
    saveQuizBtn?.addEventListener('click', saveQuiz);
    saveQuizSidebarBtn?.addEventListener('click', saveQuiz);

    // Save As (Duplicate) quiz
    saveAsQuizBtn?.addEventListener('click', async () => {
      // Save current question first to include any unsaved changes
      if (questionsData.length > 0) {
        saveCurrentQuestion();
      }

      const currentTitle = document.getElementById('title')?.value || quiz.title;
      const newTitle = prompt('Masukkan nama baru untuk kuis:', `${currentTitle} (Copy)`);
      
      if (!newTitle || !newTitle.trim()) {
        return; // User cancelled or entered empty title
      }

      if (saveAsQuizBtn) {
        saveAsQuizBtn.disabled = true;
        const originalText = saveAsQuizBtn.innerHTML;
        saveAsQuizBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path></svg>Menduplikasi...';

        // Collect current quiz data (including unsaved changes)
        const quizType = document.getElementById('quizType')?.value || 'exercise';
        const attemptLimitValue = document.getElementById('attemptLimit')?.value;
        const attemptLimit = attemptLimitValue ? parseInt(attemptLimitValue) : null;
        const availableFromInput = document.getElementById('availableFrom');
        const availableUntilInput = document.getElementById('availableUntil');
        const openDurationInput = document.getElementById('openDuration');
        const availableFromVal = availableFromInput && availableFromInput instanceof HTMLInputElement ? availableFromInput.value : null;
        const availableUntilVal = availableUntilInput && availableUntilInput instanceof HTMLInputElement ? availableUntilInput.value : null;
        const openDurationVal = openDurationInput && openDurationInput instanceof HTMLInputElement ? openDurationInput.value : null;
        const scoreReleaseMode = document.getElementById('scoreReleaseMode')?.value || 'immediate';
        const scope = quizScopeSelect?.value || 'standalone';

        let courseId = null;
        let chapterId = null;

        if (scope === 'course' || scope === 'chapter') {
          courseId = courseSelect?.value ? parseInt(courseSelect.value) : null;
        }

        if (scope === 'chapter') {
          chapterId = chapterSelect?.value ? parseInt(chapterSelect.value) : null;
        }

        const duplicateData = {
          newTitle: newTitle.trim(),
          title: document.getElementById('title')?.value,
          description: document.getElementById('description')?.value,
          notes: document.getElementById('notes')?.value || '',
          timeLimit: parseInt(document.getElementById('timeLimit')?.value) || undefined,
          quizType: quizType,
          attemptLimit: attemptLimit,
          availableFrom: availableFromVal ? new Date(availableFromVal).toISOString() : null,
          availableUntil: availableUntilVal ? new Date(availableUntilVal).toISOString() : null,
          openDurationSeconds: openDurationVal ? parseInt(openDurationVal) * 60 : null,
          scoreReleaseMode: scoreReleaseMode,
          visibility: document.getElementById('visibility')?.value || 'PUBLIC',
          questions: questionsData,
          courseId,
          chapterId
        };

        try {
          const response = await fetch(`/api/admin/quiz/${quizId}/duplicate`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(duplicateData)
          });

          const result = await response.json();

          if (response.ok) {
            // Redirect to the new quiz editor
            window.location.href = `/admin/quizzes/${result.quiz.id}/edit`;
          } else {
            alert('Error: ' + (result.error || 'Gagal menduplikasi kuis'));
            saveAsQuizBtn.disabled = false;
            saveAsQuizBtn.innerHTML = originalText;
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Terjadi kesalahan saat menduplikasi kuis');
          saveAsQuizBtn.disabled = false;
          saveAsQuizBtn.innerHTML = originalText;
        }
      }
    });

    // Delete quiz
    deleteQuizBtn?.addEventListener('click', async () => {
      if (!confirm('Hapus kuis ini? Tindakan ini tidak dapat dibatalkan.')) return;

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/delete`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (response.ok) {
          alert('Kuis berhasil dihapus!');
          window.location.href = '/admin/quizzes';
        } else {
          alert('Error: ' + (result.error || 'Gagal menghapus'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan');
      }
    });

    // Initialize
    renderQuestionGrid();
    renderCurrentQuestion();
    
    // Show unsaved indicator if there are stored changes
    if (stored?.hasUnsavedChanges) {
      updateUnsavedIndicator(true);
    }
    
    // Initialize button states
    updateButtonStates();
    
    // Auto-save on input changes (debounced)
    let saveTimeout = null;
    questionEditor.addEventListener('input', () => {
      if (saveTimeout) clearTimeout(saveTimeout);
      saveTimeout = setTimeout(() => {
        saveCurrentQuestion();
      }, 1000); // Save 1 second after last input
    });

    // Handle image upload
    const uploadImagesForm = document.getElementById('upload-images-form');
    const uploadImagesFileInput = document.getElementById('image-archive');
    const uploadImagesBtn = document.getElementById('upload-images-btn');
    const uploadImagesStatus = document.getElementById('upload-images-status');

    uploadImagesForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const file = uploadImagesFileInput?.files?.[0];
      if (!file) {
        if (uploadImagesStatus) {
          uploadImagesStatus.textContent = 'Please select a ZIP file';
          uploadImagesStatus.classList.remove('hidden', 'text-green-600', 'text-blue-600');
          uploadImagesStatus.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
        }
        return;
      }

      // Disable button and show loading
      if (uploadImagesBtn) {
        uploadImagesBtn.disabled = true;
        uploadImagesBtn.textContent = 'Uploading...';
      }
      if (uploadImagesStatus) {
        uploadImagesStatus.className = 'p-3 bg-blue-50 text-blue-700 text-sm rounded-lg';
        uploadImagesStatus.textContent = 'Uploading images...';
        uploadImagesStatus.classList.remove('hidden');
      }

      try {
        const formData = new FormData();
        formData.append('archive', file);

        const response = await fetch(`/api/admin/quiz/${quizId}/upload-images`, {
          method: 'POST',
          body: formData
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Upload failed');
        }

        // Success
        if (uploadImagesStatus) {
          uploadImagesStatus.className = 'p-3 bg-emerald-50 text-emerald-700 text-sm rounded-lg';
          uploadImagesStatus.textContent = `âœ… Successfully uploaded ${result.uploadedCount} images. ${result.replacedCount} paths updated in quiz.`;
        }

        // Reload questions to show updated paths
        setTimeout(() => {
          window.location.reload();
        }, 1500);

      } catch (error) {
        const errorMessage = error instanceof Error ? error.message : 'Unknown error';
        if (uploadImagesStatus) {
          uploadImagesStatus.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
          uploadImagesStatus.textContent = `âŒ Error: ${errorMessage}`;
        }
        console.error('Image upload error:', error);
      } finally {
        if (uploadImagesBtn) {
          uploadImagesBtn.disabled = false;
          uploadImagesBtn.textContent = 'Upload Images';
        }
      }
    });

    // Handle append questions from markdown
    const appendForm = document.getElementById('append-questions-form');
    const appendStatus = document.getElementById('append-status');
    const appendBtn = document.getElementById('append-questions-btn');

    appendForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const fileInput = document.getElementById('append-quiz-file');
      const file = fileInput && fileInput instanceof HTMLInputElement ? fileInput.files?.[0] : null;
      
      if (!file) {
        if (appendStatus) {
          appendStatus.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
          appendStatus.textContent = 'Harap pilih file';
          appendStatus.classList.remove('hidden');
        }
        return;
      }
      
      if (appendBtn) {
        appendBtn.disabled = true;
        appendBtn.textContent = 'Menambahkan...';
      }
      if (appendStatus) {
        appendStatus.className = 'p-3 bg-blue-50 text-blue-700 text-sm rounded-lg';
        appendStatus.textContent = 'Memproses file...';
        appendStatus.classList.remove('hidden');
      }
      
      const formData = new FormData();
      formData.append('file', file);
      
      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/append-questions`, {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (response.ok) {
          if (appendStatus) {
            appendStatus.className = 'p-3 bg-emerald-50 text-emerald-700 text-sm rounded-lg';
            appendStatus.textContent = `âœ“ Berhasil menambahkan ${result.appendedCount} soal. Total soal sekarang: ${result.totalCount}`;
          }
          
          // Reload the page to show new questions
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        } else {
          if (appendStatus) {
            appendStatus.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
            appendStatus.textContent = 'Gagal: ' + (result.error || 'Kesalahan tidak dikenal');
          }
        }
      } catch (error) {
        if (appendStatus) {
          appendStatus.className = 'p-3 bg-red-50 text-red-700 text-sm rounded-lg';
          appendStatus.textContent = 'Gagal menambahkan soal';
        }
        console.error(error);
      } finally {
        if (appendBtn) {
          appendBtn.disabled = false;
          appendBtn.textContent = 'Tambahkan Soal';
        }
      }
    });
  </script>
</Layout>

