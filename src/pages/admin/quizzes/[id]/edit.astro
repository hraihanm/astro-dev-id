  <style is:global>
    /* Question number grid - match quiz page exactly */
    .question-number {
      width: 2.25rem;
      height: 2.25rem;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 0.5rem;
      cursor: grab;
      font-weight: 600;
      transition: all 0.15s ease-in-out;
      font-size: 0.8125rem;
      border: 2px solid transparent;
      position: relative;
      flex-shrink: 0;
      user-select: none;
    }
    
    @media (min-width: 640px) {
      .question-number {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.625rem;
        font-size: 0.875rem;
      }
    }

    .question-number:hover {
      transform: scale(1.08);
      z-index: 10;
    }
    
    .question-number:active {
      transform: translateY(-1px) scale(1.02);
    }

    /* Unanswered - Subtle slate */
    .question-number.unanswered {
      background-color: #f8fafc;
      color: #64748b;
      border-color: #e2e8f0;
    }

    /* Current question - Bold blue */
    .question-number.current {
      background-color: #3b82f6 !important;
      color: white !important;
      font-weight: 700 !important;
      border-color: #3b82f6 !important;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2), 0 4px 6px -1px rgba(59, 130, 246, 0.3) !important;
      transform: scale(1.1) !important;
    }

    .question-number.current:hover {
      transform: scale(1.1) !important;
    }

    /* Drag state */
    .question-number.dragging {
      opacity: 0.5;
      cursor: grabbing;
      z-index: 1000;
    }

    /* Drag-over state */
    .question-number.drag-over {
      background-color: #dbeafe !important;
      color: #1e40af !important;
      border-color: #93c5fd !important;
      transform: scale(1.08);
    }

    .question-number.current.drag-over {
      background-color: #3b82f6 !important;
      color: white !important;
      border-color: #3b82f6 !important;
    }

    /* Animation for swap/shift */
    .question-number.swapping {
      position: relative;
      will-change: transform;
    }

    /* Enhanced form inputs */
    textarea,
    input[type="text"],
    input[type="number"] {
      transition: all 0.2s ease;
    }
    
    textarea:focus,
    input[type="text"]:focus,
    input[type="number"]:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    textarea {
      resize: vertical;
      min-height: 60px;
    }
    
    label {
      font-weight: 600;
      color: #374151;
    }
    
    .question-text,
    .question-template {
      font-size: 1rem;
      line-height: 1.625;
      font-family: system-ui, -apple-system, sans-serif;
    }
    
    .solution-text {
      background: #f8fafc;
      border-color: #cbd5e1;
    }
    
    .solution-text:focus {
      background: #ffffff;
      border-color: #94a3b8;
      box-shadow: 0 0 0 3px rgba(100, 116, 139, 0.1);
    }

