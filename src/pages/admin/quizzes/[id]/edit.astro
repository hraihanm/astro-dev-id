      }

      return questionDiv;
    }

    function attachQuestionEventListeners(questionDiv, question) {
      // Delete question
      questionDiv.querySelector('.delete-question-btn')?.addEventListener('click', () => {
        if (confirm('Delete this question?')) {
          questionDiv.remove();
          updateQuestionIndices();
          updateQuestionCount();
        }
      });

      // Move up/down
      questionDiv.querySelector('.move-up-btn')?.addEventListener('click', () => {
        const prev = questionDiv.previousElementSibling;
        if (prev) {
          questionsContainer.insertBefore(questionDiv, prev);
          updateQuestionIndices();
        }
      });

      questionDiv.querySelector('.move-down-btn')?.addEventListener('click', () => {
        const next = questionDiv.nextElementSibling;
        if (next) {
          questionsContainer.insertBefore(next, questionDiv);
          updateQuestionIndices();
        }
      });

      // Drag and drop
      questionDiv.addEventListener('dragstart', (e) => {
        e.dataTransfer.effectAllowed = 'move';
        questionDiv.classList.add('dragging');
      });

      questionDiv.addEventListener('dragend', () => {
        questionDiv.classList.remove('dragging');
        updateQuestionIndices();
      });

      questionDiv.addEventListener('dragover', (e) => {
        e.preventDefault();
        const dragging = document.querySelector('.dragging');
        if (dragging && dragging !== questionDiv) {
          const box = questionDiv.getBoundingClientRect();
          const offset = e.clientY - box.top;
          if (offset > box.height / 2) {
            questionsContainer.insertBefore(dragging, questionDiv.nextSibling);
          } else {
            questionsContainer.insertBefore(dragging, questionDiv);
          }
        }
      });

      // Preview refresh button
      const refreshBtn = questionDiv.querySelector('.refresh-preview-btn');
      if (refreshBtn) {
        refreshBtn.addEventListener('click', () => {
          updatePreview(questionDiv, question);
        });
      }

      // Auto-update preview on input
      const questionTextarea = questionDiv.querySelector('.question-text');
      if (questionTextarea) {
        questionTextarea.addEventListener('input', () => {
          setTimeout(() => updatePreview(questionDiv, question), 300);
        });
      }

      questionDiv.querySelectorAll('.option-text, .correct-answer-check').forEach(el => {
        el.addEventListener('change', () => {
          setTimeout(() => updatePreview(questionDiv, question), 300);
        });
      });

      // Type-specific listeners
      if (question.type === 'multiple-choice' || question.type === 'complex-multiple-choice') {
        // Add option
        questionDiv.querySelector('.add-option-btn')?.addEventListener('click', () => {
          const container = questionDiv.querySelector('.options-container');
          const optionCount = container.children.length;
          if (optionCount >= 10) {
            alert('Maximum 10 options allowed');
            return;
          }

          const isComplex = question.type === 'complex-multiple-choice';
          const newOption = document.createElement('div');
          newOption.className = 'option-input-group';
          newOption.innerHTML = `
            <input
              type="${isComplex ? 'checkbox' : 'radio'}"
              name="correct-${question.id}"
              value="${optionCount + 1}"
              class="correct-answer-check mt-3"
            />
            <input
              type="text"
              class="option-text option-input px-4 py-2 border border-gray-300 rounded-md text-base"
              placeholder="Option ${optionCount + 1}"
              required
            />
            <button
              type="button"
              class="delete-option-btn text-red-600 hover:text-red-800 px-3 py-2 font-bold text-lg"
            >
              √ó
            </button>
          `;

          newOption.querySelector('.delete-option-btn')?.addEventListener('click', () => {
            if (container.children.length > 2) {
              newOption.remove();
              updatePreview(questionDiv, question);
            } else {
              alert('At least 2 options required');
            }
          });

          newOption.querySelector('.option-text')?.addEventListener('input', () => {
            setTimeout(() => updatePreview(questionDiv, question), 300);
          });

          newOption.querySelector('.correct-answer-check')?.addEventListener('change', () => {
            updatePreview(questionDiv, question);
          });

          container.appendChild(newOption);
          updatePreview(questionDiv, question);
        });

        // Delete option
        questionDiv.querySelectorAll('.delete-option-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            const container = questionDiv.querySelector('.options-container');
            if (container.children.length > 2) {
              btn.closest('.option-input-group')?.remove();
              updatePreview(questionDiv, question);
            } else {
              alert('At least 2 options required');
            }
          });
        });
      }

      if (question.type === 'fill-in-the-blank') {
        // Add blank
        questionDiv.querySelector('.add-blank-btn')?.addEventListener('click', () => {
          const container = questionDiv.querySelector('.blanks-container');
          const blankCount = container.querySelectorAll('.blank-group').length;
          
          const newBlank = document.createElement('div');
          newBlank.className = 'blank-group border border-gray-200 rounded-lg p-4 bg-gray-50';
          newBlank.innerHTML = `
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">Blank {${blankCount}}</span>
              <button
                type="button"
                class="delete-blank-btn text-red-600 hover:text-red-800 text-xs font-medium"
              >
                Remove
              </button>
            </div>
            <input
              type="text"
              class="blank-answers w-full px-4 py-2 border border-gray-300 rounded-md text-base mb-2"
              placeholder="Correct answer(s), separated by commas"
              required
            />
            <label class="flex items-center space-x-2">
              <input type="checkbox" class="blank-case-sensitive w-4 h-4" />
              <span class="text-xs text-gray-600">Case sensitive</span>
            </label>
          `;

          newBlank.querySelector('.delete-blank-btn')?.addEventListener('click', () => {
            newBlank.remove();
          });

          if (container.querySelector('p')) {
            container.innerHTML = '';
          }
          container.appendChild(newBlank);
        });

        // Delete blank
        questionDiv.querySelectorAll('.delete-blank-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            btn.closest('.blank-group')?.remove();
          });
        });
      }
    }

    function updateQuestionIndices() {
      const questions = questionsContainer.querySelectorAll('.question-card');
      questions.forEach((q, index) => {
        const title = q.querySelector('h4');
        if (title) {
          const typeSpan = q.querySelector('.text-xs.text-gray-500');
          title.textContent = `Question ${index + 1}`;
        }
        q.dataset.index = index;

        // Update move buttons
        const moveUpBtn = q.querySelector('.move-up-btn');
        const moveDownBtn = q.querySelector('.move-down-btn');
        if (moveUpBtn) moveUpBtn.disabled = index === 0;
        if (moveDownBtn) moveDownBtn.disabled = index === questions.length - 1;
      });
    }

    function updateQuestionCount() {
      const count = questionsContainer.children.length;
      document.getElementById('question-count').textContent = count;
    }

    function collectQuestions() {
      const questions = [];
      const questionCards = questionsContainer.querySelectorAll('.question-card');

      questionCards.forEach((card, index) => {
        const questionId = parseInt(card.dataset.questionId);
        const typeSpan = card.querySelector('.text-xs.text-gray-500');
        const typeText = typeSpan?.textContent.toLowerCase();
        
        let type = 'multiple-choice';
        if (typeText.includes('complex')) type = 'complex-multiple-choice';
        else if (typeText.includes('essay')) type = 'essay';
        else if (typeText.includes('fill')) type = 'fill-in-the-blank';

        const baseQuestion = {
          id: questionId,
          type: type,
          images: [],
          metadata: {}
        };

        if (type === 'multiple-choice' || type === 'complex-multiple-choice') {
          const questionText = card.querySelector('.question-text')?.value || '';
          const solution = card.querySelector('.solution-text')?.value || '';
          const options = [];
          card.querySelectorAll('.option-text').forEach(input => {
            const val = input.value.trim();
            if (val) options.push(val);
          });

          if (type === 'complex-multiple-choice') {
            const correctAnswers = [];
            card.querySelectorAll('.correct-answer-check:checked').forEach(input => {
              correctAnswers.push(parseInt(input.value));
            });
            questions.push({
              ...baseQuestion,
              question: questionText,
              options: options,
              correctAnswers: correctAnswers.length > 0 ? correctAnswers : [1],
              metadata: { solution }
            });
          } else {
            const correctRadio = card.querySelector('.correct-answer-check:checked');
            const correctAnswer = correctRadio ? parseInt(correctRadio.value) : 1;
            questions.push({
              ...baseQuestion,
              question: questionText,
              options: options,
              correctAnswer: correctAnswer,
              metadata: { solution }
            });
          }
        } else if (type === 'essay') {
          const questionText = card.querySelector('.question-text')?.value || '';
          const maxWords = parseInt(card.querySelector('.essay-max-words')?.value) || undefined;
          const allowFileUpload = card.querySelector('.essay-allow-upload')?.checked || false;
          const rubric = card.querySelector('.essay-rubric')?.value || '';

          questions.push({
            ...baseQuestion,
            question: questionText,
            maxWords: maxWords,
            allowFileUpload: allowFileUpload,
            rubric: rubric
          });
        } else if (type === 'fill-in-the-blank') {
          const template = card.querySelector('.question-template')?.value || '';
          const solution = card.querySelector('.solution-text')?.value || '';
          const blanks = [];

          card.querySelectorAll('.blank-group').forEach((blankGroup, idx) => {
            const answersInput = blankGroup.querySelector('.blank-answers')?.value || '';
            const caseSensitive = blankGroup.querySelector('.blank-case-sensitive')?.checked || false;
            const answers = answersInput.split(',').map(a => a.trim()).filter(a => a);

            if (answers.length > 0) {
              blanks.push({
                index: idx,
                correctAnswers: answers,
                caseSensitive: caseSensitive
              });
            }
          });

          questions.push({
            ...baseQuestion,
            question: template,
            questionTemplate: template,
            blanks: blanks,
            metadata: { solution }
          });
        }
      });

      return questions;
    }

    // Initialize questions
    if (questions.length > 0) {
      questions.forEach((q, index) => {
        const editor = renderQuestion(q, index);
        questionsContainer.appendChild(editor);
      });
      updateQuestionCount();
      updateQuestionIndices();
    } else {
      questionsContainer.innerHTML = `
        <div class="text-center py-12 text-gray-500 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-lg font-medium mb-2">No questions yet</p>
          <p class="text-sm">Click "+ Add Question" to start creating your quiz</p>
        </div>
      `;
    }

    // Add new question
    addQuestionBtn?.addEventListener('click', () => {
      const selectedType = questionTypeSelect.value;
      const newQuestion = {
        id: ++questionCounter,
        type: selectedType,
        question: '',
        images: [],
        metadata: {}
      };

      if (selectedType === 'multiple-choice' || selectedType === 'complex-multiple-choice') {
        newQuestion.options = ['', ''];
        if (selectedType === 'complex-multiple-choice') {
          newQuestion.correctAnswers = [1];
        } else {
          newQuestion.correctAnswer = 1;
        }
      } else if (selectedType === 'essay') {
        newQuestion.maxWords = undefined;
        newQuestion.allowFileUpload = false;
        newQuestion.rubric = '';
      } else if (selectedType === 'fill-in-the-blank') {
        newQuestion.questionTemplate = '';
        newQuestion.blanks = [];
      }

      if (questionsContainer.querySelector('.text-center')) {
        questionsContainer.innerHTML = '';
      }

      const editor = renderQuestion(newQuestion, questionsContainer.children.length);
      questionsContainer.appendChild(editor);
      updateQuestionCount();
      updateQuestionIndices();
      editor.scrollIntoView({ behavior: 'smooth', block: 'center' });
    });

    // Submit form
    quizForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const questions = collectQuestions();
      
      if (questions.length === 0) {
        alert('Please add at least one question');
        return;
      }

      const formData = {
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        timeLimit: parseInt(document.getElementById('timeLimit').value) || undefined,
        maxAttempts: parseInt(document.getElementById('maxAttempts').value) || undefined,
        questions: questions
      };

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/update`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (response.ok) {
          alert('Quiz updated successfully!');
          window.location.reload();
        } else {
          alert('Error: ' + (result.error || 'Failed to update quiz'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while updating the quiz');
      }
    });

    // Delete quiz
    deleteQuizBtn?.addEventListener('click', async () => {
      if (!confirm('Are you sure you want to delete this quiz? This cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/delete`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (response.ok) {
          alert('Quiz deleted successfully!');
          window.location.href = '/admin/quizzes';
        } else {
          alert('Error: ' + (result.error || 'Failed to delete quiz'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while deleting the quiz');
      }
    });
  </script>
