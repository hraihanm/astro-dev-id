    // Setup tooltip positioning with fixed positioning
    function setupTooltipPositioning(container) {
      if (!container) return;
      
      container.querySelectorAll('.tooltip-wrapper').forEach(wrapper => {
        // Skip if already set up
        if (wrapper.dataset.tooltipSetup === 'true') return;
        
        const icon = wrapper.querySelector('svg');
        const tooltip = wrapper.querySelector('.tooltip');
        if (!icon || !tooltip) return;
        
        function updateTooltipPosition() {
          const iconRect = icon.getBoundingClientRect();
          const viewportWidth = window.innerWidth;
          const viewportHeight = window.innerHeight;
          const padding = 8; // Space between icon and tooltip
          const edgeMargin = 12; // Minimum margin from viewport edges
          
          // Temporarily show tooltip to measure it
          const wasVisible = tooltip.style.visibility === 'visible';
          tooltip.style.visibility = 'visible';
          tooltip.style.opacity = '0';
          
          const tooltipRect = tooltip.getBoundingClientRect();
          const tooltipWidth = tooltipRect.width;
          const tooltipHeight = tooltipRect.height;
          
          // Reset visibility
          if (!wasVisible) {
            tooltip.style.visibility = '';
            tooltip.style.opacity = '';
          }
          
          // Calculate preferred position (above icon, centered)
          let left = iconRect.left + iconRect.width / 2;
          let top = iconRect.top - padding;
          let transform = 'translate(-50%, -100%)';
          let arrowPosition = 'bottom'; // Arrow points down (tooltip is above)
          
          // Check if tooltip would be cut off at the top
          if (top - tooltipHeight < edgeMargin) {
            // Position below icon instead
            top = iconRect.bottom + padding;
            transform = 'translate(-50%, 0)';
            arrowPosition = 'top'; // Arrow points up (tooltip is below)
          }
          
          // Check if tooltip would be cut off at the bottom
          if (top + tooltipHeight > viewportHeight - edgeMargin) {
            // Position above icon (back to default)
            top = iconRect.top - padding;
            transform = 'translate(-50%, -100%)';
            arrowPosition = 'bottom';
            // But if there's not enough space above either, position it in the middle vertically
            if (top - tooltipHeight < edgeMargin) {
              top = (viewportHeight - tooltipHeight) / 2;
            }
          }
          
          // Check if tooltip would be cut off on the left
          const tooltipLeft = left - tooltipWidth / 2;
          if (tooltipLeft < edgeMargin) {
            left = tooltipWidth / 2 + edgeMargin;
            transform = transform.replace('translate(-50%', 'translate(0');
          }
          
          // Check if tooltip would be cut off on the right
          const tooltipRight = left + tooltipWidth / 2;
          if (tooltipRight > viewportWidth - edgeMargin) {
            left = viewportWidth - tooltipWidth / 2 - edgeMargin;
            transform = transform.replace('translate(-50%', 'translate(-100%');
          }
          
          // Apply position
          tooltip.style.left = left + 'px';
          tooltip.style.top = top + 'px';
          tooltip.style.transform = transform;
          tooltip.style.bottom = 'auto';
          
          // Update arrow position if needed (the CSS already has arrow at bottom, 
          // but we could add a class to flip it if tooltip is below)
          if (arrowPosition === 'top') {
            tooltip.classList.add('tooltip-below');
          } else {
            tooltip.classList.remove('tooltip-below');
          }
        }
        
        // Remove any existing listeners to avoid duplicates
        const existingHandler = wrapper._tooltipHandler;
        if (existingHandler) {
          wrapper.removeEventListener('mouseenter', existingHandler);
        }
        
        const handler = () => {
          // Use requestAnimationFrame to ensure DOM is ready
          requestAnimationFrame(() => {
            updateTooltipPosition();
          });
        };
        wrapper._tooltipHandler = handler;
        wrapper.addEventListener('mouseenter', handler);
        
        // Update position on scroll/resize
        const updateOnScroll = () => {
          // Check if tooltip is visible
          const isVisible = tooltip.style.visibility === 'visible' || 
                          window.getComputedStyle(tooltip).visibility === 'visible';
          if (isVisible) {
            updateTooltipPosition();
          }
        };
        window.addEventListener('scroll', updateOnScroll, true);
        window.addEventListener('resize', updateOnScroll);
        
        // Mark as set up
        wrapper.dataset.tooltipSetup = 'true';
      });
    }

