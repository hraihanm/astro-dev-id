export const prerender = false;

import Layout from '../../../../components/Layout.astro';
import Icon from '../../../../components/icons/Icon.astro';
import { getQuiz } from '../../../../lib/quizzes';
import quizSharedStyles from '../../../../styles/quiz-shared.css?url';
import { requireAdmin } from '../../../../lib/auth-guard';

const user = await requireAdmin(Astro.cookies);
if (!user) {
  return Astro.redirect('/');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/quizzes');
}

const quiz = await getQuiz(parseInt(id), { role: 'admin', classroomIds: [] });

if (!quiz) {
  return Astro.redirect('/admin/quizzes');
}

const settings = quiz.settings || {};
const questions = quiz.questions || [];
const quizTypeRaw = quiz.quizType || settings.quizType || 'exercise';
const quizType = quizTypeRaw === 'tryout' ? 'exam' : quizTypeRaw === 'latihan' ? 'exercise' : quizTypeRaw;
const isExam = quizType === 'exam';
const initialAvailableFrom = quiz.availableFrom ? new Date(quiz.availableFrom).toISOString().slice(0,16) : '';
const initialAvailableUntil = quiz.availableUntil ? new Date(quiz.availableUntil).toISOString().slice(0,16) : '';
const initialOpenDuration = quiz.openDurationSeconds ? Math.floor(quiz.openDurationSeconds / 60) : '';
const initialScope = quiz.chapterId ? 'chapter' : quiz.courseId ? 'course' : 'standalone';

// Normalize questions to ensure correct format
function normalizeQuestion(q: any): any {
  const baseQuestion = {
    id: q.id,
    type: q.type || 'multiple-choice',
    question: q.question || '',
    images: q.images || [],
    metadata: q.metadata || {}
  };

  switch (q.type) {
    case 'complex-multiple-choice':
      return {
        ...baseQuestion,
        options: q.options || [],
        correctAnswers: Array.isArray(q.correctAnswers) 
          ? q.correctAnswers 
          : (Array.isArray(q.correctAnswer) ? q.correctAnswer : [q.correctAnswer || 1])
      };
    case 'essay':
      return {
        ...baseQuestion,
        maxWords: q.maxWords,
        allowFileUpload: q.allowFileUpload || false,
        rubric: q.rubric || ''
      };
    case 'fill-in-the-blank':
      return {
        ...baseQuestion,
        questionTemplate: q.questionTemplate || q.question || '',
        blanks: q.blanks || []
      };
    case 'multiple-choice':
    default:
      return {
        ...baseQuestion,
        type: 'multiple-choice',
        options: q.options || [],
        correctAnswer: q.correctAnswer || 1
      };
  }
}

const normalizedQuestions = Array.isArray(questions) 
  ? questions.map(normalizeQuestion)
  : [];
