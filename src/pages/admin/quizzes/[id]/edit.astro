export const prerender = false;

import Layout from '../../../../components/Layout.astro';
import { getQuiz } from '../../../../lib/quizzes';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/quizzes');
}

const quiz = await getQuiz(parseInt(id));

if (!quiz) {
  return Astro.redirect('/admin/quizzes');
}

const settings = quiz.settings || {};
const questions = quiz.questions || [];

// Normalize questions to ensure correct format
function normalizeQuestion(q: any): any {
  const baseQuestion = {
    id: q.id,
    type: q.type || 'multiple-choice',
    question: q.question || '',
    images: q.images || [],
    metadata: q.metadata || {}
  };

  switch (q.type) {
    case 'complex-multiple-choice':
      return {
        ...baseQuestion,
        options: q.options || [],
        correctAnswers: Array.isArray(q.correctAnswers) 
          ? q.correctAnswers 
          : (Array.isArray(q.correctAnswer) ? q.correctAnswer : [q.correctAnswer || 1])
      };
    case 'essay':
      return {
        ...baseQuestion,
        maxWords: q.maxWords,
        allowFileUpload: q.allowFileUpload || false,
        rubric: q.rubric || ''
      };
    case 'fill-in-the-blank':
      return {
        ...baseQuestion,
        questionTemplate: q.questionTemplate || q.question || '',
        blanks: q.blanks || []
      };
    case 'multiple-choice':
    default:
      return {
        ...baseQuestion,
        type: 'multiple-choice',
        options: q.options || [],
        correctAnswer: q.correctAnswer || 1
      };
  }
}

const normalizedQuestions = Array.isArray(questions) 
  ? questions.map(normalizeQuestion)
  : [];
