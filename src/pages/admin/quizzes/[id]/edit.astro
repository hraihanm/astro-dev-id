        btn.addEventListener('dragover', (e) => {
          e.preventDefault();
          e.dataTransfer.dropEffect = 'move';
          if (draggedIndex !== null && draggedIndex !== index) {
            btn.classList.add('drag-over');
          }
        });

        btn.addEventListener('dragleave', () => {
          btn.classList.remove('drag-over');
        });

        btn.addEventListener('drop', (e) => {
          e.preventDefault();
          btn.classList.remove('drag-over');
          
          if (draggedIndex !== null && draggedIndex !== index) {
            const mode = getReorderMode();
            const fromIndex = draggedIndex;
            const toIndex = index;
            
            // Save current question before reordering
            saveCurrentQuestion();
            
            // Capture initial positions and displayed numbers keyed by question id for FLIP
            const beforePositions = new Map();
            const beforeNumbers = new Map();
            Array.from(questionGrid.children).forEach((child, idx) => {
              const id = child.dataset.qid || child.dataset.index;
              if (!id) return;
              const rect = child.getBoundingClientRect();
              beforePositions.set(id, { x: rect.left, y: rect.top });
              beforeNumbers.set(id, idx + 1);
            });

            // Reorder data
              if (mode === 'swap') {
                [questionsData[fromIndex], questionsData[toIndex]] = 
                  [questionsData[toIndex], questionsData[fromIndex]];
                
                if (currentQuestionIndex === fromIndex) {
                  currentQuestionIndex = toIndex;
                } else if (currentQuestionIndex === toIndex) {
                  currentQuestionIndex = fromIndex;
                }
              } else {
                const draggedQuestion = questionsData[fromIndex];
                questionsData.splice(fromIndex, 1);
                questionsData.splice(toIndex, 0, draggedQuestion);
                
                if (currentQuestionIndex === fromIndex) {
                  currentQuestionIndex = toIndex;
                } else if (currentQuestionIndex > fromIndex && currentQuestionIndex <= toIndex) {
                  currentQuestionIndex--;
                } else if (currentQuestionIndex < fromIndex && currentQuestionIndex >= toIndex) {
                  currentQuestionIndex++;
                }
              }
              
              // Track reorder for delta save
              questionsReordered = true;
              
            // Re-render grid (new order) and current question
              renderQuestionGrid();
              renderCurrentQuestion();

            // Prepare maps for after state
            const afterButtons = Array.from(questionGrid.children);
            const afterNumbers = new Map();
            afterButtons.forEach((child, idx) => {
              const id = child.dataset.qid || child.dataset.index;
              if (!id) return;
              afterNumbers.set(id, idx + 1);
            });

            // Apply FLIP animation from previous positions to new positions,
            // delay updating the displayed number until the animation ends
            afterButtons.forEach(child => {
              const id = child.dataset.qid || child.dataset.index;
              if (!id) return;
              const prev = beforePositions.get(id);
              if (!prev) return;
              const rect = child.getBoundingClientRect();
              const dx = prev.x - rect.x;
              const dy = prev.y - rect.y;
              const targetScale = child.classList.contains('current') ? 1.1 : 1;

              // Show old number during animation
              const oldNum = beforeNumbers.get(id);
              if (oldNum) child.textContent = String(oldNum);

              if (Math.abs(dx) < 1 && Math.abs(dy) < 1) {
                // No movement; just ensure number is updated to new after state
                const newNum = afterNumbers.get(id);
                if (newNum) child.textContent = String(newNum);
                return;
              }

              child.style.transition = 'none';
              child.style.setProperty('transform', `translate(${dx}px, ${dy}px) scale(${targetScale})`, 'important');
              child.style.zIndex = '100';
              requestAnimationFrame(() => {
                child.style.transition = 'transform 240ms cubic-bezier(0.4, 0, 0.2, 1)';
                child.style.setProperty('transform', `scale(${targetScale})`, 'important');
              });
              child.addEventListener('transitionend', () => {
                child.style.transition = '';
                child.style.removeProperty('transform');
                child.style.zIndex = '';
                const newNum = afterNumbers.get(id);
                if (newNum) child.textContent = String(newNum);
              }, { once: true });
            });

            // Fallback: ensure numbers are correct after animation window
            setTimeout(() => {
              Array.from(questionGrid.children).forEach((child, idx) => {
                child.textContent = String(idx + 1);
              });
            }, 260);
          }
        });

        questionGrid.appendChild(btn);
