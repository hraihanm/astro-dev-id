            >${escapeHtml(question.question)}</textarea>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Max Words (Optional)
              </label>
              <input
                type="number"
                class="essay-max-words w-full px-4 py-2 border border-gray-300 rounded-md text-base"
                min="1"
                value="${question.maxWords || ''}"
                placeholder="e.g., 500"
              />
            </div>
            <div class="flex items-center">
              <label class="flex items-center space-x-2">
                <input
                  type="checkbox"
                  class="essay-allow-upload w-4 h-4"
                  ${question.allowFileUpload ? 'checked' : ''}
                />
                <span class="text-sm text-gray-700">Allow file upload (future)</span>
              </label>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Grading Rubric (Optional)
            </label>
            <textarea
              class="essay-rubric w-full px-4 py-3 border border-gray-300 rounded-md text-sm resize-y"
              rows="3"
              placeholder="Guidelines for grading"
            >${escapeHtml(question.rubric || question.metadata?.solution || '')}</textarea>
          </div>
        </div>
      `;
    }

    function renderFillInBlankEditor(question) {
      const template = question.questionTemplate || question.question || '';
      const blanks = question.blanks || [];

      return `
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 space-y-6">
          <div class="flex items-center justify-between pb-4 border-b">
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Question ${currentQuestionIndex + 1}</h3>
              <p class="text-sm text-gray-500 uppercase tracking-wide">Fill in the Blank</p>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Question Template *
            </label>
            <textarea
              class="question-template w-full px-4 py-3 border border-gray-300 rounded-md text-base resize-y"
              rows="3"
              required
              placeholder="Use {0}, {1}, etc. for blanks"
            >${escapeHtml(template)}</textarea>
            <p class="mt-1 text-xs text-gray-500">Use {'{0}'}, {'{1}'} to mark blanks</p>
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <label class="block text-sm font-medium text-gray-700">
                Blank Answers
              </label>
              <button
                type="button"
                class="add-blank-btn text-blue-600 hover:text-blue-800 text-sm font-medium"
              >
                + Add Blank
              </button>
            </div>
            <div class="blanks-container space-y-3">
              ${blanks.length > 0 ? blanks.map((blank, idx) => `
                <div class="blank-group border border-gray-200 rounded-lg p-4 bg-gray-50">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700">Blank {${blank.index}}</span>
                    <button
                      type="button"
                      class="delete-blank-btn text-red-600 hover:text-red-800 text-xs font-medium"
                    >
                      Remove
                    </button>
                  </div>
                  <input
                    type="text"
                    class="blank-answers w-full px-4 py-2 border border-gray-300 rounded-md text-base mb-2"
                    value="${escapeHtml((blank.correctAnswers || []).join(', '))}"
                    placeholder="Correct answers (comma-separated)"
                    required
                  />
                  <label class="flex items-center space-x-2">
                    <input type="checkbox" class="blank-case-sensitive w-4 h-4" ${blank.caseSensitive ? 'checked' : ''} />
                    <span class="text-xs text-gray-600">Case sensitive</span>
                  </label>
                </div>
              `).join('') : '<p class="text-sm text-gray-500 py-4 text-center">No blanks yet</p>'}
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Solution (Optional)
            </label>
            <textarea
              class="solution-text w-full px-4 py-3 border border-gray-300 rounded-md text-sm resize-y"
              rows="2"
            >${escapeHtml(question.metadata?.solution || '')}</textarea>
          </div>
        </div>
      `;
    }

    function setupQuestionEventListeners(question) {
      const editor = questionEditor.querySelector('.question-edit-form');

      // Auto-update preview
      const questionTextarea = editor.querySelector('.question-text, .question-template');
      if (questionTextarea) {
        questionTextarea.addEventListener('input', () => {
          setTimeout(() => updatePreview(question), 300);
        });
      }

      editor.querySelectorAll('.option-text, .correct-answer-check').forEach(el => {
        el.addEventListener('change', () => {
          setTimeout(() => updatePreview(question), 300);
        });
      });

      // Refresh preview button
      const refreshBtn = editor.querySelector('.refresh-preview-btn');
      if (refreshBtn) {
        refreshBtn.addEventListener('click', () => updatePreview(question));
      }

      // Add option
      const addOptionBtn = editor.querySelector('.add-option-btn');
      if (addOptionBtn) {
        addOptionBtn.addEventListener('click', () => {
          const container = editor.querySelector('.options-container');
          const optionCount = container.children.length;
          if (optionCount >= 10) {
            alert('Maximum 10 options');
            return;
          }

          const isComplex = question.type === 'complex-multiple-choice';
          const newOption = document.createElement('div');
          newOption.className = 'option-input-group';
          newOption.innerHTML = `
            <input type="${isComplex ? 'checkbox' : 'radio'}" name="correct-${question.id}" value="${optionCount + 1}" class="correct-answer-check mt-3" />
            <input type="text" class="option-text option-input px-4 py-2 border border-gray-300 rounded-md text-base" placeholder="Option ${optionCount + 1}" required />
            <button type="button" class="delete-option-btn text-red-600 hover:text-red-800 px-3 py-2 font-bold text-lg">√ó</button>
          `;

          newOption.querySelector('.delete-option-btn')?.addEventListener('click', () => {
            if (container.children.length > 2) {
              newOption.remove();
              updatePreview(question);
            } else {
              alert('At least 2 options required');
            }
          });

          newOption.querySelector('.option-text')?.addEventListener('input', () => {
            setTimeout(() => updatePreview(question), 300);
          });

          newOption.querySelector('.correct-answer-check')?.addEventListener('change', () => {
            updatePreview(question);
          });

          container.appendChild(newOption);
        });
      }

      // Delete option
      editor.querySelectorAll('.delete-option-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const container = editor.querySelector('.options-container');
          if (container.children.length > 2) {
            btn.closest('.option-input-group')?.remove();
            updatePreview(question);
          } else {
            alert('At least 2 options required');
          }
        });
      });

      // Add blank
      const addBlankBtn = editor.querySelector('.add-blank-btn');
      if (addBlankBtn) {
        addBlankBtn.addEventListener('click', () => {
          const container = editor.querySelector('.blanks-container');
          const blankCount = container.querySelectorAll('.blank-group').length;
          
          const newBlank = document.createElement('div');
          newBlank.className = 'blank-group border border-gray-200 rounded-lg p-4 bg-gray-50';
          newBlank.innerHTML = `
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">Blank {${blankCount}}</span>
              <button type="button" class="delete-blank-btn text-red-600 hover:text-red-800 text-xs font-medium">Remove</button>
            </div>
            <input type="text" class="blank-answers w-full px-4 py-2 border border-gray-300 rounded-md text-base mb-2" placeholder="Correct answers (comma-separated)" required />
            <label class="flex items-center space-x-2">
              <input type="checkbox" class="blank-case-sensitive w-4 h-4" />
              <span class="text-xs text-gray-600">Case sensitive</span>
            </label>
          `;

          newBlank.querySelector('.delete-blank-btn')?.addEventListener('click', () => {
            newBlank.remove();
          });

          if (container.querySelector('p')) {
            container.innerHTML = '';
          }
          container.appendChild(newBlank);
        });
      }

      // Delete blank
      editor.querySelectorAll('.delete-blank-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          btn.closest('.blank-group')?.remove();
        });
      });
    }

    function updatePreview(question) {
      const previewContent = questionEditor.querySelector('.preview-content');
      if (!previewContent) return;

      const editor = questionEditor.querySelector('.question-edit-form');
      const questionText = editor.querySelector('.question-text')?.value || '';
      const questionHtml = processLatex(questionText || 'No question entered');

      if (question.type === 'multiple-choice' || question.type === 'complex-multiple-choice') {
        const options = [];
        editor.querySelectorAll('.option-text').forEach(input => {
          const val = input.value.trim();
          if (val) options.push(val);
        });

        const correctAnswers = [];
        editor.querySelectorAll('.correct-answer-check:checked').forEach(input => {
          correctAnswers.push(parseInt(input.value));
        });

        const optionsHtml = options.map((opt, idx) => {
          const isCorrect = correctAnswers.includes(idx + 1);
          const optionHtml = processLatex(opt);
          return `
            <div class="preview-option ${isCorrect ? 'correct' : ''}">
              <div class="preview-option-bullet"></div>
              <div class="preview-option-content">${optionHtml}</div>
            </div>
          `;
        }).join('');

        previewContent.innerHTML = `
          <div class="preview-question">${questionHtml}</div>
          ${optionsHtml || '<p class="text-sm text-gray-500 italic">No options yet</p>'}
        `;
      }

      requestAnimationFrame(() => renderLatex(previewContent));
    }

    // Add question
    addQuestionBtn?.addEventListener('click', () => {
      const selectedType = questionTypeSelect.value;
      
      // Save current question first
      if (questionsData.length > 0) {
        saveCurrentQuestion();
      }

      const newQuestion = {
        id: ++questionCounter,
        type: selectedType,
        question: '',
        images: [],
        metadata: {}
      };

      if (selectedType === 'multiple-choice' || selectedType === 'complex-multiple-choice') {
        newQuestion.options = ['', ''];
        if (selectedType === 'complex-multiple-choice') {
          newQuestion.correctAnswers = [1];
        } else {
          newQuestion.correctAnswer = 1;
        }
      } else if (selectedType === 'essay') {
        newQuestion.maxWords = undefined;
        newQuestion.allowFileUpload = false;
        newQuestion.rubric = '';
      } else if (selectedType === 'fill-in-the-blank') {
        newQuestion.questionTemplate = '';
        newQuestion.blanks = [];
      }

      questionsData.push(newQuestion);
      currentQuestionIndex = questionsData.length - 1;
      
      renderQuestionGrid();
      renderCurrentQuestion();
    });

    // Delete current question
    deleteCurrentBtn?.addEventListener('click', () => {
      if (questionsData.length === 0) return;
      
      if (!confirm('Delete this question?')) return;

      questionsData.splice(currentQuestionIndex, 1);
      
      if (currentQuestionIndex >= questionsData.length) {
        currentQuestionIndex = Math.max(0, questionsData.length - 1);
      }
      
      renderQuestionGrid();
      renderCurrentQuestion();
    });

    // Save quiz
    saveQuizBtn?.addEventListener('click', async () => {
      // Save current question first
      if (questionsData.length > 0) {
        saveCurrentQuestion();
      }

      if (questionsData.length === 0) {
        alert('Please add at least one question');
        return;
      }

      const formData = {
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        timeLimit: parseInt(document.getElementById('timeLimit').value) || undefined,
        maxAttempts: parseInt(document.getElementById('maxAttempts').value) || undefined,
        questions: questionsData
      };

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/update`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (response.ok) {
          alert('Quiz saved successfully!');
        } else {
          alert('Error: ' + (result.error || 'Failed to save'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while saving');
      }
    });

    // Delete quiz
    deleteQuizBtn?.addEventListener('click', async () => {
      if (!confirm('Delete this quiz? This cannot be undone.')) return;

      try {
        const response = await fetch(`/api/admin/quiz/${quizId}/delete`, {
          method: 'DELETE'
        });

        const result = await response.json();

        if (response.ok) {
          alert('Quiz deleted!');
          window.location.href = '/admin/quizzes';
        } else {
          alert('Error: ' + (result.error || 'Failed to delete'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred');
      }
    });

    // Initialize
    renderQuestionGrid();
    renderCurrentQuestion();
  </script>
</Layout>
