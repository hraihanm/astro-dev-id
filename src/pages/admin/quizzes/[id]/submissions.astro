---
export const prerender = false;

import Layout from '../../../../components/Layout.astro';
import { getQuiz } from '../../../../lib/quizzes';
import { prisma } from '../../../../lib/db';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/quizzes');
}

const quiz = await getQuiz(parseInt(id));

if (!quiz) {
  return Astro.redirect('/admin/quizzes');
}

// Get all attempts for this quiz
const attempts = await prisma.quizAttempt.findMany({
  where: { quizId: parseInt(id) },
  include: {
    user: {
      select: {
        id: true,
        email: true,
        profile: {
          select: {
            fullName: true,
            nickname: true
          }
        }
      }
    }
  },
  orderBy: { completedAt: 'desc' }
});

// Format time spent
function formatTime(seconds: number): string {
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
}

// Format date
function formatDate(date: Date): string {
  return new Date(date).toLocaleString('id-ID', {
    day: 'numeric',
    month: 'short',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

const pendingCount = attempts.filter(a => !a.scoreReleasedAt).length;
const releasedCount = attempts.filter(a => a.scoreReleasedAt).length;
---

<Layout title={`Panel Try Out - ${quiz.title}`}>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <!-- Header -->
    <div class="bg-white border-b border-slate-200 sticky top-0 z-10 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href={`/admin/quizzes/${id}/edit`} class="text-slate-500 hover:text-slate-700 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <div>
              <h1 class="text-xl font-bold text-slate-900">Panel Try Out</h1>
              <p class="text-xs text-slate-500">{quiz.title}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Total Submissions</p>
              <p class="text-2xl font-bold text-slate-900 mt-1">{attempts.length}</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-amber-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Menunggu Pelepasan</p>
              <p class="text-2xl font-bold text-amber-600 mt-1">{pendingCount}</p>
            </div>
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-green-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Sudah Dilepaskan</p>
              <p class="text-2xl font-bold text-green-600 mt-1">{releasedCount}</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Submissions Table -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900">Daftar Submissions</h2>
        </div>
        
        {attempts.length === 0 ? (
          <div class="px-6 py-12 text-center">
            <svg class="w-12 h-12 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-slate-500">Belum ada submission untuk kuis ini</p>
          </div>
        ) : (
          <div>
            {pendingCount > 0 && (
              <div class="px-6 py-3 bg-amber-50 border-b border-amber-200 flex items-center justify-between">
                <span class="text-sm text-amber-800">
                  Ada {pendingCount} submission yang menunggu pelepasan skor
                </span>
                <button
                  onclick="releaseAllScores()"
                  class="px-4 py-2 bg-amber-600 text-white text-sm font-medium rounded-lg hover:bg-amber-700 transition-colors"
                >
                  Lepaskan Semua
                </button>
              </div>
            )}
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-200">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Siswa</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Skor</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Waktu</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Tanggal</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Aksi</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                  {attempts.map((attempt) => {
                    const userName = attempt.user.profile?.fullName || attempt.user.profile?.nickname || attempt.user.email;
                    const isReleased = !!attempt.scoreReleasedAt;
                    
                    return (
                      <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="text-sm font-medium text-slate-900">{userName}</div>
                          <div class="text-xs text-slate-500">{attempt.user.email}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex items-center gap-2">
                            <span class={`text-sm font-semibold ${
                              attempt.percentage >= 80 ? 'text-green-600' :
                              attempt.percentage >= 60 ? 'text-blue-600' :
                              attempt.percentage >= 40 ? 'text-amber-600' :
                              'text-red-600'
                            }`}>
                              {attempt.percentage}%
                            </span>
                            <span class="text-xs text-slate-500">
                              ({attempt.correctAnswers}/{attempt.totalQuestions})
                            </span>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                          {formatTime(attempt.timeSpent)}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                          {formatDate(attempt.completedAt)}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          {isReleased ? (
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              Dilepaskan
                            </span>
                          ) : (
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              Menunggu
                            </span>
                          )}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                          <div class="flex items-center justify-end gap-2">
                            <a
                              href={`/quizzes/${id}/review/${attempt.id}`}
                              target="_blank"
                              class="text-blue-600 hover:text-blue-800 transition-colors"
                            >
                              Review
                            </a>
                            {!isReleased && (
                              <button
                                onclick={`releaseScore(${attempt.id})`}
                                class="text-green-600 hover:text-green-800 transition-colors"
                              >
                                Lepaskan Skor
                              </button>
                            )}
                          </div>
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <script>
    async function releaseScore(attemptId) {
      if (!confirm('Lepaskan skor untuk submission ini? Siswa akan dapat melihat hasilnya.')) {
        return;
      }

      try {
        const response = await fetch(`/api/admin/quiz/attempt/${attemptId}/release`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();

        if (response.ok) {
          alert('Skor berhasil dilepaskan!');
          location.reload();
        } else {
          alert('Error: ' + (result.error || 'Gagal melepaskan skor'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat melepaskan skor');
      }
    }

    // Bulk release function
    async function releaseAllScores() {
      const pending = {pendingCount};
      
      if (pending === 0) {
        alert('Tidak ada skor yang perlu dilepaskan');
        return;
      }

      if (!confirm(`Lepaskan semua ${pending} skor yang menunggu?`)) {
        return;
      }

      try {
        const response = await fetch(`/api/admin/quiz/${id}/release-all`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();

        if (response.ok) {
          alert(`Berhasil melepaskan ${result.released} skor!`);
          location.reload();
        } else {
          alert('Error: ' + (result.error || 'Gagal melepaskan skor'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat melepaskan skor');
      }
    }
  </script>
</Layout>
