---
export const prerender = false;

import Layout from '../../../../components/Layout.astro';
import Icon from '../../../../components/icons/Icon.astro';
import { getQuiz } from '../../../../lib/quizzes';
import { prisma } from '../../../../lib/db';
import { requireAdmin } from '../../../../lib/auth-guard';

const user = await requireAdmin(Astro.cookies);
if (!user) {
  return Astro.redirect('/');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/quizzes');
}

const quiz = await getQuiz(parseInt(id));

if (!quiz) {
  return Astro.redirect('/admin/quizzes');
}

// Parse quiz questions to check for essay questions
const questions = typeof quiz.questions === 'string' ? JSON.parse(quiz.questions) : quiz.questions;
const hasEssayQuestions = Array.isArray(questions) && questions.some((q: any) => q.type === 'essay');
const essayQuestionIndices = Array.isArray(questions) 
  ? questions.map((q: any, idx: number) => q.type === 'essay' ? idx : -1).filter((idx: number) => idx >= 0)
  : [];

// Get all attempts for this quiz
const attempts = await prisma.quizAttempt.findMany({
  where: { quizId: parseInt(id) },
  include: {
    user: {
      select: {
        id: true,
        email: true,
        profile: {
          select: {
            fullName: true,
            nickname: true
          }
        }
      }
    }
  },
  orderBy: { completedAt: 'desc' }
});

// Parse essay grading for each attempt
const attemptsWithGrading = attempts.map(attempt => {
  const essayGrading = attempt.essayGrading 
    ? (typeof attempt.essayGrading === 'string' ? JSON.parse(attempt.essayGrading) : attempt.essayGrading)
    : null;
  
  let essayGradingStatus = null;
  if (hasEssayQuestions && essayGrading) {
    const gradedCount = essayQuestionIndices.filter((idx: number) => 
      essayGrading[idx.toString()] !== undefined
    ).length;
    const totalEssayCount = essayQuestionIndices.length;
    essayGradingStatus = {
      graded: gradedCount,
      total: totalEssayCount,
      complete: gradedCount === totalEssayCount && totalEssayCount > 0
    };
  }
  
  return {
    ...attempt,
    essayGradingStatus
  };
});

// Format time spent
function formatTime(seconds: number): string {
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
}

// Format date
function formatDate(date: Date): string {
  return new Date(date).toLocaleString('id-ID', {
    day: 'numeric',
    month: 'short',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

const pendingCount = attemptsWithGrading.filter(a => !a.scoreReleasedAt).length;
const releasedCount = attemptsWithGrading.filter(a => a.scoreReleasedAt).length;
const ungradedEssaysCount = hasEssayQuestions 
  ? attemptsWithGrading.filter(a => a.essayGradingStatus && !a.essayGradingStatus.complete).length
  : 0;
---

<Layout title={`Panel Submission - ${quiz.title}`}>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <!-- Header -->
    <div class="bg-white border-b border-slate-200 sticky top-0 z-10 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href={`/admin/quizzes/${id}/edit`} class="text-slate-500 hover:text-slate-700 transition-colors">
              <Icon name="arrow-left" class="w-5 h-5" />
            </a>
            <div>
              <h1 class="text-xl font-bold text-slate-900">Panel Submission</h1>
              <p class="text-xs text-slate-500">{quiz.title}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

      <!-- Stats -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class={`grid grid-cols-1 gap-4 mb-6 ${hasEssayQuestions ? 'md:grid-cols-4' : 'md:grid-cols-3'}`}>
        <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Total Submissions</p>
              <p class="text-2xl font-bold text-slate-900 mt-1">{attempts.length}</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
              <Icon name="document" class="w-6 h-6 text-blue-600" />
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-amber-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Menunggu Rilis</p>
              <p class="text-2xl font-bold text-amber-600 mt-1">{pendingCount}</p>
            </div>
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
              <Icon name="clock" class="w-6 h-6 text-amber-600" />
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm border border-green-200 p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-slate-600">Sudah Dirilis</p>
              <p class="text-2xl font-bold text-green-600 mt-1">{releasedCount}</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <Icon name="check-circle" class="w-6 h-6 text-green-600" />
            </div>
          </div>
        </div>
        {hasEssayQuestions && (
          <div class="bg-white rounded-lg shadow-sm border border-purple-200 p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-slate-600">Esai Belum Dinilai</p>
                <p class="text-2xl font-bold text-purple-600 mt-1">{ungradedEssaysCount}</p>
              </div>
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <Icon name="document" class="w-6 h-6 text-purple-600" />
              </div>
            </div>
          </div>
        )}
      </div>

      <!-- Submissions Table -->
      <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
          <h2 class="text-lg font-semibold text-slate-900">Daftar Submissions</h2>
        </div>
        
        {attempts.length === 0 ? (
          <div class="px-6 py-12 text-center">
            <Icon name="document" class="w-12 h-12 text-slate-400 mx-auto mb-4" />
            <p class="text-slate-500">Belum ada submission untuk kuis ini</p>
          </div>
        ) : (
          <div>
            <div class="px-6 py-3 bg-slate-50 border-b border-slate-200 flex items-center justify-between">
              <div class="text-sm text-slate-700">
                {pendingCount > 0
                  ? `Ada ${pendingCount} submission menunggu rilis skor`
                  : 'Semua skor sudah dirilis'}
              </div>
              <div class="flex items-center gap-2">
                <button
                  type="button"
                  data-release-all
                  data-quiz-id={id}
                  data-pending-count={pendingCount}
                  class="px-4 py-2 rounded-lg text-sm font-semibold text-white transition-colors disabled:opacity-60 disabled:cursor-not-allowed"
                  class:list={[
                    pendingCount > 0 ? 'bg-amber-600 hover:bg-amber-700' : 'bg-slate-300 text-slate-600 hover:bg-slate-300'
                  ]}
                  disabled={pendingCount === 0}
                >
                  Rilis semua skor
                </button>
                <span id="bulk-status" class="text-xs text-slate-500"></span>
              </div>
            </div>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-200">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Siswa</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Skor</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Waktu</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Tanggal</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Aksi</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                  {attemptsWithGrading.map((attempt) => {
                    const userName = attempt.user.profile?.fullName || attempt.user.profile?.nickname || attempt.user.email;
                    const isReleased = !!attempt.scoreReleasedAt;
                    
                    return (
                      <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="text-sm font-medium text-slate-900">{userName}</div>
                          <div class="text-xs text-slate-500">{attempt.user.email}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex items-center gap-2">
                            <span class={`text-sm font-semibold ${
                              attempt.percentage >= 80 ? 'text-green-600' :
                              attempt.percentage >= 60 ? 'text-blue-600' :
                              attempt.percentage >= 40 ? 'text-amber-600' :
                              'text-red-600'
                            }`}>
                              {attempt.percentage}%
                            </span>
                            <span class="text-xs text-slate-500">
                              ({attempt.correctAnswers}/{attempt.totalQuestions})
                            </span>
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                          {formatTime(attempt.timeSpent)}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                          {formatDate(attempt.completedAt)}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <div class="flex flex-col gap-1">
                            {isReleased ? (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <Icon name="check-circle" class="w-3 h-3 mr-1" />
                                Dirilis
                              </span>
                            ) : (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                                <Icon name="clock" class="w-3 h-3 mr-1" />
                                Menunggu
                              </span>
                            )}
                            {hasEssayQuestions && attempt.essayGradingStatus && (
                              attempt.essayGradingStatus.complete ? (
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-50 text-green-700 border border-green-200">
                                  Esai: {attempt.essayGradingStatus.graded}/{attempt.essayGradingStatus.total}
                                </span>
                              ) : (
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-50 text-amber-700 border border-amber-200">
                                  Esai: {attempt.essayGradingStatus.graded}/{attempt.essayGradingStatus.total}
                                </span>
                              )
                            )}
                          </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium align-middle min-w-[240px]">
                          <div class="inline-flex items-center justify-end gap-2 whitespace-nowrap">
                            {hasEssayQuestions && attempt.essayGradingStatus && !attempt.essayGradingStatus.complete ? (
                              <a
                                href={`/quizzes/${id}/review/${attempt.id}`}
                                target="_blank"
                                class="px-3 py-1.5 rounded-lg border border-amber-200 text-amber-700 bg-amber-50 hover:bg-amber-100 text-xs font-semibold transition-colors"
                              >
                                Grade Essays
                              </a>
                            ) : null}
                            <a
                              href={`/quizzes/${id}/review/${attempt.id}`}
                              target="_blank"
                              class="text-blue-600 hover:text-blue-800 transition-colors"
                            >
                              Review
                            </a>
                            <button
                              type="button"
                              data-release={attempt.id}
                              class={`px-3 py-1.5 rounded-lg border text-xs font-semibold transition-colors ${
                                isReleased
                                  ? 'border-green-100 text-green-600 bg-green-50 cursor-not-allowed opacity-70'
                                  : 'border-green-200 text-green-700 hover:bg-green-50'
                              }`}
                              disabled={isReleased}
                            >
                              {isReleased ? 'Sudah dirilis' : 'Rilis skor'}
                            </button>
                            <button
                              type="button"
                              data-delete={attempt.id}
                              class="px-3 py-1.5 rounded-lg border border-red-200 text-xs font-semibold text-red-700 hover:bg-red-50 transition-colors"
                            >
                              Hapus
                            </button>
                          </div>
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <script>
    // @ts-nocheck
    (function () {
      const releaseButtons = document.querySelectorAll('[data-release]');
      const deleteButtons = document.querySelectorAll('[data-delete]');
      const bulkButton = document.querySelector('[data-release-all]');
      const bulkStatus = document.getElementById('bulk-status');
      const pendingCountValue = bulkButton ? Number(bulkButton.getAttribute('data-pending-count') || 0) : 0;

      /**
       * @param {string} attemptId
       * @param {HTMLButtonElement} btn
       */
      async function releaseScore(attemptId, btn) {
        if (!confirm('Rilis skor untuk submission ini? Siswa akan dapat melihat hasilnya.')) return;
        btn.textContent = 'Memproses...';
        btn.disabled = true;
        try {
          const res = await fetch(`/api/admin/quiz/attempt/${attemptId}/release`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
          const body = await res.json().catch(() => ({}));
          if (res.ok) {
            btn.textContent = 'Sudah dirilis';
            btn.classList.remove('border-green-200', 'text-green-700', 'hover:bg-green-50');
            btn.classList.add('border-green-100', 'text-green-600', 'bg-green-50');
          } else {
            alert(body.error || 'Gagal merilis skor');
            btn.textContent = 'Rilis skor';
            btn.disabled = false;
          }
        } catch (err) {
          alert('Terjadi kesalahan saat merilis skor');
          btn.textContent = 'Rilis skor';
          btn.disabled = false;
        }
      }

      /**
       * @param {HTMLButtonElement} btn
       */
      async function releaseAllScores(btn) {
        const pending = pendingCountValue;
        const quizId = btn.getAttribute('data-quiz-id');
        if (!quizId) {
          alert('Quiz id tidak ditemukan');
          return;
        }
        if (pending === 0) return;
        if (!confirm(`Rilis semua ${pending} skor yang menunggu?`)) return;

        const originalText = btn.textContent;
        btn.textContent = 'Memproses...';
        btn.disabled = true;
        if (bulkStatus) {
          bulkStatus.textContent = '';
          bulkStatus.className = 'text-xs text-slate-500';
        }
        try {
          const res = await fetch(`/api/admin/quiz/${quizId}/release-all`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
          const body = await res.json().catch(() => ({}));
          if (res.ok) {
            if (bulkStatus) {
              bulkStatus.textContent = `Berhasil merilis ${body.released ?? pending} skor`;
              bulkStatus.className = 'text-xs text-emerald-600';
            }
            setTimeout(() => location.reload(), 800);
          } else {
            if (bulkStatus) {
              bulkStatus.textContent = body.error || 'Gagal merilis skor';
              bulkStatus.className = 'text-xs text-red-600';
            }
            btn.textContent = originalText;
            btn.disabled = false;
          }
        } catch (err) {
          if (bulkStatus) {
            bulkStatus.textContent = 'Terjadi kesalahan saat merilis skor';
            bulkStatus.className = 'text-xs text-red-600';
          }
          btn.textContent = originalText;
          btn.disabled = false;
        }
      }

      releaseButtons.forEach((btn) => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-release');
          if (!id) return;
          releaseScore(id, btn);
        });
      });

      deleteButtons.forEach((btn) => {
        btn.addEventListener('click', async () => {
          const id = btn.getAttribute('data-delete');
          if (!id) return;
          if (!confirm('Hapus submission ini? Tindakan tidak bisa dibatalkan.')) return;
          const originalText = btn.textContent;
          btn.textContent = 'Menghapus...';
          btn.disabled = true;
          try {
            const res = await fetch(`/api/admin/quiz/attempt/${id}/delete`, { method: 'DELETE', headers: { 'Content-Type': 'application/json' } });
            const body = await res.json().catch(() => ({}));
            if (res.ok) {
              location.reload();
            } else {
              alert(body.error || 'Gagal menghapus submission');
              btn.textContent = originalText;
              btn.disabled = false;
            }
          } catch (err) {
            alert('Terjadi kesalahan saat menghapus submission');
            btn.textContent = originalText;
            btn.disabled = false;
          }
        });
      });

      if (bulkButton) {
        bulkButton.addEventListener('click', () => releaseAllScores(bulkButton));
      }
    })();
  </script>
</Layout>
