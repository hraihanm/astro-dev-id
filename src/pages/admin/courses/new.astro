---
export const prerender = false;

import Layout from '../../../components/Layout.astro';
---

<Layout title="Create New Course">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow mb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-gray-900" data-i18n="admin.courses.createNewCourse">Create New Course</h1>
          </div>
          <div class="flex items-center space-x-4">
            <a href="/admin/courses" class="text-gray-700 hover:text-blue-600" data-i18n="admin.courses.backToCourses">Back to Courses</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Course Creation Form -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <form class="space-y-6" method="POST" action="/api/admin/courses">
        <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
          <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
              <h3 class="text-lg font-medium leading-6 text-gray-900" data-i18n="admin.courses.courseInformation">Course Information</h3>
              <p class="mt-1 text-sm text-gray-500" data-i18n="admin.courses.courseInfoDesc">
                Basic information about your course
              </p>
            </div>
            <div class="mt-5 md:mt-0 md:col-span-2">
              <div class="grid grid-cols-1 gap-6">
                <div>
                  <label for="title" class="block text-sm font-medium text-gray-700" data-i18n="admin.courses.courseTitle">
                    Course Title
                  </label>
                  <input
                    type="text"
                    name="title"
                    id="title"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2 border"
                    placeholder="Introduction to Astronomy"
                  />
                </div>

                <div>
                  <label for="slug" class="block text-sm font-medium text-gray-700" data-i18n="admin.courses.courseSlug">
                    Course Slug
                  </label>
                  <input
                    type="text"
                    name="slug"
                    id="slug"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2 border"
                    placeholder="intro-astronomy"
                  />
                  <p class="mt-2 text-sm text-gray-500" data-i18n="admin.courses.courseSlugDesc">
                    URL-friendly version of the title (e.g., intro-astronomy)
                  </p>
                </div>

                <div>
                  <label for="description" class="block text-sm font-medium text-gray-700" data-i18n="admin.courses.description">
                    Description
                  </label>
                  <textarea
                    name="description"
                    id="description"
                    rows="3"
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2 border"
                    placeholder="A comprehensive introduction to the fundamentals of astronomy..."
                  ></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
          <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
              <h3 class="text-lg font-medium leading-6 text-gray-900" data-i18n="admin.courses.courseStructure">Course Structure</h3>
              <p class="mt-1 text-sm text-gray-500" data-i18n="admin.courses.courseStructureDesc">
                Organize your course content
              </p>
            </div>
            <div class="mt-5 md:mt-0 md:col-span-2">
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700" data-i18n="admin.courses.courseChapters">
                    Course Chapters
                  </label>
                  <div class="mt-2 space-y-2" id="chapters-container">
                    <div class="flex items-center space-x-2">
                      <input
                        type="text"
                        name="chapters[]"
                        placeholder="Chapter 1: Introduction"
                        class="flex-1 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2 border"
                      />
                      <button type="button" class="text-red-600 hover:text-red-900 remove-chapter" data-i18n="admin.courses.remove">
                        Remove
                      </button>
                    </div>
                  </div>
                  <button
                    type="button"
                    id="add-chapter"
                    class="mt-2 text-blue-600 hover:text-blue-900"
                    data-i18n="admin.courses.addChapter"
                  >
                    + Add Chapter
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <a href="/admin/courses" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" data-i18n="common.cancel">
            Cancel
          </a>
          <button
            type="submit"
            class="bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            data-i18n="admin.courses.createNewCourse"
          >
            Create Course
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  // Add chapter functionality
  document.getElementById('add-chapter')?.addEventListener('click', function() {
    const container = document.getElementById('chapters-container');
    if (!container) return;
    
    const newChapter = document.createElement('div');
    newChapter.className = 'flex items-center space-x-2';
    newChapter.innerHTML = `
      <input
        type="text"
        name="chapters[]"
        placeholder="Chapter title"
        class="flex-1 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-3 py-2 border"
      />
      <button type="button" class="text-red-600 hover:text-red-900 remove-chapter">
        Remove
      </button>
    `;
    container.appendChild(newChapter);
  });

  // Remove chapter functionality
  document.addEventListener('click', function(e) {
    const target = e.target as HTMLElement;
    if (target.classList.contains('remove-chapter')) {
      target.parentElement?.remove();
    }
  });
</script>

