---
import Layout from '../../components/Layout.astro';
import Icon from '../../components/icons/Icon.astro';
import { prisma } from '../../lib/db';
import { getSessionUser } from '../../lib/auth-guard';

export const prerender = false;

const user = await getSessionUser(Astro.cookies);

const classrooms = user
  ? await prisma.classroom.findMany({
      where:
        user.role === 'admin'
          ? {}
          : {
              OR: [
                { isPrivate: false },
                { memberships: { some: { userId: user.id } } }
              ]
            },
      orderBy: { createdAt: 'desc' },
      include: {
        memberships: {
          where: { userId: user.id },
          select: { role: true, status: true }
        },
        _count: { select: { memberships: true, posts: true, resources: true } }
      }
    })
  : [];
---

<Layout title="Classrooms" description="Ruang kelas privat untuk kursus dan kuis">
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10 space-y-8">
    <header class="flex items-center justify-between gap-4">
      <div>
        <p class="text-sm text-slate-500">Ruang belajar privat</p>
        <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">Classrooms</h1>
        <p class="text-slate-600 mt-1">Gabung ke kelas atau lihat kelas milikmu.</p>
      </div>
    </header>

    {!user && (
      <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
        <p class="text-slate-700">Silakan masuk untuk melihat dan bergabung ke kelas.</p>
        <a href="/auth/signin" class="mt-3 inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors text-sm font-semibold">
          Masuk
        </a>
      </div>
    )}

    {user && (
      <section class="space-y-4">
        {classrooms.length === 0 ? (
          <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
            <p class="text-slate-700">Belum ada kelas yang tersedia.</p>
          </div>
        ) : (
          <div class="grid gap-4 md:grid-cols-2">
            {classrooms.map((cls) => {
              const membership = cls.memberships[0];
              return (
                <div class="bg-white border border-slate-200 rounded-xl p-5 shadow-sm flex flex-col gap-3">
                  <div class="flex items-start justify-between gap-3">
                    <div>
                      <h2 class="text-lg font-semibold text-slate-900">{cls.title}</h2>
                      <p class="text-sm text-slate-600 line-clamp-2">{cls.description || 'Tidak ada deskripsi'}</p>
                    </div>
                    {membership ? (
                      <span class="text-xs font-semibold px-3 py-1 rounded-full bg-blue-50 text-blue-700 border border-blue-100">
                        {membership.role} Â· {membership.status}
                      </span>
                    ) : (
                      <span class="text-xs font-semibold px-3 py-1 rounded-full bg-slate-50 text-slate-600 border border-slate-200">
                        Belum bergabung
                      </span>
                    )}
                  </div>
                  <div class="flex items-center gap-4 text-xs text-slate-500">
                    <span class="inline-flex items-center gap-1">
                      <Icon name="users" class="w-4 h-4" />
                      {cls._count.memberships} anggota
                    </span>
                    <span class="inline-flex items-center gap-1">
                      <Icon name="pencil" class="w-4 h-4" />
                      {cls._count.posts} post
                    </span>
                    <span class="inline-flex items-center gap-1">
                      <Icon name="bookmark" class="w-4 h-4" />
                      {cls._count.resources} resource
                    </span>
                  </div>
                  <div class="flex items-center gap-2">
                    <a
                      href={`/classrooms/${cls.id}`}
                      class="inline-flex items-center justify-center px-3 py-2 text-sm font-semibold text-blue-700 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors"
                    >
                      Buka kelas
                    </a>
                    {!membership && (
                      <button
                        type="button"
                        class="inline-flex items-center justify-center px-3 py-2 text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors"
                        data-join={cls.id}
                      >
                        Minta gabung
                      </button>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        )}
      </section>
    )}
  </main>

  {user && (
    <script type="module">
      const buttons = document.querySelectorAll('[data-join]');
      buttons.forEach((btn) => {
        btn.addEventListener('click', async () => {
          const id = btn.getAttribute('data-join');
          btn.textContent = 'Meminta...';
          btn.disabled = true;
          try {
            const res = await fetch(`/api/classrooms/${id}/join`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' }
            });
            if (res.ok) {
              btn.textContent = 'Diminta';
            } else {
              btn.textContent = 'Gagal';
              const data = await res.json().catch(() => ({}));
              alert(data.error || 'Gagal meminta bergabung');
            }
          } catch (err) {
            btn.textContent = 'Gagal';
            alert('Tidak dapat mengirim permintaan');
          } finally {
            setTimeout(() => {
              btn.textContent = 'Minta gabung';
              btn.disabled = false;
            }, 1200);
          }
        });
      });
    </script>
  )}
</Layout>

