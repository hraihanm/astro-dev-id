                <option value="smp-9" selected={profile?.profile?.grade === 'smp-9'}>SMP Kelas 9</option>
                <option value="sma-10" selected={profile?.profile?.grade === 'sma-10'}>SMA Kelas 10</option>
                <option value="sma-11" selected={profile?.profile?.grade === 'sma-11'}>SMA Kelas 11</option>
