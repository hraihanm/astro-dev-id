---
export const prerender = false;

import Layout from '../../components/Layout.astro';
import { getSessionUser } from '../../lib/auth-guard';
import { getUserProfile } from '../../lib/profile';

const user = await getSessionUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/auth/signin');
}

const profile = await getUserProfile(user.id);
const learningGoals = profile?.profile?.learningGoals || [];
---

<Layout title="Edit Profil">
  <div class="min-h-screen bg-gradient-to-b from-slate-50 to-slate-100">
    <!-- Header -->
    <div class="bg-white border-b border-slate-200">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center gap-4">
          <a href="/profile" class="flex items-center gap-2 text-slate-600 hover:text-blue-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span class="text-sm font-medium">Kembali</span>
          </a>
          <div class="h-6 w-px bg-slate-300"></div>
          <h1 class="text-xl sm:text-2xl font-bold text-slate-900">Edit Profil</h1>
        </div>
      </div>
    </div>

    <!-- Profile Edit Form -->
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <form id="profile-form" class="space-y-6">
        <!-- Avatar Section -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <div class="flex items-center gap-6">
            <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white font-bold text-2xl shadow-lg">
              {profile?.profile?.firstName?.[0]?.toUpperCase() || user.email[0].toUpperCase()}
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900">Foto Profil</h3>
              <p class="text-sm text-slate-500 mb-3">Fitur upload foto akan segera hadir</p>
              <button type="button" class="px-4 py-2 text-sm font-medium text-slate-600 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors" disabled>
                Ganti Foto
              </button>
            </div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-1">Informasi Pribadi</h3>
          <p class="text-sm text-slate-500 mb-6">Informasi ini akan ditampilkan di profil Anda</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nickname" class="block text-sm font-medium text-slate-700 mb-1">
                Nama Panggilan
              </label>
              <input
                type="text"
                name="nickname"
                id="nickname"
                value={profile?.profile?.nickname || ''}
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Contoh: Budi"
              />
              <p class="mt-1 text-xs text-slate-500">Nama yang akan ditampilkan di situs</p>
            </div>
            
            <div>
              <label for="fullName" class="block text-sm font-medium text-slate-700 mb-1">
                Nama Lengkap
              </label>
              <input
                type="text"
                name="fullName"
                id="fullName"
                value={profile?.profile?.fullName || ''}
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Contoh: Budi Santoso"
              />
            </div>

            <div>
              <label for="firstName" class="block text-sm font-medium text-slate-700 mb-1">
                Nama Depan
              </label>
              <input
                type="text"
                name="firstName"
                id="firstName"
                value={profile?.profile?.firstName || ''}
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Nama depan"
              />
            </div>
            
            <div>
              <label for="lastName" class="block text-sm font-medium text-slate-700 mb-1">
                Nama Belakang
              </label>
              <input
                type="text"
                name="lastName"
                id="lastName"
                value={profile?.profile?.lastName || ''}
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Nama belakang"
              />
            </div>
          </div>
          
          <div class="mt-6">
            <label for="bio" class="block text-sm font-medium text-slate-700 mb-1">
              Tentang Saya
            </label>
            <textarea
              name="bio"
              id="bio"
              rows="3"
              class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
              placeholder="Ceritakan sedikit tentang dirimu..."
            >{profile?.profile?.bio || ''}</textarea>
          </div>
        </div>

        <!-- Education Info -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-1">Informasi Pendidikan</h3>
          <p class="text-sm text-slate-500 mb-6">Bantu kami menyesuaikan konten pembelajaran</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="school" class="block text-sm font-medium text-slate-700 mb-1">
                Sekolah / Institusi
              </label>
              <input
                type="text"
                name="school"
                id="school"
                value={profile?.profile?.school || ''}
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Nama sekolah atau universitas"
              />
            </div>
            
            <div>
              <label for="grade" class="block text-sm font-medium text-slate-700 mb-1">
                Kelas / Tingkat
              </label>
              <select
                name="grade"
                id="grade"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              >
                <option value="">Pilih kelas</option>
                <option value="smp-7" selected={profile?.profile?.grade === 'smp-7'}>SMP Kelas 7</option>
                <option value="smp-8" selected={profile?.profile?.grade === 'smp-8'}>SMP Kelas 8</option>
                <option value="smp-9" selected={profile?.profile?.grade === 'smp-9'}>SMP Kelas 9</option>
                <option value="sma-10" selected={profile?.profile?.grade === 'sma-10'}>SMA Kelas 10</option>
                <option value="sma-11" selected={profile?.profile?.grade === 'sma-11'}>SMA Kelas 11</option>
                <option value="sma-12" selected={profile?.profile?.grade === 'sma-12'}>SMA Kelas 12</option>
                <option value="universitas" selected={profile?.profile?.grade === 'universitas'}>Mahasiswa</option>
                <option value="umum" selected={profile?.profile?.grade === 'umum'}>Umum</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Learning Goals -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-1">Target Belajar</h3>
          <p class="text-sm text-slate-500 mb-6">Apa tujuan belajar kamu?</p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-3 p-3 border border-slate-200 rounded-lg hover:bg-slate-50 cursor-pointer transition-colors">
              <input type="checkbox" name="goals" value="osn" checked={learningGoals.includes('osn')} class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 border-slate-300">
              <div>
                <span class="text-sm font-medium text-slate-700">OSN Astronomi</span>
                <p class="text-xs text-slate-500">Olimpiade Sains Nasional</p>
              </div>
            </label>
            <label class="flex items-center gap-3 p-3 border border-slate-200 rounded-lg hover:bg-slate-50 cursor-pointer transition-colors">
              <input type="checkbox" name="goals" value="ioaa" checked={learningGoals.includes('ioaa')} class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 border-slate-300">
              <div>
                <span class="text-sm font-medium text-slate-700">IOAA</span>
                <p class="text-xs text-slate-500">Int'l Olympiad on Astronomy</p>
              </div>
            </label>
            <label class="flex items-center gap-3 p-3 border border-slate-200 rounded-lg hover:bg-slate-50 cursor-pointer transition-colors">
              <input type="checkbox" name="goals" value="hobby" checked={learningGoals.includes('hobby')} class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 border-slate-300">
              <div>
                <span class="text-sm font-medium text-slate-700">Hobi Astronomi</span>
                <p class="text-xs text-slate-500">Belajar untuk kesenangan</p>
              </div>
            </label>
            <label class="flex items-center gap-3 p-3 border border-slate-200 rounded-lg hover:bg-slate-50 cursor-pointer transition-colors">
              <input type="checkbox" name="goals" value="academic" checked={learningGoals.includes('academic')} class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 border-slate-300">
              <div>
                <span class="text-sm font-medium text-slate-700">Akademik</span>
                <p class="text-xs text-slate-500">Persiapan kuliah / riset</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Preferences -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h3 class="text-lg font-semibold text-slate-900 mb-1">Preferensi</h3>
          <p class="text-sm text-slate-500 mb-6">Sesuaikan pengalaman belajarmu</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="timezone" class="block text-sm font-medium text-slate-700 mb-1">
                Zona Waktu
              </label>
              <select
                name="timezone"
                id="timezone"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              >
                <option value="WIB" selected={profile?.profile?.timezone === 'WIB'}>WIB - Waktu Indonesia Barat</option>
                <option value="WITA" selected={profile?.profile?.timezone === 'WITA'}>WITA - Waktu Indonesia Tengah</option>
                <option value="WIT" selected={profile?.profile?.timezone === 'WIT'}>WIT - Waktu Indonesia Timur</option>
              </select>
            </div>
            
            <div>
              <label for="language" class="block text-sm font-medium text-slate-700 mb-1">
                Bahasa
              </label>
              <select
                name="language"
                id="language"
                class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              >
                <option value="id" selected={profile?.profile?.language === 'id' || !profile?.profile?.language}>Bahasa Indonesia</option>
                <option value="en" selected={profile?.profile?.language === 'en'}>English</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex flex-col sm:flex-row justify-end gap-3 pt-4">
          <a
            href="/profile"
            class="px-6 py-2.5 text-center border border-slate-300 rounded-lg text-sm font-medium text-slate-700 bg-white hover:bg-slate-50 transition-colors"
          >
            Batal
          </a>
          <button
            type="submit"
            id="save-btn"
            class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-sm transition-colors flex items-center justify-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Simpan Perubahan
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  document.getElementById('profile-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const saveBtn = document.getElementById('save-btn');
    if (saveBtn) {
      saveBtn.innerHTML = `
        <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Menyimpan...
      `;
      saveBtn.disabled = true;
    }
    
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const profileData = {
      nickname: formData.get('nickname'),
      fullName: formData.get('fullName'),
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      bio: formData.get('bio'),
      school: formData.get('school'),
      grade: formData.get('grade'),
      learningGoals: formData.getAll('goals'),
      timezone: formData.get('timezone'),
      language: formData.get('language')
    };
    
    try {
      const response = await fetch('/api/profile/update', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(profileData)
      });
      
      if (response.ok) {
        // Show success message briefly
        if (saveBtn) {
          saveBtn.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Tersimpan!
          `;
          saveBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
          saveBtn.classList.add('bg-green-600');
        }
        
        setTimeout(() => {
          window.location.href = '/profile';
        }, 1000);
      } else {
        throw new Error('Failed to update');
      }
    } catch (error) {
      console.error('Profile update error:', error);
      alert('Gagal menyimpan profil. Silakan coba lagi.');
      
      if (saveBtn) {
        saveBtn.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Simpan Perubahan
        `;
        saveBtn.disabled = false;
      }
    }
  });
</script>
