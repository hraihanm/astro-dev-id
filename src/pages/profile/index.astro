---
export const prerender = false;

import Layout from '../../components/Layout.astro';
import { getUserProfile, getUserLearningStats, getUserAchievements } from '../../lib/profile';
import { getSessionUser } from '../../lib/auth-guard';

const user = await getSessionUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/auth/signin');
}

const userId = user.id;
const profile = await getUserProfile(userId);
const stats = await getUserLearningStats(userId);
const achievements = await getUserAchievements(userId);

function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('id-ID', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

function getScoreColor(percentage: number): string {
  if (percentage >= 80) return 'emerald';
  if (percentage >= 60) return 'blue';
  if (percentage >= 40) return 'amber';
  return 'red';
}
---

<Layout title="Profil Saya">
  <div class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <!-- Hero Banner -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
        <div class="flex flex-col sm:flex-row items-center gap-6">
          <!-- Avatar -->
          <div class="relative">
            <div class="w-24 h-24 sm:w-28 sm:h-28 bg-white/20 backdrop-blur rounded-2xl flex items-center justify-center border-4 border-white/30 shadow-xl">
              <span class="text-4xl sm:text-5xl font-bold text-white">
                {profile?.email?.charAt(0).toUpperCase()}
              </span>
            </div>
            <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center border-4 border-white shadow-lg">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          
          <!-- User Info -->
          <div class="text-center sm:text-left">
            <h1 class="text-2xl sm:text-3xl font-bold mb-1">
              {profile?.profile?.firstName || 'Pengguna'} {profile?.profile?.lastName || ''}
            </h1>
            <p class="text-blue-100 mb-2">{profile?.email}</p>
            <div class="flex flex-wrap items-center justify-center sm:justify-start gap-2 text-sm">
              <span class="px-3 py-1 bg-white/20 rounded-full">
                üìÖ Bergabung {formatDate(profile?.createdAt)}
              </span>
              {profile?.role === 'admin' && (
                <span class="px-3 py-1 bg-amber-500 text-white rounded-full font-medium">
                  ‚≠ê Admin
                </span>
              )}
            </div>
          </div>
          
          <!-- Actions -->
          <div class="sm:ml-auto flex gap-3">
            <a href="/profile/edit" class="px-4 py-2 bg-white text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors">
              Edit Profil
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8 -mt-12">
        <div class="bg-white rounded-xl border border-slate-200 shadow-lg p-6">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-xl bg-blue-100 flex items-center justify-center">
              <span class="text-2xl">üìù</span>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-medium">Total Ujian</p>
              <p class="text-3xl font-bold text-slate-900">{stats.totalAttempts}</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl border border-slate-200 shadow-lg p-6">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-xl bg-emerald-100 flex items-center justify-center">
              <span class="text-2xl">üìä</span>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-medium">Rata-rata Skor</p>
              <p class="text-3xl font-bold text-slate-900">{stats.averageScore}%</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl border border-slate-200 shadow-lg p-6">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-xl bg-purple-100 flex items-center justify-center">
              <span class="text-2xl">üìö</span>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-medium">Kursus</p>
              <p class="text-3xl font-bold text-slate-900">{stats.coursesCompleted}</p>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Achievements -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50">
              <h2 class="font-bold text-slate-900 flex items-center gap-2">
                <span>üèÜ</span>
                <span>Pencapaian</span>
              </h2>
            </div>
            <div class="p-6">
              {achievements.length === 0 ? (
                <div class="text-center py-8">
                  <div class="w-16 h-16 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center">
                    <span class="text-3xl">üéØ</span>
                  </div>
                  <p class="text-slate-500 text-sm">Selesaikan ujian untuk mendapatkan pencapaian!</p>
                </div>
              ) : (
                <div class="space-y-3">
                  {achievements.map((achievement) => (
                    <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-xl">
                      <span class="text-2xl">{achievement.icon}</span>
                      <div>
                        <h4 class="font-medium text-slate-900 text-sm">{achievement.title}</h4>
                        <p class="text-xs text-slate-500">{achievement.description}</p>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
          
          <!-- Quick Actions -->
          <div class="mt-6 bg-white rounded-xl border border-slate-200 shadow-sm p-6">
            <h3 class="font-bold text-slate-900 mb-4">Aksi Cepat</h3>
            <div class="space-y-2">
              <a href="/courses" class="flex items-center gap-3 p-3 rounded-lg hover:bg-slate-50 transition-colors">
                <span class="text-xl">üìö</span>
                <span class="text-sm font-medium text-slate-700">Jelajahi Kursus</span>
              </a>
              <a href="/quizzes/history" class="flex items-center gap-3 p-3 rounded-lg hover:bg-slate-50 transition-colors">
                <span class="text-xl">üìã</span>
                <span class="text-sm font-medium text-slate-700">Riwayat Ujian</span>
              </a>
              <a href="/dashboard" class="flex items-center gap-3 p-3 rounded-lg hover:bg-slate-50 transition-colors">
                <span class="text-xl">üìä</span>
                <span class="text-sm font-medium text-slate-700">Dashboard</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex items-center justify-between">
              <h2 class="font-bold text-slate-900 flex items-center gap-2">
                <span>‚è±Ô∏è</span>
                <span>Aktivitas Terbaru</span>
              </h2>
              <a href="/quizzes/history" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                Lihat Semua ‚Üí
              </a>
            </div>
            <div class="divide-y divide-slate-100">
              {stats.recentActivity.length === 0 ? (
                <div class="p-12 text-center">
                  <div class="w-16 h-16 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center">
                    <span class="text-3xl">üìù</span>
                  </div>
                  <p class="text-slate-500 mb-4">Belum ada aktivitas ujian</p>
                  <a href="/courses" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">
                    Mulai Belajar
                  </a>
                </div>
              ) : (
                stats.recentActivity.map((activity) => {
                  const scoreColor = getScoreColor(activity.percentage);
                  return (
                    <div class="px-6 py-4 hover:bg-slate-50 transition-colors">
                      <div class="flex items-center gap-4">
                        <div class={`w-12 h-12 rounded-xl bg-${scoreColor}-100 flex items-center justify-center`}>
                          <span class={`text-lg font-bold text-${scoreColor}-600`}>{activity.percentage}%</span>
                        </div>
                        <div class="flex-1 min-w-0">
                          <h4 class="font-medium text-slate-900 truncate">{activity.quiz.title}</h4>
                          <p class="text-sm text-slate-500">
                            {activity.correctAnswers}/{activity.totalQuestions} benar ‚Ä¢ {activity.quiz.course?.title || 'Kuis Mandiri'}
                          </p>
                        </div>
                        <div class="text-right text-sm text-slate-500">
                          {formatDate(activity.completedAt)}
                        </div>
                      </div>
                    </div>
                  );
                })
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
