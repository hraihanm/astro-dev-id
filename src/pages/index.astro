---
export const prerender = false;

import Layout from '../components/Layout.astro';
import Icon from '../components/icons/Icon.astro';
import { siteContent } from '../data/siteContent';
import { getSessionUser } from '../lib/auth-guard';

const user = await getSessionUser(Astro.cookies);
---

<Layout title="Astro Dev ID - Home">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-900 to-slate-800">
    <div class="absolute inset-0 opacity-50">
      <img src="/hero-background.png" alt="Space background" class="w-full h-full object-cover mix-blend-screen">
    </div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(59,130,246,0.2),transparent_35%),radial-gradient(circle_at_80%_10%,rgba(99,102,241,0.25),transparent_30%)]"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-28">
      <div class="grid lg:grid-cols-[1.1fr,0.9fr] gap-12 items-center">
        <div class="space-y-6">
          <span class="inline-flex items-center gap-2 rounded-full bg-blue-500/10 text-blue-200 px-3 py-1 text-xs font-semibold ring-1 ring-blue-500/30 backdrop-blur">
            <Icon name="star" class="w-4 h-4" />
            Olimpiade Astronomi • OSK/OSP/OSN/IOAA
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">
            Menjelajahi Semesta, <span class="text-blue-300">Meraih Prestasi</span>
          </h1>
          <p class="text-lg text-slate-200 max-w-2xl">
            Platform komprehensif untuk materi, kuis, dan latihan berbasis astronomi — lengkap dengan progress tracking dan ruang kelas privat.
          </p>
          <div class="flex flex-wrap gap-3">
            {user ? (
              <>
                <a href="/dashboard" class="inline-flex items-center gap-2 bg-blue-500 text-white px-5 py-3 rounded-lg font-semibold hover:bg-blue-600 transition shadow-lg shadow-blue-500/20">
                  <Icon name="dashboard" class="w-4 h-4" />
                  Dashboard
                </a>
                <a href="/courses" class="inline-flex items-center gap-2 bg-white/10 text-white px-5 py-3 rounded-lg font-semibold ring-1 ring-white/20 hover:bg-white/15 transition">
                  <Icon name="book-stack" class="w-4 h-4" />
                  {siteContent.home.browseCourses}
                </a>
              </>
            ) : (
              <>
                <a href="/courses" class="inline-flex items-center gap-2 bg-blue-500 text-white px-5 py-3 rounded-lg font-semibold hover:bg-blue-600 transition shadow-lg shadow-blue-500/20">
                  <Icon name="book-stack" class="w-4 h-4" />
                  {siteContent.home.browseCourses}
                </a>
                <a href="/quizzes" class="inline-flex items-center gap-2 bg-white/10 text-white px-5 py-3 rounded-lg font-semibold ring-1 ring-white/20 hover:bg-white/15 transition">
                  <Icon name="puzzle" class="w-4 h-4" />
                  {siteContent.home.interactiveQuizzes}
                </a>
              </>
            )}
          </div>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 text-sm text-slate-200">
            <div class="rounded-xl border border-white/10 bg-white/5 px-4 py-3">
              <p class="text-2xl font-bold text-white">150+</p>
              <p class="text-slate-300">Kuis latihan & tryout</p>
            </div>
            <div class="rounded-xl border border-white/10 bg-white/5 px-4 py-3">
              <p class="text-2xl font-bold text-white">40+</p>
              <p class="text-slate-300">Bab materi terkurasi</p>
            </div>
            <div class="rounded-xl border border-white/10 bg-white/5 px-4 py-3">
              <p class="text-2xl font-bold text-white">Private</p>
              <p class="text-slate-300">Kelas & diskusi</p>
            </div>
          </div>
        </div>

        <div class="relative">
          <div class="absolute -inset-6 bg-blue-500/10 blur-3xl rounded-full"></div>
          <div class="relative rounded-3xl border border-white/10 bg-white/5 backdrop-blur shadow-2xl shadow-blue-900/40 p-6 space-y-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="rounded-2xl bg-blue-500/10 p-3">
                  <Icon name="graduation-cap" class="w-6 h-6 text-blue-200" />
                </div>
                <div>
                  <p class="text-sm text-slate-300">Sedang dipelajari</p>
                  <p class="text-lg font-semibold text-white">Astrofisika Dasar</p>
                </div>
              </div>
              <span class="text-xs rounded-full bg-emerald-500/15 text-emerald-200 px-3 py-1 border border-emerald-400/30">On track</span>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between text-xs text-slate-300">
                <span>Progress materi</span>
                <span>76%</span>
              </div>
              <div class="h-2 rounded-full bg-slate-800 overflow-hidden">
                <div class="h-full w-[76%] bg-gradient-to-r from-blue-400 to-emerald-400"></div>
              </div>
              <div class="grid grid-cols-2 gap-3 text-sm">
                <div class="rounded-xl bg-white/5 border border-white/10 p-3">
                  <p class="text-slate-300">Kuis selesai</p>
                  <p class="text-lg font-semibold text-white">18</p>
                </div>
                <div class="rounded-xl bg-white/5 border border-white/10 p-3">
                  <p class="text-slate-300">Tryout minggu ini</p>
                  <p class="text-lg font-semibold text-white">2</p>
                </div>
              </div>
              <div class="flex items-center gap-2 text-xs text-slate-200">
                <Icon name="lightbulb" class="w-4 h-4" />
                Latihan rutin 30 menit/hari meningkatkan skor rata-rata 15%.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14 space-y-3">
        <h2 class="text-3xl font-bold text-gray-900 mb-1">{siteContent.home.welcomeTitle}</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">{siteContent.home.subtitle}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-7 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 space-y-3">
          <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center">
            <Icon name="book-stack" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-bold text-gray-900">{siteContent.home.richContent}</h3>
          <p class="text-gray-600 leading-relaxed">
            {siteContent.home.richContentDesc}
          </p>
        </div>

        <div class="bg-white p-7 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 space-y-3">
          <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-xl flex items-center justify-center">
            <Icon name="target" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-bold text-gray-900">{siteContent.home.interactiveQuizzes}</h3>
          <p class="text-gray-600 leading-relaxed">
            {siteContent.home.interactiveQuizzesDesc}
          </p>
        </div>

        <div class="bg-white p-7 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 space-y-3">
          <div class="w-12 h-12 bg-purple-50 text-purple-600 rounded-xl flex items-center justify-center">
            <Icon name="bar-chart" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-bold text-gray-900">{siteContent.home.easyHosting}</h3>
          <p class="text-gray-600 leading-relaxed">
            {siteContent.home.easyHostingDesc}
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-blue-900 py-16 relative overflow-hidden">
    <div class="absolute inset-0 opacity-15">
      <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <path d="M0 100 C 20 0 50 0 100 100 Z" fill="white" />
      </svg>
    </div>
    <div class="max-w-4xl mx-auto px-4 text-center relative z-10 space-y-4">
      <h2 class="text-3xl md:text-4xl font-bold text-white">Siap Memulai Perjalanan Astronomi Anda?</h2>
      <p class="text-lg text-blue-100">Bergabunglah dengan ribuan siswa lainnya dan raih medali impianmu.</p>
      <div class="flex items-center justify-center gap-3 flex-wrap">
        <a href="/auth/signin" class="bg-white text-blue-900 px-6 py-3 rounded-lg font-bold hover:bg-blue-50 transition-colors shadow-lg">
          Daftar Sekarang Gratis
        </a>
        <a href="/quizzes" class="inline-flex items-center gap-2 text-white px-4 py-3 rounded-lg ring-1 ring-white/30 hover:bg-white/10 transition">
          <Icon name="puzzle" class="w-4 h-4" />
          Lihat Kuis
        </a>
      </div>
    </div>
  </div>
</Layout>

