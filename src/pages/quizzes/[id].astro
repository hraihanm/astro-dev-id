---
import Layout from '../../components/Layout.astro';
import Icon from '../../components/icons/Icon.astro';
import { renderMarkdown } from '../../lib/latex';
import { getSessionUser } from '../../lib/auth-guard';
import { prisma } from '../../lib/db';
import quizSharedStyles from '../../styles/quiz-shared.css?url';

export const prerender = false;

const { id } = Astro.params;

// Get logged in user
const user = await getSessionUser(Astro.cookies);
let classroomIds: number[] = [];
if (user) {
  const memberships = await prisma.classroomMembership.findMany({
    where: { userId: user.id, status: 'ACTIVE' },
    select: { classroomId: true }
  });
  classroomIds = memberships.map((m) => m.classroomId);
}

// Fetch quiz details directly from database
let quiz: any = null;
let error = '';
let attemptLimitReached = false;
let userAttemptCount = 0;
let hasInProgress = false;

try {
  const quizId = parseInt(id || '0');
  
  // Use server-side import to get the quiz
  const { getQuiz } = await import('../../lib/quizzes');
  const rawQuiz = await getQuiz(quizId, {
    role: user?.role,
    classroomIds
  });
  
  // Check if quiz exists (can be standalone or course quiz)
  if (!rawQuiz) {
    error = 'Quiz not found';
  } else {
    // Parse questions if it's a string
    quiz = {
      ...rawQuiz,
      questions: typeof rawQuiz.questions === 'string' 
        ? JSON.parse(rawQuiz.questions) 
        : rawQuiz.questions,
      settings: typeof rawQuiz.settings === 'string'
        ? JSON.parse(rawQuiz.settings)
        : rawQuiz.settings
    };
    
    // Count attempts for this user (for display and limits)
    if (user) {
      userAttemptCount = await prisma.quizAttempt.count({
        where: {
          userId: user.id,
          quizId: quizId
        }
      });
    }
    quiz.userAttemptCount = userAttemptCount;
      
    if (quiz.attemptLimit && userAttemptCount >= quiz.attemptLimit) {
        attemptLimitReached = true;
    }
    
    // Handle essay problem format
    if (quiz.settings?.type === 'essay' && quiz.questions?.type === 'essay-problem-set') {
      // Essay problems have a different structure
      quiz.isEssay = true;
      quiz.problems = quiz.questions.problems || [];
    } else if (Array.isArray(quiz.questions)) {
      quiz.isEssay = false;
    } else {
      // Unknown format
      error = 'Invalid quiz format';
    }
  }
} catch (err) {
  error = 'Error loading quiz';
  console.error(err);
}
---

<Layout title={quiz?.title || 'Quiz Not Found'}>
  <link rel="stylesheet" href={quizSharedStyles}>
  <div class="min-h-screen bg-gray-50">
    {error ? (
      <div class="max-w-2xl mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <div class="text-red-500 text-6xl mb-4">❌</div>
          <h2 class="text-2xl font-bold text-gray-900 mb-2">{error}</h2>
          <p class="text-gray-600 mb-4">The quiz you're looking for doesn't exist.</p>
          <a href="/quizzes" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700">
            <Icon name="arrow-left" class="w-4 h-4" />
            Back to Practice Quizzes
          </a>
        </div>
      </div>
    ) : attemptLimitReached ? (
      <div class="max-w-2xl mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <div class="text-amber-500 text-6xl mb-4">⚠️</div>
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Batas Percobaan Tercapai</h2>
          <p class="text-gray-600 mb-4">
            Anda telah mencapai batas maksimum percobaan untuk kuis ini ({quiz.attemptLimit} percobaan).
          </p>
          {quiz.quizType === 'tryout' && (
            <div class="bg-slate-50 rounded-lg p-4 mb-6 text-left">
              <p class="text-sm text-slate-700">
                <strong>Catatan:</strong> Untuk tryout, batas percobaan adalah {quiz.attemptLimit}. 
                Anda dapat melihat hasil percobaan sebelumnya di halaman riwayat.
              </p>
            </div>
          )}
          <div class="flex gap-4 justify-center">
            <a href="/quizzes/history" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Lihat Riwayat
            </a>
            <a href="/quizzes" class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 font-medium transition-colors">
              <Icon name="arrow-left" class="w-4 h-4" />
              Kembali ke Daftar Kuis
            </a>
          </div>
        </div>
      </div>
    ) : (
      <!-- Landing / pre-start -->
      <div class="max-w-5xl mx-auto px-4 py-10">
        <div class="bg-white border border-slate-200 shadow-sm rounded-2xl p-6 sm:p-8 space-y-4">
          <div class="flex items-start justify-between gap-4">
            <div>
              <p class="text-xs font-semibold uppercase text-blue-600 mb-1">{quiz.quizType === 'exam' ? 'Try Out (Exam)' : 'Latihan (Exercise)'}</p>
              <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">{quiz.title}</h1>
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
            <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Jumlah Soal</p>
              <p class="text-lg font-semibold text-slate-800">{quiz.questions?.length || 0} soal</p>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Batas Waktu</p>
              <p class="text-lg font-semibold text-slate-800">
                {quiz.settings?.timeLimit ? `${Math.floor(quiz.settings.timeLimit / 60)} menit` : 'Tanpa batas'}
              </p>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Jumlah / Batas Percobaan</p>
              <p class="text-lg font-semibold text-slate-800">
                {quiz.attemptLimit
                  ? `${quiz.userAttemptCount || 0} / ${quiz.attemptLimit}`
                  : `${quiz.userAttemptCount || 0} / Tak terbatas`}
              </p>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-1">Jenis Kuis</p>
              <p class="text-lg font-semibold text-slate-800">
                {quiz.quizType === 'tryout' || quiz.quizType === 'exam' ? 'Try Out (Exam)' : 'Latihan (Exercise)'}
              </p>
            </div>
          </div>

          {(quiz.settings?.description || quiz.settings?.notes) && (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {quiz.settings?.description && (
                <div class="rounded-xl border border-slate-200 bg-white px-4 py-4">
                  <p class="text-xs text-slate-500 uppercase tracking-wider mb-2">Deskripsi</p>
                  <div class="prose prose-sm max-w-none text-slate-800" set:html={renderMarkdown(quiz.settings.description)}></div>
                </div>
              )}
              {quiz.settings?.notes && (
                <div class="rounded-xl border border-slate-200 bg-white px-4 py-4">
                  <p class="text-xs text-slate-500 uppercase tracking-wider mb-2">Catatan / Peraturan</p>
                  <div class="prose prose-sm max-w-none text-slate-800" set:html={renderMarkdown(quiz.settings.notes)}></div>
                </div>
              )}
            </div>
          )}

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <div class="rounded-xl border border-slate-200 bg-white px-4 py-4">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-2">Jadwal Akses (Exam)</p>
              <div class="space-y-2 text-sm text-slate-800">
                <div class="flex items-start gap-2">
                  <svg class="h-4 w-4 text-blue-500 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M8 7h8m-8 4h5m-9 3h14M7 4h10a2 2 0 012 2v12a2 2 0 01-2 2H7a2 2 0 01-2-2V6a2 2 0 012-2z" />
                  </svg>
                  <div>
                    <p class="text-xs text-slate-500 uppercase tracking-wider">Mulai</p>
                    <p class="font-semibold">
                      {quiz.availableFrom ? new Date(quiz.availableFrom).toLocaleString('id-ID') : 'Tidak dijadwalkan'}
                    </p>
                  </div>
                </div>
                <div class="flex items-start gap-2">
                  <svg class="h-4 w-4 text-amber-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M12 8v4l2 2m5-2a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                  <div>
                    <p class="text-xs text-slate-500 uppercase tracking-wider">Tutup</p>
                    <p class="font-semibold">
                      {quiz.availableUntil ? new Date(quiz.availableUntil).toLocaleString('id-ID') : 'Tidak dijadwalkan'}
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="rounded-xl border border-slate-200 bg-white px-4 py-4">
              <p class="text-xs text-slate-500 uppercase tracking-wider mb-2">Catatan</p>
              <ul class="text-sm text-slate-700 space-y-2.5">
                <li class="flex items-start gap-3 leading-relaxed">
                  <span class="mt-2 h-1.5 w-1.5 rounded-full bg-slate-400 flex-shrink-0"></span>
                  <span>Gunakan tombol "Ragu-Ragu" untuk menandai soal.</span>
                </li>
                <li class="flex items-start gap-3 leading-relaxed">
                  <span class="mt-2 h-1.5 w-1.5 rounded-full bg-slate-400 flex-shrink-0"></span>
                  <span>Progress tersimpan otomatis; timer tetap berjalan saat Anda keluar.</span>
                </li>
                <li class="flex items-start gap-3 leading-relaxed">
                  <span class="mt-2 h-1.5 w-1.5 rounded-full bg-slate-400 flex-shrink-0"></span>
                  <span>Pastikan koneksi stabil sebelum memulai.</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="flex flex-wrap gap-3">
            <a
              href={`/quizzes/${id}/start`}
              class="inline-flex items-center justify-center gap-2 px-5 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold shadow-sm transition"
            >
              Mulai Kuis
            </a>
            <a
              href="/quizzes"
              class="inline-flex items-center justify-center gap-2 px-5 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 font-semibold transition"
            >
              Kembali ke daftar
            </a>
          </div>
        </div>
      </div>
    )}
  </div>

  <script define:vars={{ quizId: id }}>
    // Check for in-progress quiz in localStorage
    (function() {
      if (typeof window === 'undefined') return;
      const progressKey = `quiz_progress_${quizId}`;
      const saved = localStorage.getItem(progressKey);
      
      if (saved) {
        try {
          const progress = JSON.parse(saved);
          if (progress.hasStarted && !progress.quizSubmitted) {
            // Show continue button
            const startBtn = document.querySelector('a[href*="/start"]');
            if (startBtn) {
              startBtn.textContent = 'Lanjutkan Kuis';
              startBtn.classList.add('bg-amber-600', 'hover:bg-amber-700');
              startBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
            }
          }
        } catch (e) {
          // Ignore parse errors
        }
      }
    })();
  </script>
</Layout>
