---
import Layout from '../../../../components/Layout.astro';
import Icon from '../../../../components/icons/Icon.astro';
import { getQuiz } from '../../../../lib/quizzes';
import { prisma } from '../../../../lib/db';
import { getSessionUser } from '../../../../lib/auth-guard';
import quizSharedStyles from '../../../../styles/quiz-shared.css?url';

export const prerender = false;

const { id, attemptId } = Astro.params;

// Get current user to check if admin
const currentUser = await getSessionUser(Astro.cookies);
const isAdmin = currentUser?.role === 'admin';
const userId = currentUser?.id;

let quiz: any = null;
let attempt: any = null;
let error = '';

try {
  const quizId = parseInt(id || '0');
  const attemptIdNum = parseInt(attemptId || '0');
  
  // Get quiz
  const rawQuiz = await getQuiz(quizId);
  
  if (!rawQuiz) {
    error = 'Quiz not found';
  } else {
    // Parse quiz data
    quiz = {
      ...rawQuiz,
      questions: typeof rawQuiz.questions === 'string' 
        ? JSON.parse(rawQuiz.questions) 
        : rawQuiz.questions,
      settings: typeof rawQuiz.settings === 'string'
        ? JSON.parse(rawQuiz.settings)
        : rawQuiz.settings
    };
    
    // Get the specific attempt
    // Admins can view any attempt, regular users can only view their own
    const whereClause: any = {
      id: attemptIdNum,
      quizId
    };
    
    if (!isAdmin && userId) {
      whereClause.userId = userId;
    }
    
    const foundAttempt = await prisma.quizAttempt.findFirst({
      where: whereClause,
      include: {
        user: {
          include: {
            profile: true
          }
        }
      }
    });
    
    if (foundAttempt) {
      const isReleased = !!foundAttempt.scoreReleasedAt;
      attempt = {
        ...foundAttempt,
        answers: JSON.parse(foundAttempt.answers),
        detailedResults: isReleased ? JSON.parse(foundAttempt.detailedResults) : [],
        scoreReleasedAt: foundAttempt.scoreReleasedAt
      };
    } else {
      error = 'Attempt not found or you do not have permission to view it';
    }
  }
} catch (err) {
  error = 'Error loading quiz review';
  console.error(err);
}

// Format time spent
function formatTime(seconds: number): string {
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
}

function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('id-ID', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

// Calculate score color
function getScoreColor(percentage: number): string {
  if (percentage >= 80) return 'emerald';
  if (percentage >= 60) return 'blue';
  if (percentage >= 40) return 'amber';
  return 'red';
}

const scoreColor = attempt && attempt.percentage != null ? getScoreColor(attempt.percentage) : 'slate';
const endReasonLabel = attempt?.endReason === 'time_up' ? 'Waktu habis' : 'Diselesaikan manual';

// Check if admin is viewing another user's attempt
const isViewingOtherUser = isAdmin && attempt && attempt.userId !== currentUser?.id;
const attemptUser = attempt?.user;
const userFullName = attemptUser?.profile?.fullName || attemptUser?.profile?.firstName || attemptUser?.email?.split('@')[0] || 'Unknown';
const userEmail = attemptUser?.email || '';
---

<Layout title={`Tinjau - ${quiz?.title || 'Quiz'}`}>
  <link rel="stylesheet" href={quizSharedStyles}>
  
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    {error ? (
      <div class="flex items-center justify-center min-h-screen">
        <div class="text-center">
          <h1 class="text-2xl font-bold text-red-600 mb-4">Kesalahan</h1>
          <p class="text-slate-600 mb-4">{error}</p>
          <a href="/quizzes/history" class="text-blue-600 hover:underline">Kembali ke Riwayat</a>
        </div>
      </div>
    ) : (
      <div class="flex flex-col h-screen">
        <!-- Header with Quiz Info and Score -->
        <div class="bg-white border-b border-slate-200 px-4 sm:px-6 py-4 flex-shrink-0">
          <div class="max-w-7xl mx-auto flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
            <div class="flex items-center gap-4">
              <a href="/quizzes/history" class="p-2 rounded-lg hover:bg-slate-100 transition-colors">
                <Icon name="arrow-left" class="w-5 h-5 text-slate-600" />
              </a>
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white">
                  <Icon name="bar-chart" class="w-6 h-6" />
                </div>
                <div>
                  <h1 class="text-xl font-bold text-slate-900">{quiz.title}</h1>
                  <p class="text-sm text-slate-500">Tinjauan Percobaan • {formatDate(attempt.completedAt)}</p>
                  {isViewingOtherUser && (
                    <div class="mt-1 flex items-center gap-2 text-xs text-slate-600">
                      <Icon name="user" class="w-3.5 h-3.5 text-slate-400" />
                      <span class="font-medium">{userFullName}</span>
                      <span class="text-slate-400">•</span>
                      <span>{userEmail}</span>
                    </div>
                  )}
                </div>
              </div>
            </div>
            
            <div class="flex items-center gap-4">
              {attempt?.scoreReleasedAt ? (
                <div class={`px-4 py-2 rounded-xl bg-${scoreColor}-50 border border-${scoreColor}-200`}>
                  <div class="flex items-center gap-4">
                    <div class="text-center">
                      <div class={`text-2xl font-bold text-${scoreColor}-600`}>{attempt.percentage}%</div>
                      <div class="text-xs text-slate-500 uppercase tracking-wider">Skor</div>
                    </div>
                    <div class="w-px h-8 bg-slate-200"></div>
                    <div class="text-center">
                      <div class="text-lg font-bold text-slate-900">{attempt.correctAnswers}/{attempt.totalQuestions}</div>
                      <div class="text-xs text-slate-500 uppercase tracking-wider">Benar</div>
                    </div>
                  </div>
                </div>
              ) : (
                <div class="px-4 py-2 rounded-xl bg-amber-50 border border-amber-200 text-amber-800 text-sm font-semibold flex items-center gap-2">
                  <Icon name="clock" class="w-4 h-4" />
                  Skor belum dirilis oleh admin
                </div>
              )}
            </div>
            <p class="text-sm text-slate-600 mt-1">Alasan selesai: <span class="font-semibold">{endReasonLabel}</span></p>
          </div>
        </div>

        <!-- Navigation Row -->
        <div class="flex flex-col lg:flex-row border-b border-slate-200 bg-white">
          <div id="nav-container" class="flex-1 px-6 py-4 flex items-center justify-between">
            <!-- Navigation bar will be rendered here by JavaScript -->
          </div>
          
          <!-- Time column - Fixed width to match sidebar -->
          <div class="hidden lg:flex w-80 border-l border-slate-200 px-4 py-3 items-center justify-center">
            <div class="flex items-center gap-3 text-slate-600 text-sm">
              <span>⏱️</span>
              <span class="font-medium">Waktu: {formatTime(attempt.timeSpent)}</span>
            </div>
          </div>
        </div>

        <!-- Main Content Area with Sidebar -->
        <div class="flex flex-1 overflow-hidden relative">
          <!-- Main Content -->
          <div class="flex-1 flex flex-col overflow-hidden">
            <div class="flex-1 overflow-y-auto px-4 sm:px-6 py-4 sm:py-6 scroll-smooth">
              <div id="question-container" class="max-w-4xl mx-auto">
                <!-- Question will be rendered here -->
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div id="sidebar" class="fixed lg:relative inset-y-0 right-0 w-80 bg-white border-l border-slate-200 flex flex-col transform translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out z-40 overflow-y-auto">
            
            <!-- Mobile close -->
            <div class="lg:hidden flex items-center justify-between p-4 border-b border-slate-200">
              <span class="font-bold text-slate-700">Tinjauan</span>
              <button id="close-sidebar" class="p-2 rounded-lg hover:bg-slate-100">
                <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>

            <!-- Question Grid -->
            <div class="p-4 sm:p-5">
              <h3 class="font-bold text-slate-700 text-xs mb-4 uppercase tracking-wider flex items-center gap-2">
                <Icon name="clipboard" class="w-4 h-4" />
                <span>Nomor Soal</span>
              </h3>
              <div id="question-grid" class="grid grid-cols-5 gap-2 sm:gap-2.5 overflow-y-auto scroll-smooth p-1 max-h-[360px]">
                <!-- Question numbers will be rendered here -->
              </div>
              <div class="status-legend mt-4">
                <div class="status-legend-item correct-item">
                  <div class="status-legend-label">
                    <div class="status-legend-icon bg-emerald-100 border-emerald-400 text-emerald-600">✓</div>
                    <span id="legend-correct-text" class="status-legend-text">Benar</span>
                  </div>
                  <span id="correct-count" class="status-legend-count text-emerald-600">0</span>
                </div>
                <div class="status-legend-item incorrect-item">
                  <div class="status-legend-label">
                    <div class="status-legend-icon bg-red-100 border-red-400 text-red-600">✗</div>
                    <span id="legend-incorrect-text" class="status-legend-text">Salah</span>
                  </div>
                  <span id="incorrect-count" class="status-legend-count text-red-600">0</span>
                </div>
                <div class="status-legend-item blank-item">
                  <div class="status-legend-label">
                    <div class="status-legend-icon bg-slate-100 border-slate-300">−</div>
                    <span id="legend-blank-text" class="status-legend-text">Tidak Dijawab</span>
                  </div>
                  <span id="blank-count" class="status-legend-count text-slate-500">0</span>
                </div>
                <div class="status-legend-item flagged-item">
                  <div class="status-legend-label">
                    <div class="status-legend-icon bg-amber-100 border-amber-400 text-amber-700">!</div>
                    <span id="legend-flagged-text" class="status-legend-text">Ragu-ragu</span>
                  </div>
                  <span id="flagged-count" class="status-legend-count text-amber-700">0</span>
                </div>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="p-4 border-t border-slate-100">
              <a 
                href={`/quizzes/${quiz.id}`}
                class="w-full py-2.5 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg text-center flex items-center justify-center gap-2 transition-colors"
              >
                <Icon name="refresh" class="w-4 h-4" />
                <span>Coba Lagi</span>
              </a>
            </div>
          </div>
          
          <!-- Mobile sidebar overlay -->
          <div id="sidebar-overlay" class="fixed inset-0 bg-black/50 z-30 hidden lg:hidden"></div>
        </div>

        <!-- Mobile Bottom Navigation -->
        <div class="lg:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-slate-200 px-4 py-3 flex items-center justify-between z-20">
          <button id="mobile-prev-btn" class="p-3 rounded-xl bg-slate-100 text-slate-600 disabled:opacity-50">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          
          <button id="sidebar-toggle" class="px-4 py-2 bg-slate-100 rounded-xl font-medium text-slate-700">
            Soal <span id="mobile-current">1</span>/<span id="mobile-total">{quiz.questions.length}</span>
          </button>
          
          <button id="mobile-next-btn" class="p-3 rounded-xl bg-slate-100 text-slate-600 disabled:opacity-50">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>
    )}
  </div>
</Layout>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/dompurify/dist/purify.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
<script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>

<script define:vars={{ quiz, attempt }}>
  const questions = quiz.questions;
  const detailedResults = attempt.detailedResults;
  const rawAnswers = attempt.answers;
  const isReleased = !!attempt.scoreReleasedAt;

  // Normalize answers to a per-question array of numeric selections (1-based where applicable)
  const userAnswers = questions.map((_, idx) => {
    if (!rawAnswers) return null;
    const entry = Array.isArray(rawAnswers)
      ? rawAnswers.find(a =>
          a &&
          (a.questionId === idx ||
           a.questionId === idx + 1 ||
           a.questionId === questions[idx]?.id))
      : null;
    if (!entry || entry.answer === undefined || entry.answer === null) return null;
    const ansArr = Array.isArray(entry.answer) ? entry.answer : [entry.answer];
    const normalized = ansArr
      .map(v => parseInt(v, 10))
      .filter(v => !Number.isNaN(v));
    return normalized.length > 0 ? normalized : null;
  });

  const userFlags = questions.map((_, idx) => {
    const entry = Array.isArray(rawAnswers)
      ? rawAnswers.find(a =>
          a &&
          (a.questionId === idx ||
           a.questionId === idx + 1 ||
           a.questionId === questions[idx]?.id))
      : null;
    return !!(entry && entry.flagged);
  });

  // Normalize flagged (ragu-ragu) set from per-answer flags and legacy flaggedQuestions array
  const flaggedRaw = attempt.flaggedQuestions || [];
  const flaggedQuestions = new Set([
    ...userFlags.map((f, i) => (f ? i : null)).filter((v) => v !== null),
    ...(Array.isArray(flaggedRaw) ? flaggedRaw : [])
      .map((v) => parseInt(v, 10))
      .filter((v) => !Number.isNaN(v))
  ]);
  
  let currentQuestionIndex = 0;
  const arrowLeftSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>';
  const arrowRightSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>';
  const lightbulbSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 18h6" /><path d="M10 22h4" /><path d="M12 2a7 7 0 017 7c0 2.3-1.2 4.3-3 5.5-.7.5-1 1.2-1 2v1h-6v-1c0-.8-.4-1.5-1-2A6.97 6.97 0 015 9a7 7 0 017-7z" /></svg>';
  
  // Adjust legend for unreleased scores
  if (!isReleased) {
    requestAnimationFrame(() => {
      const correctLabel = document.querySelector('.correct-item .status-legend-text');
      const incorrectItem = document.querySelector('.incorrect-item');
      const blankLabel = document.querySelector('.blank-item .status-legend-text');
      if (correctLabel) correctLabel.textContent = 'Dijawab';
      if (incorrectItem) incorrectItem.style.display = 'none';
      if (blankLabel) blankLabel.textContent = 'Belum dijawab';
    });
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.appendChild(document.createTextNode(text));
    return div.innerHTML;
  }
  
  function processMarkdownAndLatex(text) {
    if (!text) return '';
    
    // First, process LaTeX
    let processed = text.replace(/\$\$([\s\S]*?)\$\$/g, (match, latex) => {
      const cleanLatex = (latex || '').trim();
      return `<div class="math-display" data-latex="${escapeHtml(cleanLatex)}"></div>`;
    });
    
    processed = processed.replace(/(?<!\$)\$([^$\n]+?)\$(?!\$)/g, (match, latex) => {
      const cleanLatex = (latex || '').trim();
      return `<span class="math-inline" data-latex="${escapeHtml(cleanLatex)}"></span>`;
    });
    
    // Then render markdown
    if (window.marked) {
      try {
        const markdownHtml = window.marked.parse(processed);
        return DOMPurify.sanitize(markdownHtml);
      } catch (e) {
        console.error('Markdown parsing error:', e);
        return DOMPurify.sanitize(processed);
      }
    }
    return DOMPurify.sanitize(processed);
  }
  
  function renderLatex(container) {
    if (!window.katex || !container) return;
    
    container.querySelectorAll('.math-display:not(.katex-rendered), .math-inline:not(.katex-rendered)').forEach(el => {
      try {
        const latex = el.dataset.latex || el.textContent || '';
        const isDisplay = el.classList.contains('math-display');
        
        el.innerHTML = window.katex.renderToString(latex, {
          displayMode: isDisplay,
          throwOnError: false,
          output: 'html'
        });
        el.classList.add('katex-rendered');
      } catch (e) {
        console.error('KaTeX error:', e);
        el.textContent = el.dataset.latex || '';
      }
    });
  }
  
  function renderQuestionGrid() {
    const grid = document.getElementById('question-grid');
    if (!grid) return;
    
    grid.innerHTML = questions.map((q, index) => {
      const result = detailedResults[index];
      const ans = userAnswers[index];
      const answered = Array.isArray(ans) ? ans.length > 0 : !!ans;
      const flagged = flaggedQuestions.has(index);
      let classes = ['question-number'];
      
      if (index === currentQuestionIndex) {
        classes.push('current');
      }
      
      if (isReleased) {
        if (result?.isCorrect) {
          classes.push('correct');
        } else if (answered) {
          classes.push('incorrect');
        } else {
          classes.push('unanswered');
        }
      } else {
        classes.push(answered ? 'answered' : 'unanswered');
      }
      if (flagged) classes.push('flagged');
      
      return `<button class="${classes.join(' ')}" data-index="${index}">${index + 1}</button>`;
    }).join('');
    
    grid.querySelectorAll('.question-number').forEach(btn => {
      btn.addEventListener('click', () => {
        currentQuestionIndex = parseInt(btn.dataset.index);
        renderQuestion();
        renderQuestionGrid();
        closeSidebar();
      });
    });

    updateCounts();
  }

  function updateCounts() {
    const correctEl = document.getElementById('correct-count');
    const incorrectEl = document.getElementById('incorrect-count');
    const blankEl = document.getElementById('blank-count');
    const flaggedEl = document.getElementById('flagged-count');
    const correctText = document.getElementById('legend-correct-text');
    const incorrectText = document.getElementById('legend-incorrect-text');
    const blankText = document.getElementById('legend-blank-text');
    const flaggedText = document.getElementById('legend-flagged-text');

    let correct = 0;
    let incorrect = 0;
    let blank = 0;
    let flagged = 0;
    let answered = 0;

    questions.forEach((_, idx) => {
      const answer = userAnswers[idx];
      const isFlagged = flaggedQuestions.has(idx);
      const hasAnswer = answer !== undefined && answer !== null && 
                        (Array.isArray(answer) ? answer.length > 0 : true);

      if (isFlagged) flagged++;

      if (isReleased) {
        // When released, show correct/incorrect/blank
        if (detailedResults[idx]?.isCorrect) {
          correct++;
        } else if (hasAnswer) {
          incorrect++;
        } else {
          blank++;
        }
      } else {
        // When not released, show answered/blank/flagged
        if (hasAnswer) {
          answered++;
        } else {
          blank++;
        }
      }
    });

    if (isReleased) {
      if (correctText) correctText.textContent = 'Benar';
      if (incorrectText) incorrectText.textContent = 'Salah';
      if (blankText) blankText.textContent = 'Tidak Dijawab';
    } else {
      if (correctText) correctText.textContent = 'Terjawab';
      if (incorrectText) incorrectText.textContent = '—';
      if (blankText) blankText.textContent = 'Tidak Dijawab';
    }
    if (flaggedText) flaggedText.textContent = 'Ragu-ragu';

    if (correctEl) correctEl.textContent = isReleased ? correct : answered;
    if (incorrectEl) incorrectEl.textContent = isReleased ? incorrect : 0;
    if (blankEl) blankEl.textContent = blank;
    if (flaggedEl) flaggedEl.textContent = flagged;
  }
  
  function goToQuestion(index) {
    if (index >= 0 && index < questions.length) {
      currentQuestionIndex = index;
      renderQuestion();
      renderQuestionGrid();
      renderNavBar();
      updateMobileNav();
    }
  }
  
  function updateMobileNav() {
    const current = document.getElementById('mobile-current');
    if (current) current.textContent = currentQuestionIndex + 1;
    
    document.getElementById('mobile-prev-btn')?.toggleAttribute('disabled', currentQuestionIndex === 0);
    document.getElementById('mobile-next-btn')?.toggleAttribute('disabled', currentQuestionIndex >= questions.length - 1);
  }
  
  function renderQuestion() {
    const container = document.getElementById('question-container');
    if (!container) return;
    
    const question = questions[currentQuestionIndex];
    const result = detailedResults[currentQuestionIndex];
    const userAnswer = userAnswers[currentQuestionIndex];
    
    const hasAnswer = userAnswer !== undefined && userAnswer !== null && 
                      (Array.isArray(userAnswer) ? userAnswer.length > 0 : true);
    
    let statusBadge = '';
    if (isReleased) {
      if (result?.isCorrect) {
        statusBadge = '<span class="px-3 py-1 bg-emerald-100 text-emerald-700 text-sm font-medium rounded-lg">✓ Benar</span>';
      } else if (hasAnswer) {
        statusBadge = '<span class="px-3 py-1 bg-red-100 text-red-700 text-sm font-medium rounded-lg">✗ Salah</span>';
      } else {
        statusBadge = '<span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg">− Tidak Dijawab</span>';
      }
    } else {
      statusBadge = hasAnswer
        ? '<span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-lg">Jawaban disimpan</span>'
        : '<span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg">Belum dijawab</span>';
    }
    
    let optionsHtml = '';
    if (question.options) {
      optionsHtml = question.options.map((opt, idx) => {
        const isCorrect = question.correctAnswer === idx + 1 || (question.correctAnswers && question.correctAnswers.includes(idx + 1));
        const isSelected = userAnswer && (
          Array.isArray(userAnswer) ? userAnswer.includes(idx + 1) : userAnswer === idx + 1
        );
        
        let optionClass = 'option-label';
        if (isReleased && isCorrect) optionClass += ' correct';
        if (isReleased && isSelected && !isCorrect) optionClass += ' incorrect';
        if (isSelected) optionClass += ' selected';
        
        return `
          <label class="${optionClass}">
            <input type="radio" disabled ${isSelected ? 'checked' : ''}>
            <span class="option-letter">${String.fromCharCode(65 + idx)}</span>
            <div class="option-content">${processMarkdownAndLatex(opt)}</div>
          </label>
        `;
      }).join('');
    }
    
    container.innerHTML = `
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex items-center justify-between">
          <span class="text-sm font-semibold text-slate-600 uppercase tracking-wider">Pertanyaan</span>
          ${statusBadge}
        </div>
        <div class="p-6">
          <div class="prose prose-slate max-w-none mb-6 text-lg leading-relaxed">
            ${processMarkdownAndLatex(question.question)}
          </div>
          <div class="space-y-3">
            ${optionsHtml}
          </div>
        </div>
      </div>
      
      ${isReleased && question.metadata?.solution ? `
        <details class="solution-panel">
          <summary class="inline-flex items-center gap-2 text-slate-700">
            ${lightbulbSvg}
            <span>Pembahasan</span>
          </summary>
          <div class="solution-content prose max-w-none">
            ${processMarkdownAndLatex(question.metadata.solution)}
          </div>
        </details>
      ` : ''}
    `;
    
    requestAnimationFrame(() => renderLatex(container));
    updateMobileNav();
  }
  
  function renderNavBar() {
    const navContainer = document.getElementById('nav-container');
    if (!navContainer) return;
    
    const total = questions.length;
    const current = currentQuestionIndex + 1;
    
    navContainer.innerHTML = `
      <button
        type="button"
        id="prev-btn"
        class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
        ${currentQuestionIndex === 0 ? 'disabled' : ''}
      >
        ${arrowLeftSvg}
        <span>Sebelumnya</span>
      </button>
      <span class="text-gray-700 font-medium">
        Soal ${current} dari ${total}
      </span>
      <button
        type="button"
        id="next-btn"
        class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
        ${currentQuestionIndex >= total - 1 ? 'disabled' : ''}
      >
        <span>Selanjutnya</span>
        ${arrowRightSvg}
      </button>
    `;
    
    document.getElementById('prev-btn')?.addEventListener('click', () => goToQuestion(currentQuestionIndex - 1));
    document.getElementById('next-btn')?.addEventListener('click', () => goToQuestion(currentQuestionIndex + 1));
  }
  
  // Sidebar controls
  function openSidebar() {
    document.getElementById('sidebar')?.classList.remove('translate-x-full');
    document.getElementById('sidebar-overlay')?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }
  
  function closeSidebar() {
    document.getElementById('sidebar')?.classList.add('translate-x-full');
    document.getElementById('sidebar-overlay')?.classList.add('hidden');
    document.body.style.overflow = '';
  }
  
  function syncQueueStatus() {
    // IMPORTANT: Only remove the queue entry if score is released (user has seen the result)
    // Do NOT remove if score is still pending/unreleased - user needs to see it in queue
    if (!isReleased || !attempt?.scoreReleasedAt) {
      // Score not released yet, keep the entry in queue
      return;
    }
    
    const QUEUE_PREFIX = 'quiz_queue_';
    
    try {
      // Find and remove all entries for this quiz (only when score is released)
      Object.keys(localStorage).forEach(k => {
        if (k.startsWith(QUEUE_PREFIX)) {
          try {
            const data = JSON.parse(localStorage.getItem(k) || '{}');
            if (data && String(data.quizId) === String(quiz.id)) {
              // Remove the entry since user is viewing the released result
              localStorage.removeItem(k);
            }
          } catch (e) {
            // Ignore parse errors
          }
        }
      });
      
      // Trigger custom event to notify Layout immediately
      window.dispatchEvent(new Event('storage'));
      
      // Also trigger queue update if available
      if (window.qqRender) {
        window.qqRender();
      }
    } catch (e) {
      console.warn('Failed to sync queue status', e);
    }
  }

  // Initialize
  function initReview() {
    renderQuestionGrid();
    renderNavBar();
    renderQuestion();
    
    // Always remove from queue when viewing review page (user has seen the result)
    syncQueueStatus();
    
    document.getElementById('sidebar-toggle')?.addEventListener('click', openSidebar);
    document.getElementById('close-sidebar')?.addEventListener('click', closeSidebar);
    document.getElementById('sidebar-overlay')?.addEventListener('click', closeSidebar);
    document.getElementById('mobile-prev-btn')?.addEventListener('click', () => goToQuestion(currentQuestionIndex - 1));
    document.getElementById('mobile-next-btn')?.addEventListener('click', () => goToQuestion(currentQuestionIndex + 1));
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initReview);
  } else {
    initReview();
  }
</script>

