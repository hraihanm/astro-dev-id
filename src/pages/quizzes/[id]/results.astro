---
import Layout from '../../../components/Layout.astro';
import Icon from '../../../components/icons/Icon.astro';
import { getQuiz } from '../../../lib/quizzes';
import { getQuizResults } from '../../../lib/scoring';
import { prisma } from '../../../lib/db';
import quizSharedStyles from '../../../styles/quiz-shared.css?url';

export const prerender = false;

const { id } = Astro.params;
const url = Astro.url;
const scoreParam = url.searchParams.get('score');

// Get user ID from cookies
const userId = Astro.cookies.get('user_id')?.value;

let quiz: any = null;
let attempt: any = null;
let allAttempts: any[] = [];
let error = '';

try {
  const quizId = parseInt(id || '0');
  
  // Get quiz
  const rawQuiz = await getQuiz(quizId);
  
  if (!rawQuiz) {
    error = 'Quiz not found';
  } else {
    // Parse quiz data
    quiz = {
      ...rawQuiz,
      questions: typeof rawQuiz.questions === 'string' 
        ? JSON.parse(rawQuiz.questions) 
        : rawQuiz.questions,
      settings: typeof rawQuiz.settings === 'string'
        ? JSON.parse(rawQuiz.settings)
        : rawQuiz.settings
    };
    
    // Get all attempts for this user (for history)
    if (userId) {
      const attempts = await prisma.quizAttempt.findMany({
        where: { userId: parseInt(userId), quizId },
        orderBy: { completedAt: 'desc' }
      });
      
      const toPublicAttempt = (a: any) => {
        const isReleased = !!a.scoreReleasedAt;
        return {
          id: a.id,
          score: isReleased ? a.score : null,
          percentage: isReleased ? a.percentage : null,
          correctAnswers: isReleased ? a.correctAnswers : null,
          totalQuestions: a.totalQuestions,
          timeSpent: isReleased ? a.timeSpent : null,
          completedAt: a.completedAt.toISOString(),
          scoreReleasedAt: a.scoreReleasedAt?.toISOString() || null,
          endReason: a.endReason || 'manual'
        };
      };

      allAttempts = attempts.map(toPublicAttempt);
      
      if (attempts.length > 0) {
        const latestAttempt = attempts[0];
        const isReleased = !!latestAttempt.scoreReleasedAt;
        attempt = {
          ...latestAttempt,
          answers: isReleased ? JSON.parse(latestAttempt.answers) : [],
          detailedResults: isReleased ? JSON.parse(latestAttempt.detailedResults) : [],
          scoreReleasedAt: latestAttempt.scoreReleasedAt,
          endReason: latestAttempt.endReason || 'manual'
        };
        // Redirect results page to unified review page
        return Astro.redirect(`/quizzes/${quizId}/review/${latestAttempt.id}`);
      }
    }
    
    if (!attempt) {
      error = 'Quiz attempt not found';
    }
  }
} catch (err) {
  error = 'Error loading quiz results';
  console.error(err);
}

// Format time spent
function formatTime(seconds: number): string {
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  const secs = seconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
}

// Calculate score color
function getScoreColor(percentage: number): string {
  if (percentage >= 80) return 'emerald';
  if (percentage >= 60) return 'blue';
  if (percentage >= 40) return 'amber';
  return 'red';
}

function getEncouragement(percentage: number): string {
  if (percentage >= 90) return 'Keren! Kamu menguasai materi ini. Pertahankan ya.';
  if (percentage >= 70) return 'Mantap, tinggal sedikit lagi untuk sempurna. Teruskan!';
  if (percentage >= 50) return 'Sudah bagus, sedikit review akan membantu naik lebih tinggi.';
  return 'Tidak apa-apa, ini kesempatan belajar. Coba lagi setelah membaca pembahasan.';
}

const scoreColor = attempt && attempt.percentage != null ? getScoreColor(attempt.percentage) : 'slate';
const endReasonLabel = attempt?.endReason === 'time_up' ? 'Waktu habis' : 'Diselesaikan manual';
const encouragement = attempt?.scoreReleasedAt
  ? getEncouragement(attempt.percentage)
  : 'Terima kasih sudah menyelesaikan kuis ini. Skor dan ringkasan detail akan dirilis oleh admin.';
