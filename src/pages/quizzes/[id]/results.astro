  </div>

  <script>
    // @ts-nocheck
    // Preload KaTeX
    (function() {
      if (typeof window !== 'undefined' && !document.querySelector('link[href*="katex"]')) {
        const link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = 'https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css';
        document.head.appendChild(link);
      }

      if (typeof window !== 'undefined' && !window.katex) {
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js';
        script.async = false;
        document.head.appendChild(script);
      }

      window.renderLatex = function() {
        if (!window.katex) {
          setTimeout(() => window.katex && window.renderLatex(), 10);
          return;
        }

        document.querySelectorAll('.math-display, .math-inline').forEach((element) => {
          if (element.querySelector('.katex')) return;
          const latex = element.getAttribute('data-latex') || '';
          if (!latex) return;

          try {
            element.innerHTML = '';
            window.katex.render(latex, element, {
              displayMode: element.classList.contains('math-display'),
              throwOnError: false,
              trust: true,
              macros: { '\\degree': '^{\\circ}' }
            });
          } catch (err) {
            element.innerHTML = `<span class="latex-error">LaTeX Error</span>`;
          }
        });
      };
    })();
  </script>

  <!-- Load marked.js for markdown rendering -->
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  
  <script define:vars={{ quiz, attempt }}>
    // @ts-nocheck
    if (!quiz || !attempt) {
      document.body.innerHTML = '<div class="text-center py-20"><p class="text-xl text-slate-600">Loading...</p></div>';
    } else {
      const QUEUE_KEY = `quiz_queue_${quiz.id}`;
      // If score not released, keep a pending-result queue entry for header dropdown
      if (!attempt.scoreReleasedAt) {
        const pendingEntry = {
          quizId: quiz.id,
          title: quiz.title,
          quizType: quiz.quizType,
          status: 'pending_result',
          attemptId: attempt.id,
          remainingTime: 0,
          availableUntil: quiz.availableUntil || null,
          url: `/quizzes/${quiz.id}/review/${attempt.id}`,
          savedAt: Date.now()
        };
        try {
          localStorage.setItem(QUEUE_KEY, JSON.stringify(pendingEntry));
        } catch (e) {
          console.warn('Could not persist pending queue entry', e);
        }
      } else {
        try {
          const releasedEntry = {
            quizId: quiz.id,
            title: quiz.title,
            quizType: quiz.quizType,
            status: 'released',
            attemptId: attempt.id,
            percentage: attempt.percentage ?? null,
            remainingTime: 0,
            availableUntil: quiz.availableUntil || null,
            url: `/quizzes/${quiz.id}/review/${attempt.id}`,
            savedAt: Date.now(),
            completedAt: attempt.completedAt ? new Date(attempt.completedAt).getTime() : Date.now()
          };
          localStorage.setItem(QUEUE_KEY, JSON.stringify(releasedEntry));
        } catch (e) {
          /* ignore */
        }
      }

      const arrowLeftSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>';
      const arrowRightSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>';
      const lightbulbSvg = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 18h6" /><path d="M10 22h4" /><path d="M12 2a7 7 0 017 7c0 2.3-1.2 4.3-3 5.5-.7.5-1 1.2-1 2v1h-6v-1c0-.8-.4-1.5-1-2A6.97 6.97 0 015 9a7 7 0 017-7z" /></svg>';

      // Escape HTML for safe attribute embedding
      function escapeHtml(text) {
        if (!text) return '';
        return text
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;')
          .replace(/"/g, '&quot;')
          .replace(/'/g, '&#039;');
      }
      
      // Full markdown renderer with LaTeX support
      function processLatex(text) {
        if (!text) return '';
        
        // Normalize newlines
        let processed = text.replace(/\r\n?|\u2028|\u2029/g, '\n');
        
        // Convert display math blocks
        processed = processed.replace(/\$\$([\s\S]*?)\$\$/g, (match, latex) => {
          return `\n<div class="math-display" data-latex="${escapeHtml((latex || '').trim())}"></div>\n`;
        });

        // Convert inline math
        processed = processed.replace(/(?<!\$)\$([^$\n]+?)\$(?!\$)/g, (match, latex) => {
          return `<span class="math-inline" data-latex="${escapeHtml((latex || '').trim())}"></span>`;
        });

        // Use marked for full markdown parsing
        if (window.marked) {
          try {
            return window.marked.parse(processed);
          } catch (e) {
            console.error('Markdown parsing error:', e);
            return processed;
          }
        }
        
        return processed;
      }

      let currentQuestionIndex = 0;
      const detailedResults = attempt.detailedResults || [];
      const questions = quiz.questions || [];

      function normalizeCorrect(val) {
        if (typeof val === 'number') {
          return val <= 0 ? val + 1 : val; // stored 0-based, UI uses 1-based
        }
        return val;
      }

      function renderQuestionGrid() {
        const grid = document.getElementById('question-grid');
        if (!grid) return;
        grid.innerHTML = '';
        
        detailedResults.forEach((result, index) => {
          const btn = document.createElement('button');
          btn.textContent = index + 1;
          
          const classes = ['question-number'];
          if (index === currentQuestionIndex) classes.push('current');
          
          if (result.isCorrect) {
            classes.push('correct');
          } else if (result.userAnswer && result.userAnswer.length > 0) {
            classes.push('incorrect');
          } else {
            classes.push('blank');
          }
          
          btn.className = classes.join(' ');
          btn.onclick = () => goToQuestion(index);
          grid.appendChild(btn);
        });

        updateCounts();
      }

      function updateCounts() {
        let correct = 0, incorrect = 0, blank = 0;

        detailedResults.forEach(result => {
          if (result.isCorrect) correct++;
          else if (result.userAnswer && result.userAnswer.length > 0) incorrect++;
          else blank++;
        });

        const correctEl = document.getElementById('correct-count');
        const incorrectEl = document.getElementById('incorrect-count');
        const blankEl = document.getElementById('blank-count');
        
        if (correctEl) correctEl.textContent = correct;
        if (incorrectEl) incorrectEl.textContent = incorrect;
        if (blankEl) blankEl.textContent = blank;
      }

      function renderQuestion() {
        const result = detailedResults[currentQuestionIndex];
        const question = result.question;
        const container = document.getElementById('question-container');
        const navContainer = document.getElementById('nav-container');
        
        if (!container || !navContainer) return;
        
        const isComplex = question.type === 'complex-multiple-choice' || question.type === 'complex';
        const inputType = isComplex ? 'checkbox' : 'radio';
        
        const questionHtml = processLatex(question.question || '');
        const userAnswers = result.userAnswer || [];
        const rawCorrect = isComplex 
          ? (Array.isArray(question.correctAnswers) ? question.correctAnswers : [question.correctAnswers ?? question.correctAnswer])
          : [question.correctAnswer];
        const correctAnswers = rawCorrect.filter((c) => c !== undefined && c !== null).map(normalizeCorrect);
        
        const optionsHtml = question.options.map((option, optIndex) => {
          const optionHtml = processLatex(option || '');
          const optionValue = optIndex + 1;
          const isUserSelected = userAnswers.includes(optionValue);
          const isCorrect = correctAnswers.includes(optionValue);
          const optionLetter = String.fromCharCode(65 + optIndex); // A, B, C, D...
          
          let optionClass = '';
          if (isCorrect) optionClass = 'correct';
          else if (isUserSelected && !isCorrect) optionClass = 'incorrect';
          
          return `
            <label class="option-label ${optionClass}">
              <input type="${inputType}" value="${optionValue}" ${isUserSelected ? 'checked' : ''} disabled />
              <span class="option-letter">${optionLetter}</span>
              <div class="option-content">${optionHtml}</div>
            </label>
          `;
        }).join('');
        
        const solutionHtml = question.metadata?.solution ? processLatex(question.metadata.solution) : '';
        
        // Nav
        navContainer.innerHTML = `
          <button type="button" id="prev-btn-main" class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" ${currentQuestionIndex === 0 ? 'disabled' : ''}>
            ${arrowLeftSvg}
            <span>Sebelumnya</span>
          </button>
          <span class="text-gray-700 font-medium">Soal ${currentQuestionIndex + 1} dari ${questions.length}</span>
          <button type="button" id="next-btn-main" class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" ${currentQuestionIndex === questions.length - 1 ? 'disabled' : ''}>
            <span>Selanjutnya</span>
            ${arrowRightSvg}
          </button>
        `;

        // Status badge
        const statusBadge = result.isCorrect 
          ? '<span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-semibold bg-emerald-100 text-emerald-700 border border-emerald-200">‚úì Benar</span>'
          : (userAnswers.length > 0 
              ? '<span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-semibold bg-red-100 text-red-700 border border-red-200">‚úó Salah</span>'
              : '<span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-semibold bg-slate-100 text-slate-600 border border-slate-200">‚àí Tidak Dijawab</span>');

        container.innerHTML = `
          <div class="question-card">
            <div class="question-header">
              <div class="flex items-center justify-between flex-wrap gap-2">
                <span class="text-sm font-semibold text-slate-500 uppercase tracking-wider">Pertanyaan</span>
                ${statusBadge}
              </div>
            </div>
            
            <div class="question-body">
              <div class="question-text prose max-w-none mb-6">${questionHtml}</div>

              ${question.images?.length > 0 ? `
                <div class="mb-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
                  ${question.images.map(img => `<img src="${img}" alt="Question" class="rounded-xl border border-slate-200 shadow-sm" />`).join('')}
                </div>
              ` : ''}

              <div class="space-y-1">${optionsHtml}</div>

              ${solutionHtml ? `
                <details class="solution-panel" open>
                  <summary class="inline-flex items-center gap-2 text-slate-700">
                    ${lightbulbSvg}
                    <span>Pembahasan</span>
                  </summary>
                  <div class="solution-content prose max-w-none">
                    ${solutionHtml}
                    ${question.metadata?.solutionImages?.length > 0 ? `
                      <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
                        ${question.metadata.solutionImages.map(img => `<img src="${img}" alt="Solution" class="rounded-xl border border-amber-300" />`).join('')}
                      </div>
                    ` : ''}
                  </div>
                </details>
              ` : ''}
            </div>
          </div>
        `;

        // Event handlers
        document.getElementById('prev-btn-main')?.addEventListener('click', () => {
          if (currentQuestionIndex > 0) goToQuestion(currentQuestionIndex - 1);
        });
        document.getElementById('next-btn-main')?.addEventListener('click', () => {
          if (currentQuestionIndex < questions.length - 1) goToQuestion(currentQuestionIndex + 1);
        });

        requestAnimationFrame(() => renderLatex());
      }

      function goToQuestion(index) {
        currentQuestionIndex = index;
        renderQuestion();
        renderQuestionGrid();
        updateMobileNav();
        document.querySelector('.flex-1.overflow-y-auto')?.scrollTo({ top: 0, behavior: 'smooth' });
      }

      function updateMobileNav() {
        const prevBtn = document.getElementById('mobile-prev-btn');
        const nextBtn = document.getElementById('mobile-next-btn');
        if (prevBtn) prevBtn.disabled = currentQuestionIndex === 0;
        if (nextBtn) {
          const span = nextBtn.querySelector('span');
          if (span) span.textContent = currentQuestionIndex === questions.length - 1 ? 'Selesai' : 'Next';
        }
      }

      // Initialize
      function init() {
        renderQuestionGrid();
        renderQuestion();
        
        // Mobile sidebar
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebar-overlay');
        const toggle = document.getElementById('mobile-sidebar-toggle');
        const close = document.getElementById('close-sidebar');
        
        function openSidebar() {
          sidebar?.classList.remove('translate-x-full');
          overlay?.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }
        
        function closeSidebar() {
          sidebar?.classList.add('translate-x-full');
          overlay?.classList.add('hidden');
          document.body.style.overflow = '';
        }
        
        toggle?.addEventListener('click', openSidebar);
        close?.addEventListener('click', closeSidebar);
        overlay?.addEventListener('click', closeSidebar);
        
        // Mobile nav
        document.getElementById('mobile-prev-btn')?.addEventListener('click', () => {
          if (currentQuestionIndex > 0) goToQuestion(currentQuestionIndex - 1);
        });
        document.getElementById('mobile-next-btn')?.addEventListener('click', () => {
          if (currentQuestionIndex < questions.length - 1) goToQuestion(currentQuestionIndex + 1);
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    }
  </script>
  
