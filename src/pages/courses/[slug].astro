---
export const prerender = false;

import CourseLayout from '../../layouts/CourseLayout.astro';
import { getCourseContent } from '../../lib/student';
import { getSessionUser } from '../../lib/auth-guard';
import { prisma } from '../../lib/db';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/courses');
}

const user = await getSessionUser(Astro.cookies);
let classroomIds: number[] = [];
if (user) {
  const memberships = await prisma.classroomMembership.findMany({
    where: { userId: user.id, status: 'ACTIVE' },
    select: { classroomId: true }
  });
  classroomIds = memberships.map((m) => m.classroomId);
}

const course = await getCourseContent(slug, {
  userId: user?.id,
  role: user?.role,
  classroomIds
});

if (!course) {
  return Astro.redirect('/courses');
}
---

<CourseLayout title={course.title} course={course}>
  <!-- Course Hero -->
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm mb-8">
    <!-- Banner -->
    <div class="h-32 bg-gradient-to-r from-blue-600 to-blue-700 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-4 right-8 w-32 h-32 border-4 border-white rounded-full"></div>
        <div class="absolute bottom-4 left-8 w-20 h-20 border-4 border-white rounded-full"></div>
      </div>
    </div>
    
    <div class="p-6 sm:p-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-3">{course.title}</h1>
      <p class="text-slate-600 text-base sm:text-lg leading-relaxed mb-6">
        {course.description || 'Materi pembelajaran komprehensif untuk persiapan olimpiade astronomi.'}
      </p>
      
      <!-- Stats -->
      <div class="flex flex-wrap gap-4 mb-6">
        <div class="flex items-center gap-3 px-4 py-3 bg-blue-50 rounded-lg">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <span class="text-lg">ğŸ“–</span>
          </div>
          <div>
            <p class="text-2xl font-bold text-blue-700">{course.chapters.length}</p>
            <p class="text-sm text-blue-600">Bab Materi</p>
          </div>
        </div>
        
        <div class="flex items-center gap-3 px-4 py-3 bg-emerald-50 rounded-lg">
          <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center">
            <span class="text-lg">ğŸ“</span>
          </div>
          <div>
            <p class="text-2xl font-bold text-emerald-700">{course.quizzes.length}</p>
            <p class="text-sm text-emerald-600">Kuis Latihan</p>
          </div>
        </div>
      </div>

      <a
        href={`/courses/${course.slug}/chapter/1`}
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-sm transition-colors"
      >
        <span>Mulai Belajar</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>

  <!-- Course Curriculum -->
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm">
    <div class="px-6 py-4 border-b border-slate-100 bg-slate-50">
      <h2 class="text-lg font-bold text-slate-900 flex items-center gap-2">
        <span>ğŸ“š</span>
        <span>Daftar Materi</span>
      </h2>
    </div>
    
    <div class="divide-y divide-slate-100">
      {course.chapters.map((chapter, index) => (
        <a 
          href={`/courses/${course.slug}/chapter/${chapter.order}`} 
          class="group flex items-center gap-4 px-6 py-4 hover:bg-slate-50 transition-colors"
        >
          <!-- Chapter Number -->
          <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white font-bold text-lg shadow-sm group-hover:scale-105 transition-transform">
            {chapter.order}
          </div>
          
          <!-- Chapter Info -->
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-slate-900 group-hover:text-blue-600 transition-colors truncate">
              {chapter.title}
            </h3>
            <p class="text-sm text-slate-500 mt-0.5">Bab {chapter.order}</p>
          </div>
          
          <!-- Arrow -->
          <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-slate-100 group-hover:bg-blue-100 flex items-center justify-center transition-colors">
            <svg class="w-4 h-4 text-slate-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
  
  <!-- Course Quizzes -->
  {course.quizzes.length > 0 && (
    <div class="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm mt-8">
      <div class="px-6 py-4 border-b border-slate-100 bg-slate-50">
        <h2 class="text-lg font-bold text-slate-900 flex items-center gap-2">
          <span>ğŸ“</span>
          <span>Kuis Latihan</span>
        </h2>
      </div>
      
      <div class="divide-y divide-slate-100">
        {course.quizzes.map((quiz, index) => (
          <a 
            href={`/quizzes/${quiz.id}`} 
            class="group flex items-center gap-4 px-6 py-4 hover:bg-slate-50 transition-colors"
          >
            <!-- Quiz Icon -->
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center text-white shadow-sm group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            
            <!-- Quiz Info -->
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-slate-900 group-hover:text-emerald-600 transition-colors truncate">
                {quiz.title}
              </h3>
              <p class="text-sm text-slate-500 mt-0.5">Kuis {index + 1}</p>
            </div>
            
            <!-- Arrow -->
            <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-slate-100 group-hover:bg-emerald-100 flex items-center justify-center transition-colors">
              <svg class="w-4 h-4 text-slate-400 group-hover:text-emerald-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  )}
</CourseLayout>
